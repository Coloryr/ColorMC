<Window
    x:Class="ColorMC.Gui.UI.Windows.MultiBorderWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dialog="clr-namespace:DialogHostAvalonia;assembly=DialogHost.Avalonia"
    xmlns:dialogmodel="clr-namespace:ColorMC.Gui.UI.Model.Dialog"
    xmlns:dialogview="clr-namespace:ColorMC.Gui.UI.Controls.Dialog"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="clr-namespace:ColorMC.Gui.UI.Model"
    xmlns:setting="clr-namespace:ColorMC.Gui.UI"
    xmlns:view="clr-namespace:ColorMC.Gui.UI.Controls"
    xmlns:view1="clr-namespace:ColorMC.Gui.UI.Windows"
    Title="{Binding Title}"
    Width="770"
    Height="460"
    MinWidth="345"
    MinHeight="460"
    d:DesignHeight="460"
    d:DesignWidth="770"
    x:DataType="model:WindowModel"
    Background="Transparent"
    ExtendClientAreaChromeHints="NoChrome"
    ExtendClientAreaTitleBarHeightHint="-1"
    ExtendClientAreaToDecorationsHint="True"
    FontFamily="{setting:Font}"
    RequestedThemeVariant="{Binding Theme}"
    TransparencyBackgroundFallback="Transparent"
    TransparencyLevelHint="{Binding Hints}"
    mc:Ignorable="d">
    <Design.DataContext>
        <model:WindowModel />
    </Design.DataContext>
    <Panel>
        <view1:BorderControl />
        <view1:MainView Name="MainView" Margin="5" />
    </Panel>
</Window>
