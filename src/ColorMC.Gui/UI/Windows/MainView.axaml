<Panel
    x:Class="ColorMC.Gui.UI.Windows.MainView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dialog="clr-namespace:DialogHostAvalonia;assembly=DialogHost.Avalonia"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="clr-namespace:ColorMC.Gui.UI.Model"
    xmlns:setting="clr-namespace:ColorMC.Gui.UI"
    xmlns:utils="clr-namespace:ColorMC.Gui.Utils"
    xmlns:view="clr-namespace:ColorMC.Gui.UI.Controls"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:DataType="model:WindowModel"
    Background="{setting:Theme WindowTranBG}"
    mc:Ignorable="d">
    <Design.DataContext>
        <model:WindowModel />
    </Design.DataContext>
    <Image
        IsVisible="{Binding BgVisible}"
        Opacity="{Binding BgOpacity}"
        Source="{Binding BackImage}"
        Stretch="UniformToFill" />
    <DockPanel Background="{setting:Theme WindowBG}">
        <view:TitleControl
            Name="TitleControl"
            DockPanel.Dock="Top"
            IsVisible="{Binding EnableHead}" />
        <dialog:DialogHost
            DisableOpeningAnimation="True"
            Identifier="{Binding WindowId}"
            IsMultipleDialogsEnabled="True"
            OverlayBackground="Transparent">
            <dialog:DialogHost.DataTemplates>
                <utils:TemplateSelector />
            </dialog:DialogHost.DataTemplates>
            <Decorator Name="MainControl" />
        </dialog:DialogHost>
    </DockPanel>
</Panel>
