<Window
    x:Class="ColorMC.Gui.UI.Windows.InitWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:setting="clr-namespace:ColorMC.Gui.Utils.LaunchSetting"
    xmlns:views="clr-namespace:ColorMC.Gui.UI.Controls"
    Title="ColorMC"
    Width="800"
    Height="450"
    MinWidth="800"
    MinHeight="450"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="Transparent"
    ExtendClientAreaChromeHints="NoChrome"
    ExtendClientAreaTitleBarHeightHint="-1"
    ExtendClientAreaToDecorationsHint="True"
    SystemDecorations="BorderOnly"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <views:HeadControl
            Title="{setting:Localize InitWindow.Title}"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Top"
            Max="False"
            Min="False" />
        <Grid Margin="0,35,0,0" Background="{setting:Colors TranBack}">
            <StackPanel VerticalAlignment="Center">
                <TextBlock
                    Name="Text"
                    FontSize="20"
                    Foreground="Black"
                    Text="{setting:Localize InitWindow.Text}"
                    TextAlignment="Center"
                    TextWrapping="Wrap" />
                <ProgressBar
                    Name="ProgressBar1"
                    Height="20"
                    Margin="20,20,20,0"
                    IsIndeterminate="True" />
            </StackPanel>

            <Rectangle
                Name="Rectangle1"
                Stroke="{setting:Colors Main}"
                StrokeThickness="3" />
        </Grid>
    </Grid>
</Window>
