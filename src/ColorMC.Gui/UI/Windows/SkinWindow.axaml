<Window
    x:Class="ColorMC.Gui.UI.Windows.SkinWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:view2="using:ColorMC.Gui.UI.Windows"
    Title="SkinWindow"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <view2:OpenGlPageControl x:Name="GL" />
        <StackPanel VerticalAlignment="Bottom">
            <TextBlock Text="{Binding #GL.Info}" />
        </StackPanel>
        <Grid Margin="20" ColumnDefinitions="*,Auto">
            <StackPanel Grid.Column="1" MinWidth="300">
                <TextBlock>Yaw</TextBlock>
                <Slider
                    Maximum="5"
                    Minimum="-5"
                    Value="{Binding Yaw, Mode=TwoWay, ElementName=GL}" />
                <TextBlock>Pitch</TextBlock>
                <Slider
                    Maximum="5"
                    Minimum="-5"
                    Value="{Binding Pitch, Mode=TwoWay, ElementName=GL}" />
                <TextBlock>Roll</TextBlock>
                <Slider
                    Maximum="5"
                    Minimum="-5"
                    Value="{Binding Roll, Mode=TwoWay, ElementName=GL}" />
            </StackPanel>
        </Grid>
    </Grid>
</Window>
