<UserControl
    x:Class="ColorMC.Gui.UI.Controls.Hello.Tab5Control"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:setting="clr-namespace:ColorMC.Gui.Utils.LaunchSetting"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <StackPanel Margin="5">
            <Label Content="{setting:Localize AddGameWindow.Text1}" />
            <TextBox
                Name="TextBox_Input1"
                Margin="0,0,0,5"
                Classes="input1"
                Watermark="{setting:Localize AddGameWindow.Text2}" />
            <StackPanel Orientation="Horizontal">
                <Label
                    Width="120"
                    VerticalAlignment="Center"
                    Content="{setting:Localize Text.GameVersion}" />
                <ComboBox Name="ComboBox1" Width="200" />
                <CheckBox
                    Name="CheckBox_Release"
                    Width="80"
                    Margin="20,0,0,0"
                    Content="{setting:Localize AddGameWindow.Text6}"
                    IsChecked="True" />
                <CheckBox
                    Name="CheckBox_Snapshot"
                    Width="80"
                    Margin="20,0,0,0"
                    Content="{setting:Localize AddGameWindow.Text7}" />
                <CheckBox
                    Name="CheckBox_Other"
                    Width="80"
                    Margin="20,0,0,0"
                    Content="{setting:Localize AddGameWindow.Text8}" />
            </StackPanel>

            <StackPanel Margin="0,5,0,0" Orientation="Horizontal">
                <Label
                    Width="120"
                    VerticalAlignment="Center"
                    Content="{setting:Localize AddGameWindow.Text4}" />
                <ComboBox
                    Name="ComboBox_LoaderVersion"
                    Width="200"
                    IsEnabled="False" />
                <CheckBox
                    Name="CheckBox_Forge"
                    Width="80"
                    Margin="20,0,0,0"
                    Content="Forge"
                    IsEnabled="False" />
                <CheckBox
                    Name="CheckBox_Fabric"
                    Width="80"
                    Margin="20,0,0,0"
                    Content="Fabric"
                    IsEnabled="False" />
                <CheckBox
                    Name="CheckBox_Quilt"
                    Width="80"
                    Margin="20,0,0,0"
                    Content="Quilt"
                    IsEnabled="False" />
            </StackPanel>
            <Button
                Name="Button_Add"
                Width="80"
                Height="25"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Content="{setting:Localize Button.Add}"
                ToolTip.Tip="{setting:Localize ToolTip.Text27}"
                ToolTip.VerticalOffset="-30" />

            <StackPanel Orientation="Horizontal">
                <Label
                    Width="120"
                    VerticalAlignment="Center"
                    Content="{setting:Localize AddGameWindow.Text15}" />
                <ComboBox Name="ComboBox4" Width="200" />

                <Button
                    Name="Button4"
                    Width="120"
                    Height="25"
                    Margin="10,0,0,0"
                    VerticalAlignment="Center"
                    Content="{setting:Localize AddGameWindow.Text15}"
                    ToolTip.Tip="{setting:Localize ToolTip.Text45}"
                    ToolTip.VerticalOffset="-30" />
            </StackPanel>
        </StackPanel>

        <Button
            Name="Button_Next"
            Width="80"
            Height="25"
            Margin="5"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Content="{setting:Localize Button.Next}"
            ToolTip.Tip="{setting:Localize ToolTip.Text19}"
            ToolTip.VerticalOffset="-30" />

    </Grid>
</UserControl>
