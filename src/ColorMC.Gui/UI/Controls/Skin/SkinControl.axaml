<UserControl
    x:Class="ColorMC.Gui.UI.Controls.Skin.SkinControl"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:setting="clr-namespace:ColorMC.Gui.Utils.LaunchSetting"
    xmlns:view2="clr-namespace:ColorMC.Gui.UI.Controls.Skin"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid Margin="3" ColumnDefinitions="4*,1.5*">
        <Panel Grid.Column="0">
            <view2:SkinRender Name="Skin" />
            <Panel
                Name="SkinTop"
                Background="#00FFFFFF"
                Opacity="0" />
            <Grid
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                ColumnDefinitions="*,*,*"
                RowDefinitions="*,*,*">
                <Button
                    Name="Button_1_1"
                    Grid.Row="0"
                    Grid.Column="0"
                    Width="40"
                    Height="40"
                    CommandParameter="LeftUp"
                    Content="↖" />
                <Button
                    Name="Button_1_2"
                    Grid.Row="0"
                    Grid.Column="1"
                    Width="40"
                    Height="40"
                    CommandParameter="Up"
                    Content="↑" />
                <Button
                    Name="Button_1_3"
                    Grid.Row="0"
                    Grid.Column="2"
                    Width="40"
                    Height="40"
                    CommandParameter="RightUp"
                    Content="↗" />
                <Button
                    Name="Button_1_4"
                    Grid.Row="1"
                    Grid.Column="0"
                    Width="40"
                    Height="40"
                    CommandParameter="Left"
                    Content="←" />
                <Button
                    Name="Button_1_5"
                    Grid.Row="1"
                    Grid.Column="2"
                    Width="40"
                    Height="40"
                    CommandParameter="Right"
                    Content="→" />
                <Button
                    Name="Button_1_6"
                    Grid.Row="3"
                    Grid.Column="0"
                    Width="40"
                    Height="40"
                    CommandParameter="LeftDown"
                    Content="↙" />
                <Button
                    Name="Button_1_7"
                    Grid.Row="3"
                    Grid.Column="1"
                    Width="40"
                    Height="40"
                    CommandParameter="Down"
                    Content="↓" />
                <Button
                    Name="Button_1_8"
                    Grid.Row="3"
                    Grid.Column="2"
                    Width="40"
                    Height="40"
                    CommandParameter="RightDown"
                    Content="↘" />
            </Grid>
            <Grid
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                ColumnDefinitions="*,*,*"
                RowDefinitions="*,*,*">
                <Button
                    Name="Button_2_1"
                    Grid.Row="0"
                    Grid.Column="0"
                    Width="40"
                    Height="40"
                    CommandParameter="LeftUp"
                    Content="↖" />
                <Button
                    Name="Button_2_2"
                    Grid.Row="0"
                    Grid.Column="1"
                    Width="40"
                    Height="40"
                    CommandParameter="Up"
                    Content="↑" />
                <Button
                    Name="Button_2_3"
                    Grid.Row="0"
                    Grid.Column="2"
                    Width="40"
                    Height="40"
                    CommandParameter="RightUp"
                    Content="↗" />
                <Button
                    Name="Button_2_4"
                    Grid.Row="1"
                    Grid.Column="0"
                    Width="40"
                    Height="40"
                    CommandParameter="Left"
                    Content="←" />
                <Button
                    Name="Button_2_5"
                    Grid.Row="1"
                    Grid.Column="2"
                    Width="40"
                    Height="40"
                    CommandParameter="Right"
                    Content="→" />
                <Button
                    Name="Button_2_6"
                    Grid.Row="3"
                    Grid.Column="0"
                    Width="40"
                    Height="40"
                    CommandParameter="LeftDown"
                    Content="↙" />
                <Button
                    Name="Button_2_7"
                    Grid.Row="3"
                    Grid.Column="1"
                    Width="40"
                    Height="40"
                    CommandParameter="Down"
                    Content="↓" />
                <Button
                    Name="Button_2_8"
                    Grid.Row="3"
                    Grid.Column="2"
                    Width="40"
                    Height="40"
                    CommandParameter="RightDown"
                    Content="↘" />
            </Grid>
            <StackPanel HorizontalAlignment="Right" VerticalAlignment="Center">
                <Button
                    Name="Button_3_1"
                    Width="40"
                    Height="40"
                    HorizontalAlignment="Center"
                    CommandParameter="Up"
                    Content="↑" />
                <Button
                    Name="Button_3_2"
                    Width="40"
                    Height="40"
                    HorizontalAlignment="Center"
                    CommandParameter="Down"
                    Content="↓" />
            </StackPanel>

            <Label
                Margin="2"
                VerticalAlignment="Bottom"
                Background="{setting:Colors Bottom1}"
                CornerRadius="5">
                <TextBlock
                    Foreground="{setting:Colors Font}"
                    Text="{Binding Info}"
                    TextWrapping="Wrap" />
            </Label>

            <Label
                Margin="130,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Background="{setting:Colors Bottom1}"
                Content="{Binding NowFps}" />

            <Label
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Background="{setting:Colors Bottom1}"
                Content="{Binding Text}"
                FontSize="20"
                Foreground="{setting:Colors Font}"
                IsVisible="{Binding !HaveSkin}" />
        </Panel>

        <ScrollViewer Grid.Column="1">
            <StackPanel Background="{setting:Colors TranBack}">
                <Button
                    Height="25"
                    Margin="5,5,5,0"
                    HorizontalAlignment="Stretch"
                    Command="{Binding Load}"
                    Content="{setting:Localize Button.Refash}"
                    ToolTip.Tip="{setting:Localize ToolTip.Text14}"
                    ToolTip.VerticalOffset="-30" />

                <Button
                    Name="Button2"
                    Height="25"
                    Margin="5,5,5,0"
                    HorizontalAlignment="Stretch"
                    Content="{setting:Localize SkinWindow.Text1}"
                    ToolTip.Tip="{setting:Localize ToolTip.Text15}"
                    ToolTip.VerticalOffset="-30" />

                <Button
                    Height="25"
                    Margin="5,5,5,0"
                    HorizontalAlignment="Stretch"
                    Command="{Binding Edit}"
                    Content="{setting:Localize SkinWindow.Text3}"
                    ToolTip.Tip="{setting:Localize ToolTip.Text16}"
                    ToolTip.VerticalOffset="-30" />

                <Button
                    Height="25"
                    Margin="5,5,5,0"
                    HorizontalAlignment="Stretch"
                    Command="{Binding Save}"
                    Content="{setting:Localize SkinWindow.Text4}"
                    IsEnabled="{Binding HaveSkin}"
                    ToolTip.Tip="{setting:Localize ToolTip.Text17}"
                    ToolTip.VerticalOffset="-30" />

                <ComboBox
                    Margin="5,5,5,0"
                    HorizontalAlignment="Stretch"
                    ItemsSource="{Binding SkinTypeList}"
                    SelectedIndex="{Binding Type}" />

                <CheckBox
                    Margin="5,0,0,0"
                    Content="{setting:Localize SkinWindow.Text5}"
                    IsChecked="{Binding EnableTop}" />

                <CheckBox
                    Margin="5,0,0,0"
                    Content="{setting:Localize SkinWindow.Text6}"
                    IsChecked="{Binding EnableCape}" />

                <CheckBox
                    Margin="5,0,0,0"
                    Content="{setting:Localize SkinWindow.Text7}"
                    IsChecked="{Binding EnableAnimation}" />

                <ComboBox
                    Margin="5,5,5,0"
                    HorizontalAlignment="Stretch"
                    ItemsSource="{Binding SkinRotateList}"
                    SelectedIndex="{Binding RotateType}" />

                <Slider
                    Margin="5,-10,5,-10"
                    Maximum="360"
                    Minimum="{Binding MinX}"
                    Value="{Binding RotateX}" />
                <Slider
                    Margin="5,-10,5,-10"
                    Maximum="360"
                    Minimum="{Binding MinY}"
                    Value="{Binding RotateY}" />
                <Slider
                    Margin="5,-10,5,-10"
                    IsEnabled="{Binding EnableZ}"
                    Maximum="360"
                    Minimum="{Binding MinZ}"
                    Value="{Binding RotateZ}" />

                <Button
                    Height="25"
                    Margin="5,0,5,0"
                    HorizontalAlignment="Stretch"
                    Command="{Binding Reset}"
                    Content="{setting:Localize SkinWindow.Text8}"
                    ToolTip.Tip="{setting:Localize ToolTip.Text18}"
                    ToolTip.VerticalOffset="-30" />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
