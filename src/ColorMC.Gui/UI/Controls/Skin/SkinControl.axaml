<UserControl
    x:Class="ColorMC.Gui.UI.Controls.Skin.SkinControl"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:arg="clr-namespace:ColorMC.Gui.Objs"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="clr-namespace:ColorMC.Gui.UI.Model.Skin"
    xmlns:setting="clr-namespace:ColorMC.Gui.UI"
    xmlns:view2="clr-namespace:ColorMC.Gui.UI.Controls.Skin.OpenGL"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:DataType="model:SkinModel"
    mc:Ignorable="d">
    <Panel>
        <DockPanel Margin="10,0,10,10">
            <Border Classes="t2"
                Name="Decorator1"
                Margin="0,10,10,10"
                DockPanel.Dock="Right"
                IsVisible="False" />
            <Panel Margin="10,10,10,10">
                <view2:SkinRender Name="Skin" IsVisible="{Binding HaveSkin}" />
                <Grid
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    ColumnDefinitions="*,*,*"
                    IsVisible="{Binding HaveSkin}"
                    RowDefinitions="*,*,*">
                    <RepeatButton
                        Grid.Row="0"
                        Grid.Column="0"
                        Width="40"
                        Height="40"
                        Background="Transparent"
                        Command="{Binding Move}"
                        CommandParameter="{x:Static arg:MoveType.LeftUp}"
                        Delay="100"
                        Interval="20">
                        <TextBlock Text="↖" />
                    </RepeatButton>
                    <RepeatButton
                        Grid.Row="0"
                        Grid.Column="1"
                        Width="40"
                        Height="40"
                        Background="Transparent"
                        Command="{Binding Move}"
                        CommandParameter="{x:Static arg:MoveType.Up}"
                        Delay="100"
                        Interval="20">
                        <TextBlock Text="↑" />
                    </RepeatButton>
                    <RepeatButton
                        Grid.Row="0"
                        Grid.Column="2"
                        Width="40"
                        Height="40"
                        Background="Transparent"
                        Command="{Binding Move}"
                        CommandParameter="{x:Static arg:MoveType.RightUp}"
                        Delay="100"
                        Interval="20">
                        <TextBlock Text="↗" />
                    </RepeatButton>
                    <RepeatButton
                        Grid.Row="1"
                        Grid.Column="0"
                        Width="40"
                        Height="40"
                        Background="Transparent"
                        Command="{Binding Move}"
                        CommandParameter="{x:Static arg:MoveType.Left}"
                        Delay="100"
                        Interval="20">
                        <TextBlock Text="←" />
                    </RepeatButton>
                    <RepeatButton
                        Grid.Row="1"
                        Grid.Column="2"
                        Width="40"
                        Height="40"
                        Background="Transparent"
                        Command="{Binding Move}"
                        CommandParameter="{x:Static arg:MoveType.Right}"
                        Delay="100"
                        Interval="20">
                        <TextBlock Text="→" />
                    </RepeatButton>
                    <RepeatButton
                        Grid.Row="3"
                        Grid.Column="0"
                        Width="40"
                        Height="40"
                        Background="Transparent"
                        Command="{Binding Move}"
                        CommandParameter="{x:Static arg:MoveType.LeftDown}"
                        Delay="100"
                        Interval="20">
                        <TextBlock Text="↙" />
                    </RepeatButton>
                    <RepeatButton
                        Grid.Row="3"
                        Grid.Column="1"
                        Width="40"
                        Height="40"
                        Background="Transparent"
                        Command="{Binding Move}"
                        CommandParameter="{x:Static arg:MoveType.Down}"
                        Delay="100"
                        Interval="20">
                        <TextBlock Text="↓" />
                    </RepeatButton>
                    <RepeatButton
                        Grid.Row="3"
                        Grid.Column="2"
                        Width="40"
                        Height="40"
                        Background="Transparent"
                        Command="{Binding Move}"
                        CommandParameter="{x:Static arg:MoveType.RightDown}"
                        Delay="100"
                        Interval="20">
                        <TextBlock Text="↘" />
                    </RepeatButton>
                </Grid>
                <Grid
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    ColumnDefinitions="*,*,*"
                    IsVisible="{Binding HaveSkin}"
                    RowDefinitions="*,*,*">
                    <RepeatButton
                        Grid.Row="0"
                        Grid.Column="0"
                        Width="40"
                        Height="40"
                        Background="Transparent"
                        Command="{Binding Rot}"
                        CommandParameter="{x:Static arg:MoveType.LeftUp}"
                        Delay="100"
                        Interval="20">
                        <TextBlock Text="↖" />
                    </RepeatButton>
                    <RepeatButton
                        Grid.Row="0"
                        Grid.Column="1"
                        Width="40"
                        Height="40"
                        Background="Transparent"
                        Command="{Binding Rot}"
                        CommandParameter="{x:Static arg:MoveType.Up}"
                        Delay="100"
                        Interval="20">
                        <TextBlock Text="↑" />
                    </RepeatButton>
                    <RepeatButton
                        Grid.Row="0"
                        Grid.Column="2"
                        Width="40"
                        Height="40"
                        Background="Transparent"
                        Command="{Binding Rot}"
                        CommandParameter="{x:Static arg:MoveType.RightUp}"
                        Delay="100"
                        Interval="20">
                        <TextBlock Text="↗" />
                    </RepeatButton>
                    <RepeatButton
                        Grid.Row="1"
                        Grid.Column="0"
                        Width="40"
                        Height="40"
                        Background="Transparent"
                        Command="{Binding Rot}"
                        CommandParameter="{x:Static arg:MoveType.Left}"
                        Delay="100"
                        Interval="20">
                        <TextBlock Text="←" />
                    </RepeatButton>
                    <RepeatButton
                        Grid.Row="1"
                        Grid.Column="2"
                        Width="40"
                        Height="40"
                        Background="Transparent"
                        Command="{Binding Rot}"
                        CommandParameter="{x:Static arg:MoveType.Right}"
                        Delay="100"
                        Interval="20">
                        <TextBlock Text="→" />
                    </RepeatButton>
                    <RepeatButton
                        Grid.Row="3"
                        Grid.Column="0"
                        Width="40"
                        Height="40"
                        Background="Transparent"
                        Command="{Binding Rot}"
                        CommandParameter="{x:Static arg:MoveType.LeftDown}"
                        Delay="100"
                        Interval="20">
                        <TextBlock Text="↙" />
                    </RepeatButton>
                    <RepeatButton
                        Grid.Row="3"
                        Grid.Column="1"
                        Width="40"
                        Height="40"
                        Background="Transparent"
                        Command="{Binding Rot}"
                        CommandParameter="{x:Static arg:MoveType.Down}"
                        Delay="100"
                        Interval="20">
                        <TextBlock Text="↓" />
                    </RepeatButton>
                    <RepeatButton
                        Grid.Row="3"
                        Grid.Column="2"
                        Width="40"
                        Height="40"
                        Background="Transparent"
                        Command="{Binding Rot}"
                        CommandParameter="{x:Static arg:MoveType.RightDown}"
                        Delay="100"
                        Interval="20">
                        <TextBlock Text="↘" />
                    </RepeatButton>
                </Grid>
                <StackPanel
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    IsVisible="{Binding HaveSkin}">
                    <RepeatButton
                        Width="40"
                        Height="40"
                        HorizontalAlignment="Center"
                        Background="Transparent"
                        Command="{Binding Scoll}"
                        CommandParameter="{x:Static arg:MoveType.Up}"
                        Delay="100"
                        Interval="20">
                        <TextBlock Text="↑" />
                    </RepeatButton>
                    <RepeatButton
                        Width="40"
                        Height="40"
                        HorizontalAlignment="Center"
                        Background="Transparent"
                        Command="{Binding Scoll}"
                        CommandParameter="{x:Static arg:MoveType.Down}"
                        Delay="100"
                        Interval="20">
                        <TextBlock Text="↓" />
                    </RepeatButton>
                </StackPanel>
                <StackPanel VerticalAlignment="Bottom" IsVisible="{Binding HaveSkin}">
                    <TextBlock
                        Margin="2"
                        HorizontalAlignment="Left"
                        Text="{Binding NowFps}" />
                    <TextBlock
                        Margin="2"
                        Text="{Binding Info}"
                        TextWrapping="Wrap" />
                </StackPanel>

                <Border Classes="t2" IsVisible="{Binding !HaveSkin, FallbackValue=true}">
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="20"
                        Foreground="{setting:Theme FontColor}"
                        Text="{Binding Text}" />
                </Border>
            </Panel>
        </DockPanel>
        <Border
            Name="SidePanel3"
            Background="#00FFFFFF"
            IsVisible="False">
            <Border
                HorizontalAlignment="Right"
                VerticalAlignment="Stretch"
                Background="{setting:Theme MenuBG}">
                <Decorator Name="Decorator2" />
            </Border>
        </Border>
    </Panel>
</UserControl>
