<UserControl
    x:Class="ColorMC.Gui.UI.Controls.TitleControl"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="clr-namespace:ColorMC.Gui.UI.Model"
    xmlns:setting="clr-namespace:ColorMC.Gui.UI"
    xmlns:svg="clr-namespace:ColorMC.Gui.UI.Views.Svg"
    Height="35"
    d:DesignHeight="35"
    d:DesignWidth="800"
    x:DataType="model:WindowModel"
    Background="#FFFFFF"
    mc:Ignorable="d">
    <Panel TextOptions.TextRenderingMode="Antialias">
        <Button
            Width="35"
            Height="35"
            Background="Transparent"
            BorderBrush="Transparent"
            BorderThickness="0"
            Command="{Binding BackClick}"
            CornerRadius="0"
            IsEnabled="{Binding HeadBackEnable}"
            IsVisible="{Binding HeadBack}">
            <svg:SvgControl Path="/Resource/Icon/Back.svg" />
        </Button>
        <Panel Name="Panel1" />
        <DockPanel Name="Pandl2">
            <StackPanel
                Name="StackPanel1"
                DockPanel.Dock="Right"
                Orientation="Horizontal">
                <Button
                    Name="Choise"
                    Width="80"
                    Height="35"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    BorderThickness="0"
                    Command="{Binding ChoiseClick}"
                    Content="{Binding HeadChoiseContent}"
                    CornerRadius="0"
                    IsEnabled="{Binding ChoiseEnable}"
                    IsVisible="{Binding HeadChoiseDisplay}" />
                <Button
                    Width="80"
                    Height="35"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    BorderThickness="0"
                    Command="{Binding Choise1Click}"
                    Content="{Binding HeadChoise1Content}"
                    CornerRadius="0"
                    IsEnabled="{Binding Choise1Enable}"
                    IsVisible="{Binding HeadChoise1Display}" />
            </StackPanel>
            <DockPanel Name="StackPanel2" VerticalAlignment="Center">
                <TextBlock
                    Name="TitleShow1"
                    Margin="5,0,5,0"
                    DockPanel.Dock="Right"
                    IsHitTestVisible="False"
                    Text="{Binding SubTitle}"
                    TextTrimming="CharacterEllipsis" />
                <TextBlock
                    Name="TitleShow"
                    Margin="5,0,5,0"
                    IsHitTestVisible="False"
                    Text="{Binding Title}"
                    TextTrimming="CharacterEllipsis" />
            </DockPanel>
        </DockPanel>
    </Panel>
</UserControl>
