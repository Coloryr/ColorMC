<UserControl
    x:Class="ColorMC.Gui.UI.Controls.Setting.AddLockLoginControl"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="clr-namespace:ColorMC.Gui.UI.Model.Setting"
    xmlns:setting="clr-namespace:ColorMC.Gui.Utils"
    x:DataType="model:AddLockLoginModel"
    mc:Ignorable="d">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <ComboBox
            Margin="0,0,0,10"
            HorizontalAlignment="Stretch"
            ItemsSource="{Binding Items}"
            SelectedIndex="{Binding Index}" />
        <TextBox
            MinWidth="300"
            Margin="0,0,0,10"
            Foreground="{setting:Theme FontColor}"
            IsEnabled="{Binding EnableInput}"
            Text="{Binding InputText}"
            TextAlignment="Center"
            TextWrapping="Wrap"
            Watermark="{setting:Localize SettingWindow.Tab6.Text31}" />
        <TextBox
            MinWidth="300"
            Foreground="{setting:Theme FontColor}"
            IsEnabled="{Binding EnableInput}"
            Text="{Binding InputText1}"
            TextAlignment="Center"
            TextWrapping="Wrap"
            Watermark="{setting:Localize SettingWindow.Tab6.Text32}" />
        <StackPanel
            Margin="0,10,0,0"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <Button
                Width="100"
                Height="35"
                Margin="10,0,10,0"
                HorizontalAlignment="Center"
                Classes="top"
                Command="{Binding Confirm}"
                Content="{setting:Localize Button.Confirm}" />
            <Button
                Width="100"
                Height="35"
                Margin="10,0,10,0"
                HorizontalAlignment="Center"
                Classes="top"
                Command="{Binding Cancel}"
                Content="{setting:Localize Button.Cancel}" />
        </StackPanel>
    </StackPanel>
</UserControl>
