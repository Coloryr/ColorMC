<UserControl
    x:Class="ColorMC.Gui.UI.Controls.Setting.Tab4Control"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:setting="clr-namespace:ColorMC.Gui.Utils.LaunchSetting"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Rectangle Stroke="{setting:Colors Main}" StrokeThickness="3" />

        <ScrollViewer Margin="5">
            <StackPanel>
                <Label Margin="5" Content="{setting:Localize SettingWindow.Tab4.Text13}" />

                <StackPanel Orientation="Horizontal">
                    <CheckBox
                        Name="CheckBox2"
                        Margin="5"
                        Content="{setting:Localize SettingWindow.Tab4.Text14}" />
                    <CheckBox
                        Name="CheckBox3"
                        Margin="5"
                        Content="{setting:Localize SettingWindow.Tab4.Text15}" />
                    <CheckBox
                        Name="CheckBox4"
                        Margin="5"
                        Content="{setting:Localize SettingWindow.Tab4.Text16}" />
                    <CheckBox
                        Name="CheckBox5"
                        Margin="5"
                        Content="{setting:Localize SettingWindow.Tab4.Text17}" />
                </StackPanel>

                <Button
                    Name="Button_Set2"
                    Width="80"
                    Height="25"
                    Margin="10"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Content="{setting:Localize Button.Set}" />

                <Label Margin="5" Content="{setting:Localize SettingWindow.Tab4.Text1}" />
                <StackPanel Orientation="Horizontal">
                    <Label
                        Margin="5"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Content="{setting:Localize SettingWindow.Tab4.Text2}" />
                    <ComboBox
                        Name="ComboBox1"
                        Width="200"
                        Margin="5" />

                </StackPanel>

                <TextBox
                    Name="TextBox1"
                    Margin="5"
                    Classes="input1"
                    IsEnabled="False"
                    Watermark="{setting:Localize SettingWindow.Tab4.Text3}" />

                <StackPanel Orientation="Horizontal">
                    <Label Margin="5" Content="{setting:Localize SettingWindow.Tab4.Text4}" />
                    <NumericUpDown
                        Name="Input1"
                        Width="150"
                        Height="30"
                        Minimum="1"
                        Value="1" />

                    <Label Margin="20,5,5,5" Content="{setting:Localize SettingWindow.Tab4.Text5}" />
                    <NumericUpDown
                        Name="Input2"
                        Width="150"
                        Height="30"
                        Minimum="1"
                        Value="1" />
                </StackPanel>
                <TextBox
                    Name="TextBox2"
                    Margin="5"
                    Classes="input1"
                    Watermark="{setting:Localize SettingWindow.Tab4.Text6}" />
                <TextBox
                    Name="TextBox3"
                    Margin="5"
                    Classes="input1"
                    MaxLength="5"
                    Watermark="{setting:Localize SettingWindow.Tab4.Text7}" />
                <TextBox
                    Name="TextBox4"
                    Margin="5"
                    Classes="input1"
                    Watermark="{setting:Localize SettingWindow.Tab4.Text8}" />
                <Button
                    Name="Button_Set"
                    Width="80"
                    Height="25"
                    Margin="10"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Content="{setting:Localize Button.Set}" />

                <Label Margin="5" Content="{setting:Localize SettingWindow.Tab4.Text9}" />
                <StackPanel Orientation="Horizontal">
                    <Label Margin="5" Content="{setting:Localize SettingWindow.Tab4.Text10}" />
                    <NumericUpDown
                        Name="Input3"
                        Width="150"
                        Height="30"
                        Minimum="1"
                        Value="1" />

                    <Label Margin="20,5,5,5" Content="{setting:Localize SettingWindow.Tab4.Text11}" />
                    <NumericUpDown
                        Name="Input4"
                        Width="150"
                        Height="30"
                        Minimum="1"
                        Value="1" />

                    <CheckBox
                        Name="CheckBox1"
                        Margin="20,0,0,0"
                        Content="{setting:Localize SettingWindow.Tab4.Text12}" />
                </StackPanel>

                <Button
                    Name="Button_Set1"
                    Width="80"
                    Height="25"
                    Margin="10"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Content="{setting:Localize Button.Set}" />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
