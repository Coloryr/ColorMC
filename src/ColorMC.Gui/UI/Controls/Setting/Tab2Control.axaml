<UserControl
    x:Class="ColorMC.Gui.UI.Controls.Setting.Tab2Control"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="clr-namespace:ColorMC.Gui.UI.Model.Setting"
    xmlns:setting="clr-namespace:ColorMC.Gui.Utils"
    xmlns:svg="clr-namespace:ColorMC.Gui.UI.Views.Svg"
    xmlns:view="clr-namespace:ColorMC.Gui.UI.Model.Items"
    d:DesignWidth="800"
    x:DataType="model:SettingModel"
    mc:Ignorable="d">
    <ScrollViewer HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="0,0,10,15">
            <Border
                Margin="10,5,10,3"
                Classes="t2"
                IsVisible="{Binding Phone}">
                <StackPanel Name="PhoneSetting" Margin="15">
                    <StackPanel Margin="0,0,0,5" Orientation="Horizontal">
                        <svg:SvgControl
                            Width="24"
                            Height="24"
                            Margin="0,0,5,0"
                            Path="/Resource/Icon/Setting/svg22.svg" />
                        <TextBlock FontSize="{setting:Style FontTitle}" Text="{setting:Localize SettingWindow.Tab2.Text43}" />
                    </StackPanel>
                </StackPanel>
            </Border>
            <Border
                Margin="10,5,10,3"
                Classes="t2"
                IsEnabled="{Binding !Phone}">
                <StackPanel Margin="15">
                    <StackPanel Margin="0,0,0,5" Orientation="Horizontal">
                        <svg:SvgControl
                            Width="24"
                            Height="24"
                            Margin="0,0,5,0"
                            Path="/Resource/Icon/Setting/svg1.svg" />
                        <TextBlock FontSize="{setting:Style FontTitle}" Text="{setting:Localize SettingWindow.Tab2.Text46}" />
                    </StackPanel>
                    <StackPanel>
                        <ToggleSwitch
                            Margin="0,0,10,0"
                            VerticalAlignment="Center"
                            IsChecked="{Binding WindowMode}"
                            IsEnabled="{Binding EnableWindowMode}"
                            OffContent="{setting:Localize SettingWindow.Tab2.Text22}"
                            OnContent="{setting:Localize SettingWindow.Tab2.Text22}" />
                        <WrapPanel Orientation="Horizontal">
                            <ToggleSwitch
                                Margin="0,0,10,0"
                                VerticalAlignment="Center"
                                IsChecked="{Binding EnableWindowTran}"
                                OffContent="{setting:Localize SettingWindow.Tab2.Text9}"
                                OnContent="{setting:Localize SettingWindow.Tab2.Text9}" />
                            <ComboBox
                                Width="150"
                                VerticalAlignment="Center"
                                IsEnabled="{Binding EnableWindowTran}"
                                IsVisible="{Binding !MinMode}"
                                ItemsSource="{Binding TranTypeList}"
                                SelectedIndex="{Binding WindowTranType}" />
                        </WrapPanel>
                        <ComboBox
                            Margin="0,5,0,0"
                            HorizontalAlignment="Stretch"
                            IsEnabled="{Binding EnableWindowTran}"
                            IsVisible="{Binding MinMode}"
                            ItemsSource="{Binding TranTypeList}"
                            SelectedIndex="{Binding WindowTranType}" />
                    </StackPanel>
                    <TextBlock
                        Margin="0,5,0,0"
                        Text="{setting:Localize SettingWindow.Tab2.Text6}"
                        TextWrapping="Wrap" />
                </StackPanel>
            </Border>
            <Border Margin="10,5,10,3" Classes="t2">
                <StackPanel Margin="15">
                    <!--  语言  -->
                    <StackPanel Margin="0,0,0,5" Orientation="Horizontal">
                        <svg:SvgControl
                            Width="24"
                            Height="24"
                            Margin="0,0,5,0"
                            Path="/Resource/Icon/Setting/svg2.svg" />
                        <TextBlock FontSize="{setting:Style FontTitle}" Text="{setting:Localize SettingWindow.Tab2.Text47}" />
                    </StackPanel>
                    <WrapPanel Margin="0,0,0,-5" IsVisible="{Binding !MinMode}">
                        <StackPanel Margin="0,0,5,5" Orientation="Horizontal">
                            <TextBlock Margin="0,0,5,0" Text="{setting:Localize SettingWindow.Tab2.Text1}" />
                            <ComboBox
                                Width="150"
                                Margin="0,0,5,0"
                                ItemsSource="{Binding LanguageList}"
                                SelectedIndex="{Binding Language}" />
                        </StackPanel>
                        <WrapPanel Margin="0,0,0,5">
                            <ToggleSwitch
                                Margin="0,0,10,0"
                                IsChecked="{Binding IsDefaultFont}"
                                OffContent="{setting:Localize SettingWindow.Tab2.Text20}"
                                OnContent="{setting:Localize SettingWindow.Tab2.Text20}" />
                            <ComboBox
                                MinWidth="200"
                                IsEnabled="{Binding EnableFontList}"
                                ItemsSource="{Binding FontList}"
                                SelectedItem="{Binding FontItem}">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate DataType="view:FontDisplayModel">
                                        <StackPanel>
                                            <TextBlock FontFamily="{Binding FontFamily}" Text="{Binding FontName}" />
                                        </StackPanel>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                        </WrapPanel>
                    </WrapPanel>
                    <StackPanel IsVisible="{Binding MinMode}">
                        <DockPanel Margin="0,0,0,5">
                            <TextBlock Margin="0,0,5,0" Text="{setting:Localize SettingWindow.Tab2.Text1}" />
                            <ComboBox
                                Margin="0,0,0,0"
                                HorizontalAlignment="Stretch"
                                ItemsSource="{Binding LanguageList}"
                                SelectedIndex="{Binding Language}" />
                        </DockPanel>
                        <ToggleSwitch
                            Margin="0,0,0,5"
                            IsChecked="{Binding IsDefaultFont}"
                            OffContent="{setting:Localize SettingWindow.Tab2.Text20}"
                            OnContent="{setting:Localize SettingWindow.Tab2.Text20}" />
                        <ComboBox
                            Margin="0,0,0,0"
                            HorizontalAlignment="Stretch"
                            IsEnabled="{Binding EnableFontList}"
                            ItemsSource="{Binding FontList}"
                            SelectedItem="{Binding FontItem}">
                            <ComboBox.ItemTemplate>
                                <DataTemplate DataType="view:FontDisplayModel">
                                    <StackPanel>
                                        <TextBlock FontFamily="{Binding FontFamily}" Text="{Binding FontName}" />
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>
                    <TextBlock
                        Margin="0,5,0,0"
                        Text="{setting:Localize SettingWindow.Tab2.Text21}"
                        TextWrapping="Wrap" />
                </StackPanel>
            </Border>
            <Border Margin="10,5,10,3" Classes="t2">
                <StackPanel Margin="15">
                    <StackPanel Margin="0,0,0,5" Orientation="Horizontal">
                        <svg:SvgControl
                            Width="24"
                            Height="24"
                            Margin="0,0,5,0"
                            Path="/Resource/Icon/Setting/svg3.svg" />
                        <TextBlock FontSize="{setting:Style FontTitle}" Text="{setting:Localize SettingWindow.Tab2.Text39}" />
                    </StackPanel>
                    <WrapPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock MinWidth="70" Text="{setting:Localize SettingWindow.Tab2.Text41}" />
                            <Slider
                                Width="150"
                                Height="40"
                                Margin="5,-10,5,0"
                                HorizontalAlignment="Left"
                                Foreground="{setting:Theme MainColor}"
                                IsSnapToTickEnabled="True"
                                LargeChange="1"
                                Maximum="2000"
                                Minimum="0"
                                SmallChange="1"
                                TickFrequency="1"
                                Value="{Binding AmTime}" />
                            <TextBlock Width="40" Text="{Binding AmTime, StringFormat='{}{0}'}" />
                        </StackPanel>
                        <ToggleSwitch
                            IsChecked="{Binding AmFade}"
                            OffContent="{setting:Localize SettingWindow.Tab2.Text42}"
                            OnContent="{setting:Localize SettingWindow.Tab2.Text42}" />
                    </WrapPanel>
                </StackPanel>
            </Border>
            <Border Margin="10,5,10,3" Classes="t2">
                <StackPanel Margin="15">
                    <!--  背景图  -->
                    <StackPanel Margin="0,0,0,5" Orientation="Horizontal">
                        <svg:SvgControl
                            Width="24"
                            Height="24"
                            Margin="0,0,5,0"
                            Path="/Resource/Icon/Setting/svg4.svg" />
                        <TextBlock FontSize="{setting:Style FontTitle}" Text="{setting:Localize SettingWindow.Tab2.Text2}" />
                    </StackPanel>
                    <ToggleSwitch
                        VerticalAlignment="Center"
                        IsChecked="{Binding EnableBG}"
                        OffContent="{setting:Localize SettingWindow.Tab2.Text44}"
                        OnContent="{setting:Localize SettingWindow.Tab2.Text44}" />
                    <TextBox
                        Margin="0,0,0,5"
                        IsEnabled="{Binding EnableBG}"
                        Text="{Binding Pic}"
                        Watermark="{setting:Localize SettingWindow.Tab2.Text3}" />
                    <WrapPanel
                        Margin="0,0,0,5"
                        HorizontalAlignment="Right"
                        IsEnabled="{Binding EnableBG}">
                        <Button
                            Width="90"
                            Height="35"
                            Margin="-2,-2,2,-2"
                            Classes="top"
                            Command="{Binding DeletePic}"
                            Content="{setting:Localize Button.Delete}" />
                        <Button
                            Width="90"
                            Height="35"
                            Margin="-2,-2,2,-2"
                            Classes="top"
                            Command="{Binding OpenPic}"
                            Content="{setting:Localize Button.Select}"
                            DockPanel.Dock="Right" />
                        <Button
                            Width="90"
                            Height="35"
                            Margin="-2,-2,-3,-2"
                            Classes="top"
                            Command="{Binding SetPic}"
                            Content="{setting:Localize SettingWindow.Tab2.Text61}"
                            DockPanel.Dock="Right" />
                    </WrapPanel>
                    <WrapPanel Margin="0,0,0,5" IsEnabled="{Binding EnableBG}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{setting:Localize SettingWindow.Tab2.Text4}" />
                            <Slider
                                Width="150"
                                Height="40"
                                Margin="5,-10,5,0"
                                HorizontalAlignment="Left"
                                Foreground="{setting:Theme MainColor}"
                                IsSnapToTickEnabled="True"
                                LargeChange="1"
                                Maximum="100"
                                Minimum="0"
                                SmallChange="1"
                                TickFrequency="1"
                                Value="{Binding PicEffect}" />
                            <TextBlock
                                Width="40"
                                Margin="0,0,5,0"
                                Text="{Binding PicEffect, StringFormat='{}{0}%'}" />
                        </StackPanel>
                        <Button
                            Width="90"
                            Height="35"
                            Margin="-3"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Classes="top"
                            Command="{Binding SetPic}"
                            Content="{setting:Localize SettingWindow.Tab2.Text60}"
                            IsVisible="{Binding !MinMode}" />
                    </WrapPanel>
                    <Button
                        Width="90"
                        Height="35"
                        Margin="-3"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Classes="top"
                        Command="{Binding SetPic}"
                        Content="{setting:Localize SettingWindow.Tab2.Text60}"
                        IsVisible="{Binding MinMode}" />
                    <WrapPanel Margin="0,0,0,5" IsEnabled="{Binding EnableBG}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{setting:Localize SettingWindow.Tab2.Text5}" />
                            <Slider
                                Width="150"
                                Height="40"
                                Margin="5,-10,5,0"
                                HorizontalAlignment="Left"
                                Foreground="{setting:Theme MainColor}"
                                IsSnapToTickEnabled="True"
                                LargeChange="1"
                                Maximum="100"
                                Minimum="0"
                                SmallChange="1"
                                TickFrequency="1"
                                Value="{Binding PicTran}" />
                            <TextBlock
                                Width="40"
                                Margin="0,0,5,0"
                                Text="{Binding PicTran, StringFormat='{}{0}%'}" />
                        </StackPanel>
                        <Button
                            Width="90"
                            Height="35"
                            Margin="-3"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Classes="top"
                            Command="{Binding SetPicTran}"
                            Content="{setting:Localize SettingWindow.Tab2.Text60}"
                            IsVisible="{Binding !MinMode}" />
                    </WrapPanel>
                    <Button
                        Width="90"
                        Height="35"
                        Margin="-3"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Classes="top"
                        Command="{Binding SetPicTran}"
                        Content="{setting:Localize SettingWindow.Tab2.Text60}"
                        IsVisible="{Binding MinMode}" />
                    <WrapPanel
                        Margin="0,0,0,5"
                        IsEnabled="{Binding EnableBG}"
                        Orientation="Horizontal">
                        <ToggleSwitch
                            VerticalAlignment="Center"
                            IsChecked="{Binding EnablePicResize}"
                            OffContent="{setting:Localize SettingWindow.Tab2.Text24}"
                            OnContent="{setting:Localize SettingWindow.Tab2.Text24}" />
                        <StackPanel Orientation="Horizontal">
                            <Slider
                                Width="150"
                                Height="40"
                                Margin="5,-10,5,0"
                                HorizontalAlignment="Left"
                                Foreground="{setting:Theme MainColor}"
                                IsEnabled="{Binding EnablePicResize}"
                                IsSnapToTickEnabled="True"
                                LargeChange="1"
                                Maximum="100"
                                Minimum="0"
                                SmallChange="1"
                                TickFrequency="1"
                                Value="{Binding PicResize}" />
                            <TextBlock
                                Width="40"
                                Margin="0,0,5,0"
                                Text="{Binding PicResize, StringFormat='{}{0}%'}" />
                        </StackPanel>
                        <Button
                            Width="90"
                            Height="35"
                            Margin="-3"
                            VerticalAlignment="Center"
                            Classes="top"
                            Command="{Binding SetPicSize}"
                            Content="{setting:Localize SettingWindow.Tab2.Text60}"
                            IsEnabled="{Binding EnablePicResize}"
                            IsVisible="{Binding !MinMode}" />
                    </WrapPanel>
                    <Button
                        Width="90"
                        Height="35"
                        Margin="-3"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Classes="top"
                        Command="{Binding SetPicSize}"
                        Content="{setting:Localize SettingWindow.Tab2.Text60}"
                        IsEnabled="{Binding EnablePicResize}"
                        IsVisible="{Binding MinMode}" />
                    <TextBlock Text="{setting:Localize SettingWindow.Tab2.Text18}" />
                </StackPanel>
            </Border>
            <Border Margin="10,5,10,3" Classes="t2">
                <StackPanel Margin="15">
                    <!--  颜色设置  -->
                    <StackPanel Margin="0,0,0,5" Orientation="Horizontal">
                        <svg:SvgControl
                            Width="24"
                            Height="24"
                            Margin="0,0,5,0"
                            Path="/Resource/Icon/Setting/svg5.svg" />
                        <TextBlock FontSize="{setting:Style FontTitle}" Text="{setting:Localize SettingWindow.Tab2.Text7}" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <RadioButton
                            Margin="0,0,20,0"
                            VerticalAlignment="Center"
                            Content="{setting:Localize SettingWindow.Tab2.Text26}"
                            GroupName="Group1"
                            IsChecked="{Binding IsAutoColor}" />
                        <RadioButton
                            Margin="0,0,20,0"
                            VerticalAlignment="Center"
                            Content="{setting:Localize SettingWindow.Tab2.Text27}"
                            GroupName="Group1"
                            IsChecked="{Binding IsLightColor}" />
                        <RadioButton
                            Margin="0,0,20,0"
                            VerticalAlignment="Center"
                            Content="{setting:Localize SettingWindow.Tab2.Text28}"
                            GroupName="Group1"
                            IsChecked="{Binding IsDarkColor}" />
                    </StackPanel>
                    <StackPanel Margin="0,0,0,5" Orientation="Horizontal">
                        <TextBlock Margin="5,0,5,0" Text="{setting:Localize SettingWindow.Tab2.Text8}" />
                        <ColorPicker Margin="0,0,5,0" Color="{Binding MainColor}" />
                        <Button
                            Width="90"
                            Height="35"
                            Margin="-2"
                            VerticalAlignment="Center"
                            Classes="top"
                            Command="{Binding ColorReset}"
                            Content="{setting:Localize SettingWindow.Tab2.Text12}"
                            ToolTip.Tip="{setting:Localize ToolTip.Text124}"
                            ToolTip.VerticalOffset="-30" />
                    </StackPanel>
                    <!--  RGB模式  -->
                    <ToggleSwitch
                        IsChecked="{Binding EnableRGB}"
                        OffContent="{setting:Localize SettingWindow.Tab2.Text13}"
                        OnContent="{setting:Localize SettingWindow.Tab2.Text13}" />
                    <WrapPanel IsEnabled="{Binding EnableRGB}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{setting:Localize SettingWindow.Tab2.Text14}" />
                            <Slider
                                Width="150"
                                Height="40"
                                Margin="5,-10,5,0"
                                HorizontalAlignment="Left"
                                Foreground="{setting:Theme MainColor}"
                                IsSnapToTickEnabled="True"
                                LargeChange="1"
                                Maximum="100"
                                Minimum="0"
                                SmallChange="1"
                                TickFrequency="1"
                                Value="{Binding RgbV1}" />
                            <TextBlock
                                Width="40"
                                Margin="0,0,5,0"
                                Text="{Binding RgbV1, StringFormat='{}{0}%'}" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{setting:Localize SettingWindow.Tab2.Text15}" />
                            <Slider
                                Width="150"
                                Height="40"
                                Margin="5,-10,5,0"
                                HorizontalAlignment="Left"
                                Foreground="{setting:Theme MainColor}"
                                IsSnapToTickEnabled="True"
                                LargeChange="1"
                                Maximum="100"
                                Minimum="0"
                                SmallChange="1"
                                TickFrequency="1"
                                Value="{Binding RgbV2}" />
                            <TextBlock
                                Width="40"
                                Margin="0,0,5,0"
                                Text="{Binding RgbV2, StringFormat='{}{0}%'}" />
                        </StackPanel>
                    </WrapPanel>
                </StackPanel>
            </Border>
            <Border Margin="10,5,10,3" Classes="t2">
                <StackPanel Margin="15">
                    <!--  头像设置  -->
                    <StackPanel Margin="0,0,0,5" Orientation="Horizontal">
                        <svg:SvgControl
                            Width="24"
                            Height="24"
                            Margin="0,0,5,0"
                            Path="{Binding IconHead}" />
                        <TextBlock FontSize="{setting:Style FontTitle}" Text="{setting:Localize SettingWindow.Tab2.Text54}" />
                    </StackPanel>
                    <WrapPanel>
                        <RadioButton
                            Margin="0,0,20,0"
                            Content="{setting:Localize SettingWindow.Tab2.Text55}"
                            GroupName="Group2"
                            IsChecked="{Binding IsHead1}" />
                        <RadioButton
                            Margin="0,0,20,0"
                            Content="{setting:Localize SettingWindow.Tab2.Text56}"
                            GroupName="Group2"
                            IsChecked="{Binding IsHead2}" />
                        <RadioButton
                            Content="{setting:Localize SettingWindow.Tab2.Text57}"
                            GroupName="Group2"
                            IsChecked="{Binding IsHead3}" />
                    </WrapPanel>
                    <WrapPanel IsEnabled="{Binding IsHead3}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{setting:Localize SettingWindow.Tab2.Text58}" />
                            <Slider
                                Width="150"
                                Height="40"
                                Margin="5,-10,5,0"
                                HorizontalAlignment="Left"
                                Foreground="{setting:Theme MainColor}"
                                IsSnapToTickEnabled="True"
                                LargeChange="1"
                                Maximum="90"
                                Minimum="0"
                                SmallChange="1"
                                TickFrequency="1"
                                Value="{Binding HeadX}" />
                            <TextBlock
                                Width="40"
                                Margin="0,0,5,0"
                                Text="{Binding HeadX, StringFormat='{}{0}度'}" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{setting:Localize SettingWindow.Tab2.Text59}" />
                            <Slider
                                Width="150"
                                Height="40"
                                Margin="5,-10,5,0"
                                HorizontalAlignment="Left"
                                Foreground="{setting:Theme MainColor}"
                                IsSnapToTickEnabled="True"
                                LargeChange="1"
                                Maximum="90"
                                Minimum="0"
                                SmallChange="1"
                                TickFrequency="1"
                                Value="{Binding HeadY}" />
                            <TextBlock
                                Width="40"
                                Margin="0,0,5,0"
                                Text="{Binding HeadY, StringFormat='{}{0}度'}" />
                        </StackPanel>
                    </WrapPanel>
                </StackPanel>
            </Border>
            <Border
                Margin="10,5,10,3"
                Classes="t2"
                IsVisible="{Binding !Phone}">
                <StackPanel Margin="15">
                    <!--  Live2D人物  -->
                    <StackPanel Margin="0,0,0,5" Orientation="Horizontal">
                        <svg:SvgControl
                            Width="24"
                            Height="24"
                            Margin="0,0,5,0"
                            Path="/Resource/Icon/Setting/svg6.svg" />
                        <TextBlock FontSize="{setting:Style FontTitle}" Text="{setting:Localize SettingWindow.Tab2.Text29}" />
                    </StackPanel>
                    <WrapPanel Margin="0,0,0,5">
                        <TextBlock Margin="0,0,5,0" Text="{setting:Localize SettingWindow.Tab2.Text30}" />
                        <TextBlock Text="{Binding Live2DCoreState}" />
                    </WrapPanel>
                    <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                        <Button
                            Width="90"
                            Height="35"
                            Margin="-2,-2,3,-2"
                            HorizontalAlignment="Right"
                            Classes="top"
                            Command="{Binding DownloadCore}"
                            Content="{setting:Localize SettingWindow.Tab2.Text31}"
                            IsEnabled="{Binding !CoreInstall}" />
                        <Button
                            Width="90"
                            Height="35"
                            Margin="-2,-2,-3,-2"
                            HorizontalAlignment="Right"
                            Classes="top"
                            Command="{Binding InstallCore}"
                            Content="{setting:Localize SettingWindow.Tab2.Text49}"
                            IsEnabled="{Binding !CoreInstall}" />
                    </StackPanel>
                    <StackPanel IsEnabled="{Binding CoreInstall}">
                        <ToggleSwitch
                            IsChecked="{Binding EnableLive2D}"
                            OffContent="{setting:Localize SettingWindow.Tab2.Text48}"
                            OnContent="{setting:Localize SettingWindow.Tab2.Text48}" />
                        <TextBox
                            Margin="0,5,0,0"
                            IsEnabled="{Binding EnableLive2D}"
                            Text="{Binding Live2DModel}"
                            Watermark="{setting:Localize SettingWindow.Tab2.Text33}" />
                        <WrapPanel
                            Margin="0,5,0,0"
                            HorizontalAlignment="Right"
                            IsEnabled="{Binding EnableLive2D}">
                            <Button
                                Width="90"
                                Height="35"
                                Margin="-2,-2,2,-2"
                                Classes="top"
                                Command="{Binding DeleteLive2D}"
                                Content="{setting:Localize Button.Delete}"
                                DockPanel.Dock="Right" />
                            <Button
                                Width="90"
                                Height="35"
                                Margin="-2,-2,2,-2"
                                Classes="top"
                                Command="{Binding OpenLive2D}"
                                Content="{setting:Localize Button.Select}"
                                DockPanel.Dock="Right" />
                            <Button
                                Width="90"
                                Height="35"
                                Margin="-2,-2,-3,-2"
                                Classes="top"
                                Command="{Binding SetLive2D}"
                                Content="{setting:Localize SettingWindow.Tab2.Text61}"
                                DockPanel.Dock="Right" />
                        </WrapPanel>
                        <WrapPanel Margin="0,5,0,0" IsVisible="{Binding !MinMode}">
                            <ToggleSwitch
                                Margin="0,0,20,0"
                                VerticalAlignment="Center"
                                IsChecked="{Binding LowFps}"
                                OffContent="{setting:Localize SettingWindow.Tab2.Text53}"
                                OnContent="{setting:Localize SettingWindow.Tab2.Text53}" />
                            <StackPanel
                                Margin="0,0,10,0"
                                IsEnabled="{Binding EnableLive2D}"
                                Orientation="Horizontal">
                                <TextBlock Margin="0,0,5,0" Text="{setting:Localize SettingWindow.Tab2.Text52}" />
                                <ComboBox
                                    Width="150"
                                    ItemsSource="{Binding PosList}"
                                    SelectedIndex="{Binding L2dPos}" />
                            </StackPanel>
                        </WrapPanel>
                        <StackPanel IsVisible="{Binding MinMode}">
                            <ToggleSwitch
                                Margin="0,0,20,0"
                                VerticalAlignment="Center"
                                IsChecked="{Binding LowFps}"
                                OffContent="{setting:Localize SettingWindow.Tab2.Text53}"
                                OnContent="{setting:Localize SettingWindow.Tab2.Text53}" />
                            <DockPanel IsEnabled="{Binding EnableLive2D}">
                                <TextBlock Margin="0,0,5,0" Text="{setting:Localize SettingWindow.Tab2.Text52}" />
                                <ComboBox
                                    HorizontalAlignment="Stretch"
                                    ItemsSource="{Binding PosList}"
                                    SelectedIndex="{Binding L2dPos}" />
                            </DockPanel>
                        </StackPanel>
                        <WrapPanel IsEnabled="{Binding EnableLive2D}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{setting:Localize SettingWindow.Tab2.Text34}" />
                                <Slider
                                    Width="150"
                                    Height="40"
                                    Margin="5,-10,5,0"
                                    HorizontalAlignment="Left"
                                    Foreground="{setting:Theme MainColor}"
                                    IsSnapToTickEnabled="True"
                                    LargeChange="1"
                                    Maximum="100"
                                    Minimum="0"
                                    SmallChange="1"
                                    TickFrequency="1"
                                    Value="{Binding L2dWidth}" />
                                <TextBlock
                                    Width="40"
                                    Margin="0,0,5,0"
                                    Text="{Binding L2dWidth, StringFormat='{}{0}%'}" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{setting:Localize SettingWindow.Tab2.Text35}" />
                                <Slider
                                    Width="150"
                                    Height="40"
                                    Margin="5,-10,5,0"
                                    HorizontalAlignment="Left"
                                    Foreground="{setting:Theme MainColor}"
                                    IsSnapToTickEnabled="True"
                                    LargeChange="1"
                                    Maximum="100"
                                    Minimum="0"
                                    SmallChange="1"
                                    TickFrequency="1"
                                    Value="{Binding L2dHeight}" />
                                <TextBlock Width="40" Text="{Binding L2dHeight, StringFormat='{}{0}%'}" />
                            </StackPanel>
                        </WrapPanel>
                    </StackPanel>
                    <TextBlock Text="{setting:Localize SettingWindow.Tab2.Text32}" TextWrapping="Wrap" />
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
