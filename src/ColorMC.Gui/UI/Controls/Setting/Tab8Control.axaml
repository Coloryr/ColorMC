<UserControl
    x:Class="ColorMC.Gui.UI.Controls.Setting.Tab8Control"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="clr-namespace:ColorMC.Gui.UI.Model.Setting"
    xmlns:setting="clr-namespace:ColorMC.Gui.Utils.LaunchSetting"
    xmlns:svg="clr-namespace:ColorMC.Gui.UI.Views.Svg"
    xmlns:views="clr-namespace:ColorMC.Gui.UI.Views"
    d:DesignHeight="900"
    d:DesignWidth="1000"
    x:DataType="model:SettingModel"
    mc:Ignorable="d">
    <ScrollViewer Name="ScrollViewer1" Margin="5,0,5,5">
        <StackPanel>
            <Panel Margin="0,0,0,5">
                <Border
                    Padding="{setting:Style BorderPadding}"
                    Background="{setting:Colors GroupBack}"
                    BorderBrush="{setting:Colors GroupColor}"
                    BorderThickness="2"
                    CornerRadius="{setting:Style ButtonCornerRadius}">
                    <StackPanel>
                        <StackPanel Margin="0,0,0,5" Orientation="Horizontal">
                            <svg:SvgControl
                                Width="24"
                                Height="24"
                                Margin="0,0,5,0"
                                Fill="{setting:Colors Font}"
                                Path="/Resource/Icon/Setting/item8.svg"
                                Stroke="{setting:Colors Font}" />
                            <TextBlock FontSize="{setting:Style FontTitle}" Text="手柄支持" />
                        </StackPanel>
                        <ToggleSwitch
                            Margin="0,0,10,0"
                            VerticalAlignment="Center"
                            IsChecked="{Binding InputEnable}"
                            OffContent="启用游戏内手柄支持"
                            OnContent="启用游戏内手柄支持" />
                        <WrapPanel Margin="0,0,0,5">
                            <TextBlock Text="检测到手柄数量：" />
                            <TextBlock Text="{Binding InputNum}" />
                        </WrapPanel>

                        <StackPanel Margin="0,0,0,5" Orientation="Horizontal">
                            <TextBlock Margin="0,0,5,0" Text="手柄列表" />
                            <ComboBox
                                Width="200"
                                Margin="0,0,5,0"
                                ItemsSource="{Binding InputNames}"
                                SelectedIndex="{Binding InputIndex}" />
                        </StackPanel>
                    </StackPanel>
                </Border>
                <Border
                    Background="{setting:Colors GroupBack}"
                    BorderBrush="{setting:Colors GroupColor}"
                    BorderThickness="2"
                    CornerRadius="{setting:Style ButtonCornerRadius}"
                    IsVisible="{Binding !InputInit}">
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Text="手柄输入初始化失败" />
                </Border>
            </Panel>
            <Border
                Margin="0,0,0,5"
                Padding="{setting:Style BorderPadding}"
                Background="{setting:Colors GroupBack}"
                BorderBrush="{setting:Colors GroupColor}"
                BorderThickness="2"
                CornerRadius="{setting:Style ButtonCornerRadius}"
                IsEnabled="{Binding InputExist}">
                <StackPanel VerticalAlignment="Top">
                    <StackPanel Margin="0,0,0,5" Orientation="Horizontal">
                        <svg:SvgControl
                            Width="24"
                            Height="24"
                            Margin="0,0,5,0"
                            Fill="{setting:Colors Font}"
                            Path="/Resource/Icon/Setting/svg23.svg"
                            Stroke="{setting:Colors Font}" />
                        <TextBlock
                            Margin="0,0,10,0"
                            FontSize="{setting:Style FontTitle}"
                            Text="按键绑定" />
                        <Button
                            Width="100"
                            Height="25"
                            Command="{Binding AddInput}"
                            Content="添加"
                            Focusable="False" />
                    </StackPanel>
                    <DataGrid
                        Name="DataGrid1"
                        AutoGenerateColumns="False"
                        CanUserResizeColumns="True"
                        CanUserSortColumns="False"
                        HorizontalScrollBarVisibility="Disabled"
                        IsEnabled="{Binding InputExist}"
                        ItemsSource="{Binding InputList}"
                        SelectedItem="{Binding InputItem}">
                        <DataGrid.Columns>
                            <DataGridTextColumn
                                Binding="{Binding InputKey}"
                                Header="按键值"
                                IsReadOnly="True" />
                            <DataGridTemplateColumn Header="按键">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel>
                                            <Svg
                                                Width="30"
                                                Height="30"
                                                Path="{Binding Icon}" />
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn
                                Binding="{Binding Bind}"
                                Header="绑定值"
                                IsReadOnly="True" />
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Border>
            <Border
                Margin="0,0,0,5"
                Padding="{setting:Style BorderPadding}"
                Background="{setting:Colors GroupBack}"
                BorderBrush="{setting:Colors GroupColor}"
                BorderThickness="2"
                CornerRadius="{setting:Style ButtonCornerRadius}"
                IsEnabled="{Binding InputExist}">
                <StackPanel VerticalAlignment="Top">
                    <StackPanel Margin="0,0,0,5" Orientation="Horizontal">
                        <svg:SvgControl
                            Width="24"
                            Height="24"
                            Margin="0,0,5,0"
                            Fill="{setting:Colors Font}"
                            Path="/Resource/Icon/Setting/svg25.svg"
                            Stroke="{setting:Colors Font}" />
                        <TextBlock
                            Margin="0,0,10,0"
                            FontSize="{setting:Style FontTitle}"
                            Text="扳机绑定" />
                        <Button
                            Width="100"
                            Height="25"
                            Command="{Binding AddAxisInput}"
                            Content="添加"
                            Focusable="False" />
                    </StackPanel>

                    <DataGrid
                        Name="DataGrid2"
                        AutoGenerateColumns="False"
                        CanUserResizeColumns="True"
                        CanUserSortColumns="False"
                        HorizontalScrollBarVisibility="Disabled"
                        IsEnabled="{Binding InputExist}"
                        ItemsSource="{Binding InputAxisList}"
                        SelectedItem="{Binding InputAxisItem}">
                        <DataGrid.Columns>
                            <DataGridTextColumn
                                Binding="{Binding InputKey}"
                                Header="按键值"
                                IsReadOnly="True" />
                            <DataGridTemplateColumn Header="按键">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel>
                                            <Svg
                                                Width="30"
                                                Height="30"
                                                Path="{Binding Icon}" />
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Binding="{Binding Start}" Header="压力范围" />
                            <DataGridTextColumn Binding="{Binding End}" />
                            <DataGridTextColumn
                                Binding="{Binding Bind}"
                                Header="绑定按键值"
                                IsReadOnly="True" />
                            <DataGridTextColumn Binding="{Binding NowValue}" IsReadOnly="True" />
                            <DataGridTemplateColumn Header="回弹取消">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel>
                                            <CheckBox IsChecked="{Binding BackCancel}" />
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Border>

            <Border
                Margin="0,0,0,5"
                Padding="{setting:Style BorderPadding}"
                Background="{setting:Colors GroupBack}"
                BorderBrush="{setting:Colors GroupColor}"
                BorderThickness="2"
                CornerRadius="{setting:Style ButtonCornerRadius}"
                IsEnabled="{Binding InputExist}">
                <StackPanel>
                    <StackPanel Margin="0,0,0,5" Orientation="Horizontal">
                        <svg:SvgControl
                            Width="24"
                            Height="24"
                            Margin="0,0,5,0"
                            Fill="{setting:Colors Font}"
                            Path="/Resource/Icon/Setting/svg24.svg"
                            Stroke="{setting:Colors Font}" />
                        <TextBlock FontSize="{setting:Style FontTitle}" Text="摇杆设置" />
                    </StackPanel>
                    <WrapPanel Margin="0,0,0,-5">
                        <StackPanel Margin="0,0,5,5" Orientation="Horizontal">
                            <TextBlock Margin="0,0,5,0" Text="视角摇杆" />
                            <ComboBox
                                Width="150"
                                ItemsSource="{Binding AxisType}"
                                SelectedIndex="{Binding InputRotateAxis}" />
                        </StackPanel>
                        <StackPanel Margin="0,0,0,5" Orientation="Horizontal">
                            <TextBlock Margin="0,0,5,0" Text="光标摇杆" />
                            <ComboBox
                                Width="150"
                                ItemsSource="{Binding AxisType}"
                                SelectedIndex="{Binding InputCursorAxis}" />
                        </StackPanel>
                    </WrapPanel>
                    <TextBlock Text="灵敏度调节" />
                    <WrapPanel>
                        <StackPanel
                            Width="250"
                            Margin="0,0,15,0"
                            Orientation="Horizontal">
                            <TextBlock Margin="0,-10,5,0" Text="光标阈值" />
                            <Panel>
                                <StackPanel Margin="0,-10,0,0" Orientation="Horizontal">
                                    <Slider
                                        Width="150"
                                        Margin="0,0,5,0"
                                        LargeChange="10"
                                        Maximum="32767"
                                        SmallChange="1"
                                        Value="{Binding CursorDeath, FallbackValue=20000}" />
                                    <TextBlock Width="50" Text="{Binding CursorDeath, FallbackValue=20000}" />
                                </StackPanel>
                                <StackPanel Margin="0,15,0,-5" Orientation="Horizontal">
                                    <ProgressBar
                                        Width="150"
                                        Height="4"
                                        MinWidth="150"
                                        MaxWidth="150"
                                        Margin="0,0,5,0"
                                        BorderBrush="Transparent"
                                        Maximum="32767"
                                        Value="{Binding NowAxis1, FallbackValue=20000}" />
                                    <TextBlock Width="50" Text="{Binding NowAxis1, FallbackValue=20000}" />
                                </StackPanel>
                            </Panel>
                        </StackPanel>
                        <StackPanel
                            Width="250"
                            Margin="0,0,15,0"
                            Orientation="Horizontal">
                            <TextBlock Margin="0,-10,5,0" Text="视角转动阈值" />
                            <Panel>
                                <StackPanel Margin="0,-10,0,0" Orientation="Horizontal">
                                    <Slider
                                        Width="150"
                                        Margin="0,0,5,0"
                                        LargeChange="10"
                                        Maximum="32767"
                                        SmallChange="1"
                                        Value="{Binding RotateDeath, FallbackValue=20000}" />
                                    <TextBlock Width="50" Text="{Binding RotateDeath, FallbackValue=20000}" />
                                </StackPanel>
                                <StackPanel Margin="0,15,0,-5" Orientation="Horizontal">
                                    <ProgressBar
                                        Width="150"
                                        Height="4"
                                        MinWidth="150"
                                        MaxWidth="150"
                                        Margin="0,0,5,0"
                                        BorderBrush="Transparent"
                                        Maximum="32767"
                                        Value="{Binding NowAxis2, FallbackValue=20000}" />
                                    <TextBlock Width="50" Text="{Binding NowAxis2, FallbackValue=20000}" />
                                </StackPanel>
                            </Panel>
                        </StackPanel>
                    </WrapPanel>
                    <WrapPanel>
                        <StackPanel
                            Width="250"
                            Margin="0,0,15,0"
                            Orientation="Horizontal">
                            <TextBlock Margin="0,-10,5,0" Text="转动倍率" />
                            <Slider
                                Width="150"
                                Margin="0,-10,5,0"
                                LargeChange="0.1"
                                Maximum="1"
                                Minimum="0.01"
                                SmallChange="0.01"
                                Value="{Binding RotateRate}" />
                            <TextBlock
                                Width="50"
                                Margin="0,-10,0,0"
                                Text="{Binding RotateRate, StringFormat='{}{0:0.00}'}" />
                        </StackPanel>
                        <StackPanel
                            Width="250"
                            Margin="0,0,15,0"
                            Orientation="Horizontal">
                            <TextBlock Margin="0,-10,5,0" Text="光标倍率" />
                            <Slider
                                Width="150"
                                Margin="0,-10,5,0"
                                LargeChange="0.1"
                                Maximum="1"
                                Minimum="0.01"
                                SmallChange="0.01"
                                Value="{Binding CursorRate}" />
                            <TextBlock
                                Width="50"
                                Margin="0,-10,0,0"
                                Text="{Binding CursorRate, StringFormat='{}{0:0.00}'}" />
                        </StackPanel>
                    </WrapPanel>
                </StackPanel>
            </Border>

            <Border
                Padding="{setting:Style BorderPadding}"
                Background="{setting:Colors GroupBack}"
                BorderBrush="{setting:Colors GroupColor}"
                BorderThickness="2"
                CornerRadius="{setting:Style ButtonCornerRadius}"
                IsEnabled="{Binding InputExist}">
                <StackPanel>
                    <StackPanel Margin="0,0,0,5" Orientation="Horizontal">
                        <svg:SvgControl
                            Width="24"
                            Height="24"
                            Margin="0,0,5,0"
                            Fill="{setting:Colors Font}"
                            Path="/Resource/Icon/Setting/svg26.svg"
                            Stroke="{setting:Colors Font}" />
                        <TextBlock FontSize="{setting:Style FontTitle}" Text="附加功能设置" />
                    </StackPanel>

                    <ToggleSwitch
                        Margin="0,0,10,0"
                        VerticalAlignment="Center"
                        IsChecked="{Binding ItemCycle}"
                        OffContent="启用物品循环"
                        OnContent="启用物品循环" />
                    <WrapPanel IsEnabled="{Binding ItemCycle}">
                        <StackPanel Margin="0,0,20,0" Orientation="Horizontal">
                            <TextBlock Text="上一个物品" />
                            <TextBlock Text="绑定按键值：" />
                            <TextBlock Text="{Binding ItemCycleLeft}" />
                            <Svg
                                Width="30"
                                Height="30"
                                Path="{Binding CycleLeftIcon}" />
                            <Button
                                Width="100"
                                Height="25"
                                Command="{Binding SetItemButton}"
                                CommandParameter="{x:False}"
                                Content="设置按钮" />
                        </StackPanel>
                        <StackPanel Margin="0,0,0,0" Orientation="Horizontal">
                            <TextBlock Text="下一个物品" />
                            <TextBlock Text="绑定按键值：" />
                            <TextBlock Text="{Binding ItemCycleRight}" />
                            <Svg
                                Width="30"
                                Height="30"
                                Path="{Binding CycleRightIcon}" />
                            <Button
                                Width="100"
                                Height="25"
                                Command="{Binding SetItemButton}"
                                CommandParameter="{x:True}"
                                Content="设置按钮" />
                        </StackPanel>
                    </WrapPanel>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
