<UserControl
    x:Class="ColorMC.Gui.UI.Controls.Setting.Tab7Control"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:setting="clr-namespace:ColorMC.Gui.Utils.LaunchSetting"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <StackPanel
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <Image
                Name="Image1"
                Width="160"
                Height="160"
                Margin="0,0,20,0"
                HorizontalAlignment="Left" />

            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <Label Content="ColorMC" FontSize="60" />
                <Label Content="{setting:Localize SettingWindow.Tab7.Text1}" FontSize="30" />
                <Label Content="{setting:Localize SettingWindow.Tab7.Text2}" FontSize="30" />
                <StackPanel Orientation="Horizontal">
                    <Label Content="{setting:Localize SettingWindow.Tab7.Text6}" FontSize="20" />
                    <Label
                        Name="Label1"
                        Content="1.0.0"
                        FontSize="20" /> 
                </StackPanel>

                <Button
                    Name="Button1"
                    Height="30"
                    Margin="0,5,0,5"
                    HorizontalAlignment="Stretch"
                    Content="{setting:Localize SettingWindow.Tab7.Text3}" />
                <Button
                    Name="Button2"
                    Height="30"
                    Margin="0,0,0,5"
                    HorizontalAlignment="Stretch"
                    Content="{setting:Localize SettingWindow.Tab7.Text4}" />
                <Button
                    Name="Button3"
                    Height="30"
                    Margin="0,0,0,5"
                    HorizontalAlignment="Stretch"
                    Content="{setting:Localize SettingWindow.Tab7.Text5}" />
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
