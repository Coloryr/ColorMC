<UserControl
    x:Class="ColorMC.Gui.UI.Controls.Setting.Tab1Control"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="clr-namespace:ColorMC.Gui.UI.Model.Setting"
    xmlns:setting="clr-namespace:ColorMC.Gui.Utils.LaunchSetting"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:DataType="model:SettingModel"
    mc:Ignorable="d">
    <ScrollViewer Name="ScrollViewer1" Margin="5,0,5,2">
        <StackPanel>
            <Border
                Margin="0,0,0,3"
                Padding="{setting:Style BorderPadding}"
                Background="{setting:Colors GroupBack}"
                BorderBrush="{setting:Colors GroupColor}"
                BorderThickness="2"
                CornerRadius="{setting:Style ButtonCornerRadius}">
                <StackPanel>
                    <TextBlock Text="{setting:Localize SettingWindow.Tab1.Text14}" />
                    <StackPanel>
                        <TextBox
                            Margin="0,0,0,5"
                            Classes="input1"
                            IsEnabled="False"
                            Text="{Binding RunDir}"
                            Watermark="{setting:Localize SettingWindow.Tab1.Text14}" />
                        <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                            <Button
                                Width="100"
                                Height="25"
                                Command="{Binding ChangeRunDir}"
                                Content="{setting:Localize SettingWindow.Tab1.Text15}"
                                DockPanel.Dock="Right"
                                ToolTip.Tip="{setting:Localize ToolTip.Text131}"
                                ToolTip.VerticalOffset="-30" />
                            <Button
                                Width="100"
                                Height="25"
                                Margin="5,0,0,0"
                                Command="{Binding ChangeBackRunDir}"
                                Content="{setting:Localize SettingWindow.Tab1.Text17}"
                                DockPanel.Dock="Right"
                                ToolTip.Tip="{setting:Localize ToolTip.Text131}"
                                ToolTip.VerticalOffset="-30" />
                        </StackPanel>
                        <TextBlock
                            Margin="0,0,0,5"
                            Text="{setting:Localize SettingWindow.Tab1.Text16}"
                            TextWrapping="Wrap" />
                    </StackPanel>
                    <TextBlock Text="{setting:Localize SettingWindow.Tab1.Text4}" />
                    <StackPanel>
                        <TextBox
                            Margin="0,0,0,5"
                            Classes="input1"
                            Text="{Binding Local1}"
                            Watermark="{setting:Localize SettingWindow.Tab1.Text5}" />
                        <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                            <Button
                                Width="100"
                                Height="25"
                                Command="{Binding Open1}"
                                Content="{setting:Localize Button.Select}"
                                DockPanel.Dock="Right"
                                ToolTip.Tip="{setting:Localize ToolTip.Text121}"
                                ToolTip.VerticalOffset="-30" />
                            <Button
                                Width="100"
                                Height="25"
                                Margin="5,0,0,0"
                                Command="{Binding Import1}"
                                Content="{setting:Localize Button.Input}"
                                DockPanel.Dock="Right"
                                ToolTip.Tip="{setting:Localize ToolTip.Text120}"
                                ToolTip.VerticalOffset="-30" />
                        </StackPanel>
                    </StackPanel>
                    <TextBlock Text="{setting:Localize SettingWindow.Tab1.Text6}" />
                    <StackPanel>
                        <TextBox
                            Margin="0,0,0,5"
                            Classes="input1"
                            Text="{Binding Local2}"
                            Watermark="{setting:Localize SettingWindow.Tab1.Text7}" />
                        <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                            <Button
                                Width="100"
                                Height="25"
                                Command="{Binding Open2}"
                                Content="{setting:Localize Button.Select}"
                                DockPanel.Dock="Right"
                                ToolTip.Tip="{setting:Localize ToolTip.Text121}"
                                ToolTip.VerticalOffset="-30" />
                            <Button
                                Width="100"
                                Height="25"
                                Margin="5,0,0,0"
                                Command="{Binding Import2}"
                                Content="{setting:Localize Button.Input}"
                                DockPanel.Dock="Right"
                                ToolTip.Tip="{setting:Localize ToolTip.Text120}"
                                ToolTip.VerticalOffset="-30" />
                        </StackPanel>
                    </StackPanel>
                    <TextBlock Text="{setting:Localize SettingWindow.Tab1.Text8}" />
                    <StackPanel>
                        <TextBox
                            Margin="0,0,0,5"
                            Classes="input1"
                            Text="{Binding Local3}"
                            Watermark="{setting:Localize SettingWindow.Tab1.Text9}" />
                        <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                            <Button
                                Width="100"
                                Height="25"
                                Command="{Binding Open3}"
                                Content="{setting:Localize Button.Select}"
                                DockPanel.Dock="Right"
                                ToolTip.Tip="{setting:Localize ToolTip.Text121}"
                                ToolTip.VerticalOffset="-30" />
                            <Button
                                Width="100"
                                Height="25"
                                Margin="5,0,0,0"
                                Command="{Binding Import3}"
                                Content="{setting:Localize Button.Input}"
                                DockPanel.Dock="Right"
                                ToolTip.Tip="{setting:Localize ToolTip.Text120}"
                                ToolTip.VerticalOffset="-30" />
                        </StackPanel>
                    </StackPanel>
                    <TextBlock Text="{setting:Localize SettingWindow.Tab1.Text10}" />
                    <StackPanel>
                        <TextBox
                            Margin="0,0,0,5"
                            Classes="input1"
                            Text="{Binding Local4}"
                            Watermark="{setting:Localize SettingWindow.Tab1.Text11}" />
                        <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                            <Button
                                Width="100"
                                Height="25"
                                Command="{Binding Open4}"
                                Content="{setting:Localize Button.Select}"
                                DockPanel.Dock="Right"
                                ToolTip.Tip="{setting:Localize ToolTip.Text121}"
                                ToolTip.VerticalOffset="-30" />
                            <Button
                                Width="100"
                                Height="25"
                                Margin="5,0,0,0"
                                Command="{Binding Import3}"
                                Content="{setting:Localize Button.Input}"
                                DockPanel.Dock="Right"
                                ToolTip.Tip="{setting:Localize ToolTip.Text120}"
                                ToolTip.VerticalOffset="-30" />
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Border>
            <Border
                Margin="0,0,0,3"
                Padding="{setting:Style BorderPadding}"
                Background="{setting:Colors GroupBack}"
                BorderBrush="{setting:Colors GroupColor}"
                BorderThickness="2"
                CornerRadius="{setting:Style ButtonCornerRadius}">
                <WrapPanel Margin="0,0,0,-5">
                    <TextBlock Margin="0,0,10,5" Text="{setting:Localize SettingWindow.Tab1.Text12}" />
                    <Button
                        Width="100"
                        Height="25"
                        Margin="0,0,5,5"
                        Command="{Binding Reset}"
                        Content="{setting:Localize SettingWindow.Tab1.Text1}"
                        ToolTip.Tip="{setting:Localize ToolTip.Text122}"
                        ToolTip.VerticalOffset="-30" />
                    <Button
                        Width="100"
                        Height="25"
                        Margin="0,0,5,5"
                        Command="{Binding ClearUser}"
                        Content="{setting:Localize SettingWindow.Tab1.Text2}"
                        ToolTip.Tip="{setting:Localize ToolTip.Text123}"
                        ToolTip.VerticalOffset="-30" />
                </WrapPanel>
            </Border>
            <Border
                Margin="0,0,0,3"
                Padding="{setting:Style BorderPadding}"
                Background="{setting:Colors GroupBack}"
                BorderBrush="{setting:Colors GroupColor}"
                BorderThickness="2"
                CornerRadius="{setting:Style ButtonCornerRadius}"
                IsVisible="{Binding !Phone}">
                <WrapPanel Margin="0,0,0,-5">
                    <TextBlock Margin="0,0,10,5" Text="{setting:Localize SettingWindow.Tab1.Text13}" />
                    <Button
                        Width="100"
                        Height="25"
                        Margin="0,0,5,5"
                        Command="{Binding Open}"
                        Content="{setting:Localize SettingWindow.Tab1.Text3}" />
                    <Button
                        Width="100"
                        Height="25"
                        Margin="0,0,5,5"
                        Command="{Binding OpenJavaPath}"
                        Content="{setting:Localize SettingWindow.Tab5.Text6}" />
                    <Button
                        Width="120"
                        Height="25"
                        Margin="0,0,5,5"
                        Command="{Binding OpenDownloadPath}"
                        Content="{setting:Localize SettingWindow.Tab3.Text13}" />
                    <Button
                        Width="120"
                        Height="25"
                        Margin="0,0,5,5"
                        Command="{Binding OpenPicPath}"
                        Content="{setting:Localize SettingWindow.Tab3.Text18}" />
                </WrapPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
