<UserControl
    x:Class="ColorMC.Gui.UI.Controls.Setting.SettingControl"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="clr-namespace:ColorMC.Gui.UI.Model.Setting"
    xmlns:setting="clr-namespace:ColorMC.Gui.Utils.LaunchSetting"
    xmlns:svg="clr-namespace:ColorMC.Gui.UI.Controls.Svg"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:DataType="model:SettingModel"
    mc:Ignorable="d">
    <Panel>
        <DockPanel>
            <Border
                Margin="5,5,5,0"
                Padding="{setting:Style BorderPadding}"
                BorderThickness="2"
                Classes="t1"
                CornerRadius="{setting:Style ButtonCornerRadius}"
                DockPanel.Dock="Top">
                <StackPanel
                    Name="StackPanel2"
                    Background="Transparent"
                    Orientation="Horizontal">
                    <Button
                        Width="25"
                        Height="25"
                        Command="{Binding OpenSide}"
                        ToolTip.Tip="{setting:Localize ToolTip.Text5}"
                        ToolTip.VerticalOffset="-30">
                        <Svg Path="/Resource/Icon/menu.svg" />
                    </Button>
                    <Label
                        Margin="20,0,0,0"
                        Content="{Binding Title}"
                        FontSize="18" />
                </StackPanel>
            </Border>

            <Panel ClipToBounds="True">
                <ContentControl Name="Content1" />
                <ContentControl Name="Content2" />
            </Panel>
        </DockPanel>

        <Panel
            Name="StackPanel1"
            Background="{setting:Colors TopBottom}"
            IsVisible="False">
            <Border
                Name="DockPanel1"
                HorizontalAlignment="Left"
                Background="{setting:Colors Bottom}"
                BorderThickness="2,2,0,0">
                <DockPanel>
                    <ListBoxItem Margin="0,4,0,0" DockPanel.Dock="Top">
                        <StackPanel Orientation="Horizontal">
                            <svg:SvgControl
                                Width="24"
                                Height="24"
                                Fill="{setting:Colors Font}"
                                Path="/Resource/Icon/left1.svg"
                                Stroke="{setting:Colors Font}" />
                            <TextBlock
                                Margin="5,0,0,0"
                                VerticalAlignment="Center"
                                Text="{setting:Localize Gui.Info32}" />
                        </StackPanel>
                    </ListBoxItem>
                    <ListBox
                        Margin="0,2,0,0"
                        ItemsSource="{Binding TabItems}"
                        SelectedIndex="{Binding NowView1}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <svg:SvgControl
                                        Width="24"
                                        Height="24"
                                        Fill="{setting:Colors Font}"
                                        Path="{Binding Icon}"
                                        Stroke="{setting:Colors Font}" />
                                    <TextBlock
                                        Margin="5,0,0,0"
                                        VerticalAlignment="Center"
                                        Text="{Binding Text}" />
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </DockPanel>
            </Border>
        </Panel>
    </Panel>
</UserControl>
