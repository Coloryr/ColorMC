<UserControl
    x:Class="ColorMC.Gui.UI.Controls.Setting.SettingControl"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:setting="clr-namespace:ColorMC.Gui.Utils.LaunchSetting"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <DockPanel LastChildFill="True">
        <ScrollViewer
            Name="ScrollViewer1"
            VerticalAlignment="Top"
            AllowAutoHide="True"
            Background="{setting:Colors TranBack}"
            DockPanel.Dock="Top"
            HorizontalScrollBarVisibility="Auto"
            VerticalScrollBarVisibility="Disabled">
            <TabControl Name="Tabs" Margin="0,0,0,5">
                <TabItem Header="{setting:Localize SettingWindow.Tabs.Text2}" />
                <TabItem Header="{setting:Localize SettingWindow.Tabs.Text3}" />
                <TabItem Header="{setting:Localize SettingWindow.Tabs.Text4}" />
                <TabItem Header="{setting:Localize SettingWindow.Tabs.Text5}" />
                <TabItem Header="{setting:Localize SettingWindow.Tabs.Text6}" />
                <TabItem Header="{setting:Localize SettingWindow.Tabs.Text1}" />
                <TabItem Header="{setting:Localize SettingWindow.Tabs.Text7}" />
            </TabControl>
        </ScrollViewer>

        <Grid
            Name="Tab1"
            Background="{setting:Colors TranBack}"
            ClipToBounds="True" />

    </DockPanel>
</UserControl>
