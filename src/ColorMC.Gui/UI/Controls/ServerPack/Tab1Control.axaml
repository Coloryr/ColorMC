<UserControl
    x:Class="ColorMC.Gui.UI.Controls.ServerPack.Tab1Control"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="clr-namespace:ColorMC.Gui.UI.Model.ServerPack"
    xmlns:setting="clr-namespace:ColorMC.Gui.Utils"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:DataType="model:ServerPackModel"
    mc:Ignorable="d">
    <Decorator Margin="0,0,10,15">
        <Border
            Name="ScrollViewer1"
            Margin="10,5,10,3"
            Classes="t2">
            <DockPanel Margin="15">
                <TextBlock
                    Margin="0,0,0,10"
                    DockPanel.Dock="Top"
                    Text="{setting:Localize ServerPackWindow.Tab1.Text1}" />
                <TextBox
                    AcceptsReturn="True"
                    Classes="input2"
                    DockPanel.Dock="Top"
                    Text="{Binding Text}"
                    Watermark="{setting:Localize ServerPackWindow.Tab1.Text6}" />
            </DockPanel>
        </Border>
    </Decorator>
</UserControl>
