<UserControl
    x:Class="ColorMC.Gui.UI.Controls.ServerPack.Tab4Control"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="clr-namespace:ColorMC.Gui.UI.Model.ServerPack"
    xmlns:setting="clr-namespace:ColorMC.Gui.Utils.LaunchSetting"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:DataType="model:ServerPackModel"
    mc:Ignorable="d">
    <DockPanel Margin="5,0,5,5">
        <Border
            Margin="0,3,0,0"
            Padding="{setting:Style BorderPadding}"
            Background="{setting:Colors GroupBack}"
            BorderBrush="{setting:Colors GroupColor}"
            BorderThickness="2"
            CornerRadius="{setting:Style ButtonCornerRadius}"
            DockPanel.Dock="Top">
            <StackPanel>
                <DockPanel>
                    <Label
                        VerticalAlignment="Center"
                        Content="{setting:Localize ServerPackWindow.Tab4.Text1}"
                        DockPanel.Dock="Left" />
                    <Button
                        Width="80"
                        Height="25"
                        Command="{Binding AddFile}"
                        Content="{setting:Localize Button.Add}"
                        DockPanel.Dock="Right" />

                    <ComboBox
                        Width="140"
                        Margin="0,0,5,0"
                        HorizontalAlignment="Stretch"
                        DockPanel.Dock="Right"
                        ItemsSource="{Binding FuntionList}"
                        SelectedIndex="{Binding Funtion}" />
                    <Label
                        VerticalAlignment="Center"
                        Content="{setting:Localize ServerPackWindow.Tab4.Text2}"
                        DockPanel.Dock="Right" />

                    <ComboBox
                        HorizontalAlignment="Stretch"
                        ItemsSource="{Binding NameList}"
                        SelectedItem="{Binding Group}" />
                </DockPanel>
                <Label Content="{setting:Localize ServerPackWindow.Tab4.Text3}" DockPanel.Dock="Bottom" />
            </StackPanel>
        </Border>
        <Border
            Margin="0,3,0,0"
            Padding="{setting:Style BorderPadding}"
            Background="{setting:Colors GroupBack}"
            BorderBrush="{setting:Colors GroupColor}"
            BorderThickness="2"
            CornerRadius="{setting:Style ButtonCornerRadius}">
            <DataGrid
                Name="DataGrid1"
                AutoGenerateColumns="False"
                CanUserResizeColumns="True"
                CanUserSortColumns="False"
                ItemsSource="{Binding FileList}"
                SelectedItem="{Binding FileItem}">
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Binding="{Binding Group}"
                        Header="{setting:Localize Text.Name}"
                        IsReadOnly="True" />
                    <DataGridTextColumn
                        Binding="{Binding Type}"
                        Header="{setting:Localize ServerPackWindow.Tab4.DataGrid.Text2}"
                        IsReadOnly="True" />
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </DockPanel>
</UserControl>
