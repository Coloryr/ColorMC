<UserControl
    x:Class="ColorMC.Gui.UI.Controls.HeadControl"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:setting="clr-namespace:ColorMC.Gui.Utils.LaunchSetting"
    Height="35"
    d:DesignHeight="35"
    d:DesignWidth="800"
    Background="Transparent"
    mc:Ignorable="d">
    <Grid>
        <Border Name="Border1" Background="{setting:Colors Main}" />
        <Grid Margin="5,5,5,0">
            <StackPanel Orientation="Horizontal">
                <Label
                    Name="TitleShow"
                    Margin="10,0,0,0"
                    Content="{Binding Title}"
                    Foreground="{setting:Colors ButtonFont}" />
                <Label
                    Name="TitleShow1"
                    Margin="10,0,0,0"
                    Content="{Binding Title1}"
                    Foreground="{setting:Colors ButtonFont}" />
            </StackPanel>
            <StackPanel
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Orientation="Horizontal">
                <Button
                    Name="Button_Min"
                    Width="24"
                    Height="24"
                    Margin="0,0,5,0"
                    Content="-"
                    ToolTip.Tip="{setting:Localize ToolTip.Text1}"
                    ToolTip.VerticalOffset="-30" />
                <Button
                    Name="Button_Max"
                    Width="24"
                    Height="24"
                    Margin="0,0,5,0"
                    Content="â–¢"
                    ToolTip.Tip="{setting:Localize ToolTip.Text2}"
                    ToolTip.VerticalOffset="-30" />
                <Button
                    Name="Button_Close"
                    Width="24"
                    Height="24"
                    Margin="0,0,2,0"
                    Content="X"
                    ToolTip.Tip="{setting:Localize ToolTip.Text3}"
                    ToolTip.VerticalOffset="-30" />
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
