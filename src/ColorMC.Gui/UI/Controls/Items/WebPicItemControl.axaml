<UserControl
    x:Class="ColorMC.Gui.UI.Controls.Items.WebPicItemControl"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:app="clr-namespace:ColorMC.Gui.Manager"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="clr-namespace:ColorMC.Gui.UI.Model.Items"
    xmlns:setting="clr-namespace:ColorMC.Gui.UI"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:DataType="model:WebPicModel"
    mc:Ignorable="d">
    <Border
        Margin="10,5,10,5"
        Background="{setting:Theme ItemBG}"
        BoxShadow="{Binding Border}"
        CornerRadius="5">
        <StackPanel Width="400" Margin="15">
            <Image
                Margin="0,0,0,5"
                Source="{Binding Image^, FallbackValue={x:Static app:ImageManager.LoadBitmap}}"
                Stretch="UniformToFill" />
            <TextBlock
                Margin="10,5,10,0"
                HorizontalAlignment="Center"
                Foreground="#FF9A9A9A"
                Text="{Binding Name, FallbackValue=Name}"
                TextWrapping="Wrap" />
            <TextBlock
                Margin="10,5,10,0"
                HorizontalAlignment="Center"
                Foreground="#FF9A9A9A"
                Text="{Binding Description, FallbackValue=Description}"
                TextWrapping="Wrap" />
        </StackPanel>
    </Border>
</UserControl>
