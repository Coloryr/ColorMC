<UserControl
    x:Class="ColorMC.Gui.UI.Controls.Items.ScreenshotControl"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:app="clr-namespace:ColorMC.Gui.Manager"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="clr-namespace:ColorMC.Gui.UI.Model.Items"
    xmlns:setting="clr-namespace:ColorMC.Gui.UI"
    x:DataType="model:ScreenshotModel"
    mc:Ignorable="d">
    <Border
        Margin="10,5,10,5"
        Background="{setting:Theme ItemBG}"
        BoxShadow="{Binding Border}"
        CornerRadius="5">
        <StackPanel Margin="15">
            <Border
                Width="230"
                Height="129"
                Margin="0,0,0,5">
                <Border.Background>
                    <ImageBrush Source="{Binding Image^, FallbackValue={x:Static app:ImageManager.LoadIcon}}" Stretch="UniformToFill" />
                </Border.Background>
            </Border>
            <TextBlock
                MaxWidth="230"
                HorizontalAlignment="Center"
                Text="{Binding Name}"
                TextTrimming="CharacterEllipsis" />
        </StackPanel>
    </Border>
</UserControl>
