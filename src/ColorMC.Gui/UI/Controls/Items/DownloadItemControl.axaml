<UserControl
    x:Class="ColorMC.Gui.UI.Controls.Items.DownloadItemControl"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="clr-namespace:ColorMC.Gui.UI.Model.Items"
    xmlns:setting="clr-namespace:ColorMC.Gui.Utils.LaunchSetting"
    x:DataType="model:DownloadItemModel"
    mc:Ignorable="d">
    <Border Classes="t1">
        <StackPanel Margin="15">
            <DockPanel Margin="0,0,0,5">
                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                    <TextBlock Margin="0,0,5,0" Text="{setting:Localize DownloadWindow.DataGrid.Text5}" />
                    <TextBlock Text="{Binding ErrorTime, FallbackValue=0}" />
                </StackPanel>
                <StackPanel
                    Margin="20,0,0,0"
                    DockPanel.Dock="Right"
                    Orientation="Horizontal">
                    <TextBlock
                        Width="100"
                        Margin="0,0,20,0"
                        HorizontalAlignment="Left"
                        Text="{Binding NowTemp, FallbackValue=Speed}" />
                    <TextBlock
                        Width="80"
                        Margin="0,0,20,0"
                        Text="{Binding State, FallbackValue=下载中}" />
                </StackPanel>
                <WrapPanel>
                    <TextBlock Text="{setting:Localize DownloadWindow.Text5}" />
                    <TextBlock Text="{Binding Index, FallbackValue=1}" />
                </WrapPanel>
            </DockPanel>
            <DockPanel Margin="0,0,0,5">
                <StackPanel
                    HorizontalAlignment="Right"
                    DockPanel.Dock="Right"
                    Orientation="Horizontal">
                    <TextBlock Text="{Binding NowProgress, StringFormat=0.00, FallbackValue=50}" />
                    <TextBlock Text="%" />
                </StackPanel>
                <TextBlock Text="{Binding Name, FallbackValue=Name}" />
            </DockPanel>
            <ProgressBar
                Height="10"
                HorizontalAlignment="Stretch"
                CornerRadius="20"
                IsIndeterminate="{Binding IsNotSize}"
                Maximum="100"
                Value="{Binding NowProgress}" />
        </StackPanel>
    </Border>
</UserControl>
