<UserControl
    x:Class="ColorMC.Gui.UI.Controls.Main.MainControl"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cards="clr-namespace:ColorMC.Gui.UI.Controls.Main.Cards"
    xmlns:cov="clr-namespace:ColorMC.Gui.UI.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:enums="clr-namespace:ColorMC.Gui.Objs"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="clr-namespace:ColorMC.Gui.UI.Model.Main"
    xmlns:setting="clr-namespace:ColorMC.Gui.UI"
    xmlns:svg="clr-namespace:ColorMC.Gui.UI.Views.Svg"
    xmlns:views="clr-namespace:ColorMC.Gui.UI.Controls"
    xmlns:views1="clr-namespace:ColorMC.Gui.UI.Controls.Items"
    xmlns:views2="clr-namespace:ColorMC.Gui.UI.Controls.Main"
    xmlns:views3="clr-namespace:ColorMC.Gui.UI.Controls.Dialog"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:DataType="model:MainModel"
    DragDrop.AllowDrop="True"
    mc:Ignorable="d">
    <UserControl.Resources>
        <cov:EnumToBooleanConverter x:Key="EnumToBool" />
    </UserControl.Resources>
    <Panel>
        <Panel Name="MainView">
            <DockPanel>
                <Panel Background="{setting:Theme TopBG}" DockPanel.Dock="Top">
                    <Button
                        Margin="0,12,30,12"
                        HorizontalAlignment="Right"
                        Classes="head"
                        Command="{Binding ShowUser}"
                        CornerRadius="5">
                        <StackPanel Margin="10,5,10,5" Orientation="Horizontal">
                            <StackPanel Margin="0,0,10,0" VerticalAlignment="Center">
                                <TextBlock
                                    FontSize="13"
                                    Text="{Binding UserId, FallbackValue=User Name}"
                                    TextWrapping="NoWrap" />
                                <TextBlock
                                    HorizontalAlignment="Right"
                                    FontSize="12"
                                    Foreground="{Binding AuthColor}"
                                    Text="{Binding UserType, FallbackValue=456}" />
                            </StackPanel>
                            <Panel>
                                <Border
                                    Width="35"
                                    Height="35"
                                    VerticalAlignment="Center">
                                    <Border.Background>
                                        <ImageBrush Source="{Binding Head}" Stretch="UniformToFill" />
                                    </Border.Background>
                                </Border>
                                <ProgressBar
                                    Width="30"
                                    Height="10"
                                    MinWidth="20"
                                    CornerRadius="20"
                                    IsIndeterminate="{Binding IsHeadLoad}"
                                    IsVisible="{Binding IsHeadLoad}" />
                            </Panel>
                        </StackPanel>
                    </Button>
                    <StackPanel
                        Margin="30,0,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                        <Button
                            Margin="0,0,8,0"
                            Padding="12,6,12,6"
                            Classes="icon"
                            Command="{Binding ShowSkin}"
                            CornerRadius="8"
                            IsVisible="{Binding IsHavePlayer}"
                            ToolTip.Tip="{setting:Localize ToolTip.Text9}">
                            <StackPanel Orientation="Horizontal">
                                <svg:SvgControl Height="20" Path="/Resource/Icon/Button/Texture.svg" />
                                <TextBlock
                                    Margin="5,0,0,0"
                                    VerticalAlignment="Center"
                                    FontSize="13"
                                    Text="{setting:Localize MainWindow.Text39}" />
                            </StackPanel>
                        </Button>
                        <Button
                            Margin="0,0,8,0"
                            Padding="12,6,12,6"
                            Classes="icon"
                            Command="{Binding OpenCollect}"
                            CornerRadius="8"
                            ToolTip.Tip="{setting:Localize ToolTip.Text133}">
                            <StackPanel Orientation="Horizontal">
                                <svg:SvgControl Height="20" Path="/Resource/Icon/Item/StarNone.svg" />
                                <TextBlock
                                    Margin="5,0,0,0"
                                    FontSize="13"
                                    Text="{setting:Localize MainWindow.Text34}" />
                            </StackPanel>
                        </Button>
                        <Button
                            Margin="0,0,8,0"
                            Padding="12,6,12,6"
                            Classes="icon"
                            Command="{Binding OpenGuide}"
                            CornerRadius="8"
                            ToolTip.Tip="{setting:Localize ToolTip.Text70}">
                            <StackPanel Orientation="Horizontal">
                                <svg:SvgControl Height="20" Path="/Resource/Icon/Button/Guide.svg" />
                                <TextBlock
                                    Margin="5,0,0,0"
                                    FontSize="13"
                                    Text="{setting:Localize MainWindow.Text29}" />
                            </StackPanel>
                        </Button>
                        <Button
                            Margin="0,0,8,0"
                            Padding="12,6,12,6"
                            Classes="icon"
                            Command="{Binding ShowCount}"
                            CornerRadius="8"
                            ToolTip.Tip="{setting:Localize ToolTip.Text92}">
                            <StackPanel Orientation="Horizontal">
                                <svg:SvgControl Height="20" Path="/Resource/Icon/Button/Counter.svg" />
                                <TextBlock
                                    Margin="5,0,0,0"
                                    FontSize="13"
                                    Text="{setting:Localize MainWindow.Text30}" />
                            </StackPanel>
                        </Button>
                        <Button
                            Padding="12,6,12,6"
                            Classes="icon"
                            Command="{Binding ShowSetting}"
                            CornerRadius="8"
                            ToolTip.Tip="{setting:Localize ToolTip.Text13}">
                            <StackPanel Orientation="Horizontal">
                                <svg:SvgControl Height="20" Path="/Resource/Icon/Button/Cog.svg" />
                                <TextBlock
                                    Margin="5,0,0,0"
                                    FontSize="13"
                                    Text="{setting:Localize Text.Set}" />
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Panel>
                <Rectangle
                    Height="1"
                    DockPanel.Dock="Top"
                    Fill="{setting:Theme HeadFill}" />
                <ScrollViewer DockPanel.Dock="Right" IsVisible="{Binding HaveCard}">
                    <StackPanel Width="200" Margin="0,0,30,30">
                        <cards:MusicControl Margin="0,20,0,0" IsVisible="{Binding CardMusic}" />
                        <cards:UpdateControl Margin="0,20,0,0" IsVisible="{Binding CardUpdate}" />
                        <cards:NewsControl Margin="0,20,0,0" IsVisible="{Binding CardNews}" />
                        <cards:LastControl Margin="0,20,0,0" IsVisible="{Binding CardLast}" />
                        <cards:OnlineControl Margin="0,20,0,0" IsVisible="{Binding CardOnline}" />
                        <cards:LuckControl Margin="0,20,0,0" IsVisible="{Binding CardBlock}" />
                    </StackPanel>
                </ScrollViewer>
                <ScrollViewer Name="ContentScroll" Margin="0,0,10,0">
                    <DockPanel Name="ContentOut" Margin="0,0,20,0">
                        <views:ServerMotdControl
                            Margin="30,20,0,0"
                            DockPanel.Dock="Top"
                            IPPort="{Binding Server}"
                            IsVisible="{Binding MotdDisplay}" />
                        <DockPanel
                            Margin="30,20,0,0"
                            DockPanel.Dock="Top"
                            IsVisible="{Binding !IsNotGame}">
                            <Border
                                Padding="3"
                                Background="{setting:Theme RadioGroupBG}"
                                CornerRadius="8"
                                DockPanel.Dock="Right">
                                <StackPanel Orientation="Horizontal">
                                    <RadioButton
                                        Classes="t1"
                                        GroupName="Group2"
                                        IsChecked="{Binding GridType, Converter={StaticResource EnumToBool}, ConverterParameter={x:Static enums:ItemsGridType.Grid}, FallbackValue=true}">
                                        <svg:SvgControl
                                            Width="16"
                                            Height="16"
                                            Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=RadioButton}}"
                                            Path="/Resource/Icon/ListGrid/Grid.svg" />
                                    </RadioButton>
                                    <RadioButton
                                        Classes="t1"
                                        GroupName="Group2"
                                        IsChecked="{Binding GridType, Converter={StaticResource EnumToBool}, ConverterParameter={x:Static enums:ItemsGridType.GridInfo}}">
                                        <svg:SvgControl
                                            Width="16"
                                            Height="16"
                                            Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=RadioButton}}"
                                            Path="/Resource/Icon/ListGrid/GridInfo.svg" />
                                    </RadioButton>
                                    <RadioButton
                                        Classes="t1"
                                        GroupName="Group2"
                                        IsChecked="{Binding GridType, Converter={StaticResource EnumToBool}, ConverterParameter={x:Static enums:ItemsGridType.ListInfo}}">
                                        <svg:SvgControl
                                            Width="16"
                                            Height="16"
                                            Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=RadioButton}}"
                                            Path="/Resource/Icon/ListGrid/ListInfo.svg" />
                                    </RadioButton>
                                </StackPanel>
                            </Border>
                            <TextBlock FontSize="16" Text="{setting:Localize MainWindow.Text95}" />
                            <TextBlock
                                Margin="20,0,0,0"
                                IsVisible="{Binding GameSearch, FallbackValue=true}"
                                Text="{setting:Localize MainWindow.Text13}" />
                            <TextBox
                                Margin="0,0,20,0"
                                IsVisible="{Binding GameSearch, FallbackValue=true}"
                                Text="{Binding GameSearchText}" />
                        </DockPanel>
                        <Decorator Name="Content1" Margin="30,20,0,30" />
                    </DockPanel>
                </ScrollViewer>
            </DockPanel>
            <Border
                Name="Grid2"
                Background="{setting:Theme OverGridBG}"
                IsVisible="False"
                Opacity="0.9">
                <TextBlock
                    Name="Label1"
                    HorizontalAlignment="Center"
                    FontSize="30"
                    Text="test" />
            </Border>
        </Panel>
        <Decorator Name="Start" IsVisible="False" />
    </Panel>
</UserControl>
