<UserControl
    x:Class="ColorMC.Gui.UI.Controls.Main.GamesControl"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:setting="clr-namespace:ColorMC.Gui.Utils.LaunchSetting"
    xmlns:views1="clr-namespace:ColorMC.Gui.UI.Controls.Main"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Expander
        Name="Expander_Head"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Top"
        CornerRadius="0"
        Header="{Binding Group}"
        IsExpanded="{Binding Expander}">
        <Grid>
            <ItemsControl
                VerticalAlignment="Top"
                Background="Transparent"
                ItemsSource="{Binding GameList}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <views1:GameControl GameModel="{Binding}" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            <Grid
                Name="Grid1"
                Margin="-15"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Background="{setting:Colors TopBottom}"
                IsVisible="False">
                <Label
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Content="{setting:Localize MainWindow.Control.Text8}"
                    FontSize="20" />
            </Grid>
        </Grid>
    </Expander>
</UserControl>
