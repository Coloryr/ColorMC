<UserControl
    x:Class="ColorMC.Gui.UI.Controls.Main.GameControl"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:setting="clr-namespace:ColorMC.Gui.Utils.LaunchSetting"
    Width="100"
    d:DesignHeight="150"
    d:DesignWidth="100"
    mc:Ignorable="d">
    <Grid>
        <Rectangle
            Name="Rectangle_Select"
            Fill="{setting:Colors Back}"
            IsVisible="False"
            Stroke="{setting:Colors Main}"
            StrokeThickness="2" />
        <StackPanel Margin="5">
            <Image
                Name="Image1"
                Source="resm:ColorMC.Gui.Resource.Pic.game.png"
                Stretch="UniformToFill" />
            <TextBlock
                Name="TextBlock1"
                HorizontalAlignment="Center"
                Text="Name"
                TextAlignment="Center"
                TextWrapping="Wrap" />
        </StackPanel>

        <Image
            Name="Image2"
            Width="32"
            Height="32"
            Margin="0,40,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            IsVisible="False"
            Source="resm:ColorMC.Gui.Resource.Pic.launch.png"
            Stretch="UniformToFill" />
    </Grid>

</UserControl>
