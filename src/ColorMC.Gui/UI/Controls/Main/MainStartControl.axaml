<UserControl
    x:Class="ColorMC.Gui.UI.Controls.Main.MainStartControl"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:setting="clr-namespace:ColorMC.Gui.UI"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <StackPanel
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Orientation="Horizontal">
        <Image
            Name="Image1"
            Width="100"
            Height="100"
            Margin="0,0,10,0"
            HorizontalAlignment="Center"
            Source="resm:ColorMC.Gui.Resource.Pic.game.png" />
        <StackPanel
            Name="Grid1"
            ClipToBounds="True"
            RenderOptions.TextRenderingMode="Antialias">
            <TextBlock
                HorizontalAlignment="Center"
                FontSize="40"
                Text="{setting:Localize MainWindow.Text12}" />
            <TextBlock
                HorizontalAlignment="Center"
                FontSize="40"
                Text="ColorMC" />
        </StackPanel>
    </StackPanel>
</UserControl>
