<UserControl
    x:Class="ColorMC.Gui.UI.Controls.Main.SimpleControl"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="clr-namespace:ColorMC.Gui.UI.Model.Main"
    xmlns:panel="clr-namespace:ColorMC.Gui.UI.Views"
    xmlns:setting="clr-namespace:ColorMC.Gui.UI"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:DataType="model:MainModel"
    mc:Ignorable="d">
    <Border Classes="t2">
        <StackPanel
            Margin="20"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            RenderOptions.TextRenderingMode="Antialias">
            <Image
                Width="100"
                Height="100"
                Source="{Binding GameIcon}" />
            <TextBlock
                Margin="0,5,0,10"
                HorizontalAlignment="Center"
                FontSize="20"
                MaxLines="3"
                Text="{Binding GameName}"
                TextAlignment="Center"
                TextWrapping="Wrap" />
            <StackPanel Width="240">
                <ComboBox
                    HorizontalAlignment="Stretch"
                    Classes="t1"
                    ClipToBounds="False"
                    DisplayMemberBinding="{Binding Name}"
                    ItemsSource="{Binding GameList}"
                    SelectedItem="{Binding Game}" />
                <UniformGrid
                    Margin="0,10,0,0"
                    Columns="2"
                    Rows="1">
                    <Button
                        Height="35"
                        Margin="-3,-5,0,0"
                        HorizontalAlignment="Stretch"
                        Classes="top"
                        Command="{Binding AddGame}"
                        Content="{setting:Localize MainWindow.Text36}" />
                    <Button
                        Height="35"
                        Margin="0,-5,-3,0"
                        HorizontalAlignment="Stretch"
                        Classes="top"
                        Command="{Binding EditGame}"
                        Content="{setting:Localize MainWindow.Text37}"
                        IsEnabled="{Binding HaveGame}" />
                </UniformGrid>
                <Button
                    Height="50"
                    Margin="-3,0,-3,0"
                    HorizontalAlignment="Stretch"
                    Classes="top"
                    Command="{Binding Launch}"
                    Content="{setting:Localize MainWindow.Text35}"
                    IsEnabled="{Binding HaveGame}" />
                <CheckBox
                    HorizontalAlignment="Right"
                    Content="{setting:Localize MainWindow.Text96}"
                    IsChecked="{Binding EnableArg}" />
            </StackPanel>
            <Grid
                Margin="0,0,0,10"
                ColumnDefinitions="auto,*,auto,*,auto"
                IsEnabled="{Binding HaveGame}"
                IsVisible="{Binding EnableArg}">
                <TextBlock Margin="0,0,5,0" Text="{setting:Localize SettingWindow.Tab4.Text10}" />
                <NumericUpDown
                    Grid.Column="1"
                    Margin="0,0,5,0"
                    HorizontalAlignment="Stretch"
                    FormatString="N0"
                    IsEnabled="{Binding !MaxWindow}"
                    Minimum="1"
                    Value="{Binding GameWidth}" />
                <TextBlock
                    Grid.Column="2"
                    Margin="0,0,5,0"
                    Text="{setting:Localize SettingWindow.Tab4.Text11}" />
                <NumericUpDown
                    Grid.Column="3"
                    Margin="0,0,5,0"
                    HorizontalAlignment="Stretch"
                    FormatString="N0"
                    IsEnabled="{Binding !MaxWindow}"
                    Minimum="1"
                    Value="{Binding GameHeight}" />
                <ToggleSwitch
                    Grid.Column="4"
                    IsChecked="{Binding MaxWindow}"
                    OffContent="{setting:Localize SettingWindow.Tab4.Text12}"
                    OnContent="{setting:Localize SettingWindow.Tab4.Text12}" />
            </Grid>
            <Grid
                ColumnDefinitions="auto,*,auto,*"
                IsEnabled="{Binding HaveGame}"
                IsVisible="{Binding EnableArg}">
                <TextBlock Margin="0,0,5,0" Text="{setting:Localize SettingWindow.Tab4.Text4}" />
                <NumericUpDown
                    Grid.Column="1"
                    Margin="0,0,5,0"
                    HorizontalAlignment="Stretch"
                    FormatString="N0"
                    Minimum="1"
                    Value="{Binding MinMem}" />
                <TextBlock
                    Grid.Column="2"
                    Margin="0,0,5,0"
                    Text="{setting:Localize SettingWindow.Tab4.Text5}" />
                <NumericUpDown
                    Grid.Column="3"
                    HorizontalAlignment="Stretch"
                    FormatString="N0"
                    Minimum="1"
                    Value="{Binding MaxMem}" />
            </Grid>
        </StackPanel>
    </Border>
</UserControl>
