<UserControl
    x:Class="ColorMC.Gui.UI.Controls.GameEdit.Tab8Control"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:item="clr-namespace:ColorMC.Gui.UI.Controls.GameEdit.Items"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="clr-namespace:ColorMC.Gui.UI.Model.GameEdit"
    xmlns:setting="clr-namespace:ColorMC.Gui.Utils.LaunchSetting"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:DataType="model:GameEditModel"
    DragDrop.AllowDrop="True"
    mc:Ignorable="d">
    <Panel>
        <DockPanel Margin="5,0,5,5">
            <WrapPanel
                VerticalAlignment="Top"
                DockPanel.Dock="Top"
                IsVisible="{Binding DisplayFilter}">
                <Button
                    Width="100"
                    Height="25"
                    Margin="0,0,5,0"
                    HorizontalAlignment="Right"
                    Command="{Binding OpenResource}"
                    Content="{setting:Localize Button.OpFile}"
                    ToolTip.Tip="{setting:Localize ToolTip.Text39}"
                    ToolTip.VerticalOffset="-30" />
                <Button
                    Width="100"
                    Height="25"
                    Margin="0,0,5,0"
                    Command="{Binding ImportResource}"
                    Content="{setting:Localize Button.Input}" />
                <Button
                    Width="100"
                    Height="25"
                    Margin="0,0,5,0"
                    Command="{Binding AddResource}"
                    Content="{setting:Localize Button.Add}" />
                <Button
                    Width="100"
                    Height="25"
                    Command="{Binding LoadResource}"
                    Content="{setting:Localize Button.Refash}" />
            </WrapPanel>
            <ScrollViewer Margin="0,3,0,0" VerticalScrollBarVisibility="Visible">
                <ItemsControl
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    ItemsSource="{Binding ResourcePackList}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <item:ResourcePackControl DataContext="{Binding}" />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </DockPanel>

        <Button
            Height="25"
            Margin="0,0,5,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Command="{Binding ShowFilter}">
            <Svg Path="/Resource/Icon/filter.svg" />
        </Button>

        <Panel
            Name="Grid2"
            Background="{setting:Colors TopBottom}"
            IsVisible="False">
            <Label
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Content="{setting:Localize Gui.Info16}"
                FontSize="30" />
        </Panel>
    </Panel>
</UserControl>
