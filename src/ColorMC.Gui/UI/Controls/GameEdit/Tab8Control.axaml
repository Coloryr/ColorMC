<UserControl
    x:Class="ColorMC.Gui.UI.Controls.GameEdit.Tab8Control"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:item="clr-namespace:ColorMC.Gui.UI.Controls.Items"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="clr-namespace:ColorMC.Gui.UI.Model.GameEdit"
    xmlns:setting="clr-namespace:ColorMC.Gui.UI"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:DataType="model:GameEditModel"
    DragDrop.AllowDrop="True"
    mc:Ignorable="d">
    <Panel>
        <DockPanel Margin="0,0,10,15">
            <Border
                Margin="10,5,10,3"
                Padding="15"
                Classes="t2"
                DockPanel.Dock="Top">
                <TextBox Text="{Binding ResourceText}" Watermark="{setting:Localize GameEditWindow.Tab5.Text6}" />
            </Border>
            <Panel>
                <ScrollViewer VerticalScrollBarVisibility="Visible">
                    <ItemsControl
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        ItemsSource="{Binding ResourcePackList}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <item:ResourcePackControl DataContext="{Binding}" />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
                <Border
                    Margin="10,5,10,3"
                    Classes="t1"
                    IsVisible="{Binding ResourceEmptyDisplay}">
                    <TextBlock
                        HorizontalAlignment="Center"
                        FontSize="30"
                        Text="{setting:Localize GameEditWindow.Tab8.Text2}" />
                </Border>
            </Panel>
        </DockPanel>
        <Panel
            Name="Grid2"
            Background="{setting:Theme OverGridBG}"
            IsVisible="False"
            Opacity="0.9">
            <TextBlock
                HorizontalAlignment="Center"
                FontSize="30"
                Text="{setting:Localize GameEditWindow.Tab8.Text1}" />
        </Panel>
    </Panel>
</UserControl>
