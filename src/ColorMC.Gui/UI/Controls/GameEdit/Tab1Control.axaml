<UserControl
    x:Class="ColorMC.Gui.UI.Controls.GameEdit.Tab1Control"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:setting="clr-namespace:ColorMC.Gui.Utils.LaunchSetting"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <StackPanel Margin="5">
            <Label Content="{setting:Localize GameEditWindow.Tab1.Text1}" />

            <StackPanel Orientation="Horizontal">
                <ComboBox
                    Name="ComboBox1"
                    Width="250"
                    HorizontalAlignment="Center" />
                <CheckBox
                    Name="CheckBox2"
                    Width="80"
                    Margin="10,0,0,0"
                    Content="{setting:Localize AddGameWindow.Text6}"
                    IsChecked="True" />
                <CheckBox
                    Name="CheckBox3"
                    Width="80"
                    Content="{setting:Localize AddGameWindow.Text7}" />
                <CheckBox
                    Name="CheckBox4"
                    Width="80"
                    Content="{setting:Localize AddGameWindow.Text8}" />
                <Button
                    Name="Button1"
                    Width="100"
                    Height="25"
                    Content="{setting:Localize GameEditWindow.Tab1.Text2}"
                    ToolTip.Tip="{setting:Localize ToolTip.Text33}"
                    ToolTip.VerticalOffset="-30" />
            </StackPanel>

            <Label VerticalAlignment="Center" Content="{setting:Localize AddGameWindow.Text4}" />

            <StackPanel Orientation="Horizontal">

                <ComboBox
                    Name="ComboBox2"
                    Width="250"
                    IsEnabled="False" />
                <CheckBox
                    Name="CheckBox5"
                    Width="80"
                    Margin="10,0,0,0"
                    Content="Forge"
                    IsEnabled="False" />
                <CheckBox
                    Name="CheckBox6"
                    Width="80"
                    Content="Fabric"
                    IsEnabled="False" />
                <CheckBox
                    Name="CheckBox7"
                    Width="80"
                    Content="Quilt"
                    IsEnabled="False" />
                <Button
                    Name="Button2"
                    Width="100"
                    Height="25"
                    Content="{setting:Localize AddGameWindow.Tab1.Text1}"
                    ToolTip.Tip="{setting:Localize ToolTip.Text34}"
                    ToolTip.VerticalOffset="-30" />
                <Button
                    Name="Button3"
                    Width="100"
                    Height="25"
                    Margin="5,0,0,0"
                    Content="{setting:Localize AddGameWindow.Tab1.Text2}"
                    ToolTip.Tip="{setting:Localize ToolTip.Text35}"
                    ToolTip.VerticalOffset="-30" />
            </StackPanel>

            <Label VerticalAlignment="Center" Content="{setting:Localize AddGameWindow.Text5}" />

            <StackPanel Orientation="Horizontal">

                <ComboBox Name="ComboBox3" Width="250" />
                <Button
                    Name="Button4"
                    Width="100"
                    Height="25"
                    Margin="10,0,0,0"
                    Content="{setting:Localize AddGameWindow.Text14}"
                    ToolTip.Tip="{setting:Localize ToolTip.Text37}"
                    ToolTip.VerticalOffset="-30" />
            </StackPanel>

            <CheckBox Name="CheckBox1" Content="{setting:Localize GameEditWindow.Tab1.Text3}" />
        </StackPanel>
        <Button
            Name="Button5"
            Width="120"
            Height="25"
            Margin="5"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom"
            Content="{setting:Localize Button.Delete}"
            ToolTip.Tip="{setting:Localize ToolTip.Text36}"
            ToolTip.VerticalOffset="-30" />

        <Button
            Name="Button6"
            Width="120"
            Height="25"
            Margin="5"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Content="{setting:Localize Button.OpFile}"
            ToolTip.Tip="{setting:Localize ToolTip.Text39}"
            ToolTip.VerticalOffset="-30" />
    </Grid>
</UserControl>
