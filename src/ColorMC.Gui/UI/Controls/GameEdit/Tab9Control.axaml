<UserControl
    x:Class="ColorMC.Gui.UI.Controls.GameEdit.Tab9Control"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:setting="clr-namespace:ColorMC.Gui.Utils.LaunchSetting"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <DockPanel>
            <Button
                Name="Button1"
                Width="85"
                Height="25"
                Margin="0,5,5,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Content="{setting:Localize Button.OpFile}"
                DockPanel.Dock="Top"
                ToolTip.Tip="{setting:Localize ToolTip.Text39}"
                ToolTip.VerticalOffset="-30" />
            <ScrollViewer
                Margin="5"
                HorizontalScrollBarVisibility="Disabled"
                VerticalScrollBarVisibility="Visible">
                <WrapPanel Name="WrapPanel1" />
            </ScrollViewer>
        </DockPanel>
        <StackPanel Margin="4,0,0,0" VerticalAlignment="Center">
            <Grid>
                <Button
                    Name="Button_R"
                    Width="20"
                    Height="30"
                    Content="R" />
                <Expander
                    Name="Expander_R"
                    Height="30"
                    Margin="-94,0,0,0"
                    HorizontalAlignment="Left"
                    Background="Transparent"
                    CornerRadius="0"
                    ExpandDirection="Right"
                    IsExpanded="False">
                    <Button
                        Name="Button_R1"
                        Width="100"
                        Height="30"
                        Margin="16,0,0,0"
                        Content="{setting:Localize Button.Refash}" />
                </Expander>
            </Grid>
            <Grid>
                <Button
                    Name="Button_C"
                    Width="20"
                    Height="30"
                    Content="C" />
                <Expander
                    Name="Expander_C"
                    Height="30"
                    Margin="-94,0,0,0"
                    HorizontalAlignment="Left"
                    Background="Transparent"
                    CornerRadius="0"
                    ExpandDirection="Right"
                    IsExpanded="False">
                    <Button
                        Name="Button_C1"
                        Width="100"
                        Height="30"
                        Margin="16,0,0,0"
                        Content="{setting:Localize GameEditWindow.Flyouts4.Text1}" />
                </Expander>
            </Grid>

        </StackPanel>
    </Grid>
</UserControl>
