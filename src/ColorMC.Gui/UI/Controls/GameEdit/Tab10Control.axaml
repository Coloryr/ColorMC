<UserControl
    x:Class="ColorMC.Gui.UI.Controls.GameEdit.Tab10Control"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:setting="clr-namespace:ColorMC.Gui.Utils.LaunchSetting"
    xmlns:view="clr-namespace:ColorMC.Gui.UI.Controls"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <DockPanel Margin="5,0,5,5">
        <view:ServerMotdControl DockPanel.Dock="Top" IPPort="{Binding IPPort}" />
        <DockPanel>
            <StackPanel
                Margin="0,3,0,0"
                DockPanel.Dock="Top"
                Orientation="Horizontal">
                <Button
                    Width="100"
                    Height="25"
                    Command="{Binding Add}"
                    Content="{setting:Localize Button.Add}"
                    ToolTip.Tip="{setting:Localize ToolTip.Text58}"
                    ToolTip.VerticalOffset="-30" />
                <Button
                    Width="100"
                    Height="25"
                    Command="{Binding Load}"
                    Content="{setting:Localize Button.Refash}"
                    ToolTip.Tip="{setting:Localize ToolTip.Text59}"
                    ToolTip.VerticalOffset="-30" />
            </StackPanel>
            <DataGrid
                Name="DataGrid1"
                AutoGenerateColumns="False"
                CanUserResizeColumns="True"
                CanUserSortColumns="False"
                ItemsSource="{Binding ServerList}"
                SelectedItem="{Binding Item}">
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Binding="{Binding Name}"
                        Header="{setting:Localize DownloadWindow.DataGrid.Text1}"
                        IsReadOnly="True" />
                    <DataGridTextColumn
                        Binding="{Binding IP}"
                        Header="{setting:Localize GameEditWindow.Tab10.Text1}"
                        IsReadOnly="True" />
                </DataGrid.Columns>
            </DataGrid>
        </DockPanel>
    </DockPanel>
</UserControl>
