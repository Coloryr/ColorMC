<UserControl
    x:Class="ColorMC.Gui.UI.Controls.GameEdit.Tab11Control"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:setting="clr-namespace:ColorMC.Gui.Utils.LaunchSetting"
    xmlns:view="clr-namespace:ColorMC.Gui.UI.Controls"
    d:DesignHeight="450"
    d:DesignWidth="800"
    DragDrop.AllowDrop="True"
    mc:Ignorable="d">
    <Panel>
        <DockPanel Margin="5,0,5,5">
            <StackPanel
                Margin="0,3,0,0"
                DockPanel.Dock="Top"
                Orientation="Horizontal">
                <Button
                    Width="100"
                    Height="25"
                    Command="{Binding Open}"
                    Content="{setting:Localize Button.OpFile}"
                    ToolTip.Tip="{setting:Localize ToolTip.Text39}"
                    ToolTip.VerticalOffset="-30" />
                <Button
                    Width="100"
                    Height="25"
                    Margin="5,0,0,0"
                    Command="{Binding Import}"
                    Content="{setting:Localize Button.Input}"
                    ToolTip.Tip="{setting:Localize ToolTip.Text60}"
                    ToolTip.VerticalOffset="-30" />
                <Button
                    Width="100"
                    Height="25"
                    Margin="5,0,0,0"
                    Command="{Binding Add}"
                    Content="{setting:Localize Button.Add}"
                    ToolTip.Tip="{setting:Localize ToolTip.Text61}"
                    ToolTip.VerticalOffset="-30" />
                <Button
                    Width="100"
                    Height="25"
                    Margin="5,0,0,0"
                    Command="{Binding Load}"
                    Content="{setting:Localize Button.Refash}"
                    ToolTip.Tip="{setting:Localize ToolTip.Text62}"
                    ToolTip.VerticalOffset="-30" />
            </StackPanel>
            <DataGrid
                Name="DataGrid1"
                AutoGenerateColumns="False"
                CanUserResizeColumns="True"
                CanUserSortColumns="False"
                ItemsSource="{Binding ShaderpackList}"
                SelectedItem="{Binding Item}">
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Binding="{Binding Name}"
                        Header="{setting:Localize GameEditWindow.Tab6.Info4}"
                        IsReadOnly="True" />
                    <DataGridTextColumn
                        Binding="{Binding Local}"
                        Header="{setting:Localize GameEditWindow.Tab4.DataGrid.Text4}"
                        IsReadOnly="True" />
                </DataGrid.Columns>
            </DataGrid>
        </DockPanel>
        <Panel
            Name="Grid2"
            Background="{setting:Colors TopBottom}"
            IsVisible="False">
            <Label
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Content="{setting:Localize Gui.Info17}"
                FontSize="30" />
        </Panel>
    </Panel>
</UserControl>
