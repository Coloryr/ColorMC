<UserControl
    x:Class="ColorMC.Gui.UI.Controls.GameEdit.Tab4Control"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:setting="clr-namespace:ColorMC.Gui.Utils.LaunchSetting"
    Margin="5"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <DockPanel>
        <Grid DockPanel.Dock="Top">
            <StackPanel Orientation="Horizontal">
                <Label VerticalAlignment="Center" Content="{setting:Localize GameEditWindow.Tab4.Text2}" />
                <ComboBox
                    Name="ComboBox1"
                    Width="200"
                    Margin="5,0,0,0"
                    VerticalAlignment="Center" />

                <TextBox
                    Name="TextBox1"
                    Width="300"
                    Margin="5,0,0,0"
                    HorizontalAlignment="Left"
                    Classes="input1"
                    Watermark="{setting:Localize GameEditWindow.Tab4.Text1}" />

            </StackPanel>
            <Button
                Name="Button1"
                Width="85"
                Height="25"
                Margin="5,0,0,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Content="{setting:Localize Button.OpFile}"
                ToolTip.Tip="{setting:Localize ToolTip.Text39}"
                ToolTip.VerticalOffset="-30" />
        </Grid>

        <Grid>
            <DataGrid
                Name="DataGrid1"
                Margin="0,5,0,0"
                AutoGenerateColumns="False"
                Background="{setting:Colors TranBack}"
                CanUserSortColumns="False"
                HorizontalScrollBarVisibility="Visible"
                VerticalScrollBarVisibility="Visible">
                <DataGrid.Columns>
                    <DataGridCheckBoxColumn
                        Binding="{Binding Enable}"
                        Header="{setting:Localize GameEditWindow.Tab4.DataGrid.Text1}"
                        IsReadOnly="True" />
                    <DataGridTextColumn
                        Binding="{Binding Name}"
                        Header="{setting:Localize GameEditWindow.Tab4.DataGrid.Text2}"
                        IsReadOnly="True" />
                    <DataGridTextColumn
                        Binding="{Binding Version}"
                        Header="{setting:Localize GameEditWindow.Tab4.DataGrid.Text3}"
                        IsReadOnly="True" />
                    <DataGridTextColumn
                        Binding="{Binding Loader}"
                        Header="{setting:Localize GameEditWindow.Tab4.DataGrid.Text7}"
                        IsReadOnly="True" />
                    <DataGridTextColumn
                        Binding="{Binding Source}"
                        Header="下载源"
                        IsReadOnly="True" />
                    <DataGridTextColumn
                        Binding="{Binding PID}"
                        Header="项目ID"
                        IsReadOnly="True" />
                    <DataGridTextColumn
                        Binding="{Binding FID}"
                        Header="文件ID"
                        IsReadOnly="True" />
                    <DataGridTextColumn
                        Binding="{Binding Local}"
                        Header="{setting:Localize GameEditWindow.Tab4.DataGrid.Text4}"
                        IsReadOnly="True" />
                    <DataGridTextColumn
                        Binding="{Binding Author}"
                        Header="{setting:Localize GameEditWindow.Tab4.DataGrid.Text5}"
                        IsReadOnly="True" />
                    <DataGridTextColumn
                        Binding="{Binding Url}"
                        Header="{setting:Localize GameEditWindow.Tab4.DataGrid.Text6}"
                        IsReadOnly="True" />
                </DataGrid.Columns>
            </DataGrid>
            <StackPanel VerticalAlignment="Center">
                <Grid>
                    <Button
                        Name="Button_I"
                        Width="20"
                        Height="30"
                        Content="I" />
                    <Expander
                        Name="Expander_I"
                        Height="30"
                        Margin="-94,-5,0,-5"
                        HorizontalAlignment="Left"
                        Background="Transparent"
                        CornerRadius="0"
                        ExpandDirection="Right"
                        IsExpanded="False">
                        <Button
                            Name="Button_I1"
                            Width="100"
                            Height="30"
                            Margin="16,0,0,0"
                            Content="{setting:Localize Button.Input}" />
                    </Expander>
                </Grid>
                <Grid>
                    <Button
                        Name="Button_A"
                        Width="20"
                        Height="30"
                        Content="A" />
                    <Expander
                        Name="Expander_A"
                        Height="30"
                        Margin="-94,-5,0,-5"
                        HorizontalAlignment="Left"
                        Background="Transparent"
                        CornerRadius="0"
                        ExpandDirection="Right"
                        IsExpanded="False">
                        <Button
                            Name="Button_A1"
                            Width="100"
                            Height="30"
                            Margin="16,0,0,0"
                            Content="{setting:Localize Button.Add}" />
                    </Expander>
                </Grid>
                <Grid>
                    <Button
                        Name="Button_R"
                        Width="20"
                        Height="30"
                        Content="R" />
                    <Expander
                        Name="Expander_R"
                        Height="30"
                        Margin="-94,-5,0,-5"
                        HorizontalAlignment="Left"
                        Background="Transparent"
                        CornerRadius="0"
                        ExpandDirection="Right"
                        IsExpanded="False">
                        <Button
                            Name="Button_R1"
                            Width="100"
                            Height="30"
                            Margin="16,0,0,0"
                            Content="{setting:Localize Button.Refash}" />
                    </Expander>
                </Grid>
                <Grid>
                    <Button
                        Name="Button_C"
                        Width="20"
                        Height="30"
                        Content="C" />
                    <Expander
                        Name="Expander_C"
                        Height="30"
                        Margin="-94,-5,0,-5"
                        HorizontalAlignment="Left"
                        Background="Transparent"
                        CornerRadius="0"
                        ExpandDirection="Right"
                        IsExpanded="False">
                        <Button
                            Name="Button_C1"
                            Width="100"
                            Height="30"
                            Margin="16,0,0,0"
                            Content="检查更新" />
                    </Expander>
                </Grid>
                <Grid>
                    <Button
                        Name="Button_B"
                        Width="20"
                        Height="30"
                        Content="B" />
                    <Expander
                        Name="Expander_B"
                        Height="30"
                        Margin="-94,-5,0,-5"
                        HorizontalAlignment="Left"
                        Background="Transparent"
                        CornerRadius="0"
                        ExpandDirection="Right"
                        IsExpanded="False">
                        <Button
                            Name="Button_B1"
                            Width="100"
                            Height="30"
                            Margin="16,0,0,0"
                            Content="添加标记" />
                    </Expander>
                </Grid>
            </StackPanel>
        </Grid>

    </DockPanel>
</UserControl>
