<UserControl
    x:Class="ColorMC.Gui.UI.Controls.GameEdit.Tab4Control"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:setting="clr-namespace:ColorMC.Gui.Utils.LaunchSetting"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Rectangle Stroke="{setting:Colors Main}" StrokeThickness="3" />

        <DockPanel>
            <Grid DockPanel.Dock="Top">
                <StackPanel Orientation="Horizontal">
                    <Label
                        Margin="5"
                        VerticalAlignment="Center"
                        Content="{setting:Localize GameEditWindow.Tab4.Text2}" />
                    <ComboBox
                        Name="ComboBox1"
                        Width="200"
                        VerticalAlignment="Center" />

                    <TextBox
                        Name="TextBox1"
                        Width="300"
                        Margin="10"
                        HorizontalAlignment="Left"
                        Classes="input1"
                        Watermark="{setting:Localize GameEditWindow.Tab4.Text1}" />

                    <Button
                        Name="Button1"
                        Width="80"
                        Height="25"
                        Content="{setting:Localize GameEditWindow.Tab4.Button3}" />
                </StackPanel>
            </Grid>

            <DataGrid
                Name="DataGrid1"
                Margin="3,0,3,3"
                AutoGenerateColumns="False"
                Background="{setting:Colors TranBack}"
                CanUserSortColumns="False"
                HorizontalScrollBarVisibility="Visible"
                VerticalScrollBarVisibility="Visible">
                <DataGrid.Columns>
                    <DataGridCheckBoxColumn
                        Binding="{Binding Enable}"
                        Header="{setting:Localize GameEditWindow.Tab4.Data.Title1}"
                        IsReadOnly="True" />
                    <DataGridTextColumn
                        Binding="{Binding Name}"
                        Header="{setting:Localize GameEditWindow.Tab4.Data.Title2}"
                        IsReadOnly="True" />
                    <DataGridTextColumn
                        Binding="{Binding Version}"
                        Header="{setting:Localize GameEditWindow.Tab4.Data.Title3}"
                        IsReadOnly="True" />
                    <DataGridTextColumn
                        Binding="{Binding Loader}"
                        Header="加载器"
                        IsReadOnly="True" />
                    <DataGridTextColumn
                        Binding="{Binding Local}"
                        Header="{setting:Localize GameEditWindow.Tab4.Data.Title4}"
                        IsReadOnly="True" />
                    <DataGridTextColumn
                        Binding="{Binding Author}"
                        Header="{setting:Localize GameEditWindow.Tab4.Data.Title5}"
                        IsReadOnly="True" />
                    <DataGridTextColumn
                        Binding="{Binding Url}"
                        Header="{setting:Localize GameEditWindow.Tab4.Data.Title6}"
                        IsReadOnly="True" />
                </DataGrid.Columns>
            </DataGrid>
        </DockPanel>

        <StackPanel Margin="4,0,0,0" VerticalAlignment="Center">
            <Grid>
                <Button
                    Name="Button_I"
                    Width="20"
                    Height="30"
                    Content="I" />
                <Expander
                    Name="Expander_I"
                    Height="30"
                    Margin="-84,0,0,0"
                    HorizontalAlignment="Left"
                    Background="Transparent"
                    CornerRadius="0"
                    ExpandDirection="Right"
                    IsExpanded="False">
                    <Button
                        Name="Button_I1"
                        Width="100"
                        Height="30"
                        Margin="6,0,0,0"
                        Content="{setting:Localize Button.Input}" />
                </Expander>
            </Grid>
            <Grid>
                <Button
                    Name="Button_A"
                    Width="20"
                    Height="30"
                    Content="A" />
                <Expander
                    Name="Expander_A"
                    Height="30"
                    Margin="-84,0,0,0"
                    HorizontalAlignment="Left"
                    Background="Transparent"
                    CornerRadius="0"
                    ExpandDirection="Right"
                    IsExpanded="False">
                    <Button
                        Name="Button_A1"
                        Width="100"
                        Height="30"
                        Margin="6,0,0,0"
                        Content="{setting:Localize Button.Add}" />
                </Expander>
            </Grid>
            <Grid>
                <Button
                    Name="Button_R"
                    Width="20"
                    Height="30"
                    Content="R" />
                <Expander
                    Name="Expander_R"
                    Height="30"
                    Margin="-84,0,0,0"
                    HorizontalAlignment="Left"
                    Background="Transparent"
                    CornerRadius="0"
                    ExpandDirection="Right"
                    IsExpanded="False">
                    <Button
                        Name="Button_R1"
                        Width="100"
                        Height="30"
                        Margin="6,0,0,0"
                        Content="{setting:Localize Button.Refash}" />
                </Expander>
            </Grid>

        </StackPanel>
    </Grid>
</UserControl>
