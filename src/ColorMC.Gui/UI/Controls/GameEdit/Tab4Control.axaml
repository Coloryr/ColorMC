<UserControl
    x:Class="ColorMC.Gui.UI.Controls.GameEdit.Tab4Control"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:setting="clr-namespace:ColorMC.Gui.Utils.LaunchSetting"
    d:DesignHeight="450"
    d:DesignWidth="800"
    DragDrop.AllowDrop="True"
    mc:Ignorable="d">
    <Panel>
        <DockPanel Margin="5,0,5,5">
            <Panel DockPanel.Dock="Top">
                <DockPanel>
                    <Label VerticalAlignment="Center" Content="{setting:Localize GameEditWindow.Tab4.Text2}" />
                    <ComboBox
                        Width="150"
                        Margin="5,0,0,0"
                        VerticalAlignment="Center"
                        ItemsSource="{Binding FilterList}"
                        SelectedIndex="{Binding Filter}" />
                    <Button
                        Width="85"
                        Height="25"
                        Margin="5,0,0,0"
                        Command="{Binding Open}"
                        Content="{setting:Localize Button.OpFile}"
                        DockPanel.Dock="Right"
                        ToolTip.Tip="{setting:Localize ToolTip.Text39}"
                        ToolTip.VerticalOffset="-30" />
                    <TextBox
                        Margin="5,0,0,0"
                        Classes="input1"
                        Text="{Binding Text}"
                        Watermark="{setting:Localize GameEditWindow.Tab4.Text1}" />
                </DockPanel>
            </Panel>

            <Panel>
                <DataGrid
                    Name="DataGrid1"
                    Margin="0,3,0,0"
                    AutoGenerateColumns="False"
                    Background="{setting:Colors TranBack}"
                    CanUserSortColumns="False"
                    HorizontalScrollBarVisibility="Visible"
                    ItemsSource="{Binding ModList}"
                    SelectedItem="{Binding Item}"
                    VerticalScrollBarVisibility="Visible">
                    <DataGrid.Columns>
                        <DataGridTextColumn Width="10" IsReadOnly="True" />
                        <DataGridCheckBoxColumn
                            Binding="{Binding Enable}"
                            Header="{setting:Localize GameEditWindow.Tab4.DataGrid.Text1}"
                            IsReadOnly="True" />
                        <DataGridTextColumn
                            Binding="{Binding Name}"
                            Header="{setting:Localize GameEditWindow.Tab4.DataGrid.Text2}"
                            IsReadOnly="True" />
                        <DataGridTextColumn
                            Binding="{Binding Version}"
                            Header="{setting:Localize GameEditWindow.Tab4.DataGrid.Text3}"
                            IsReadOnly="True" />
                        <DataGridTextColumn
                            Binding="{Binding Loader}"
                            Header="{setting:Localize GameEditWindow.Tab4.DataGrid.Text7}"
                            IsReadOnly="True" />
                        <DataGridTextColumn
                            Binding="{Binding Source}"
                            Header="{setting:Localize GameEditWindow.Tab4.DataGrid.Text8}"
                            IsReadOnly="True" />
                        <DataGridTextColumn
                            Binding="{Binding PID}"
                            Header="{setting:Localize GameEditWindow.Tab4.DataGrid.Text9}"
                            IsReadOnly="True" />
                        <DataGridTextColumn
                            Binding="{Binding FID}"
                            Header="{setting:Localize GameEditWindow.Tab4.DataGrid.Text10}"
                            IsReadOnly="True" />
                        <DataGridTextColumn
                            Binding="{Binding Local}"
                            Header="{setting:Localize GameEditWindow.Tab4.DataGrid.Text4}"
                            IsReadOnly="True" />
                        <DataGridTextColumn
                            Binding="{Binding Author}"
                            Header="{setting:Localize GameEditWindow.Tab4.DataGrid.Text5}"
                            IsReadOnly="True" />
                        <DataGridTextColumn
                            Binding="{Binding Url}"
                            Header="{setting:Localize GameEditWindow.Tab4.DataGrid.Text6}"
                            IsReadOnly="True" />
                    </DataGrid.Columns>
                </DataGrid>
                <StackPanel VerticalAlignment="Center">
                    <Panel>
                        <Button
                            Name="Button_I"
                            Width="20"
                            Height="30"
                            Command="{Binding Import}"
                            Content="I" />
                        <Button
                            Name="Button_I1"
                            Width="100"
                            Height="30"
                            Command="{Binding Import}"
                            Content="{setting:Localize Button.Input}"
                            IsVisible="False" />
                    </Panel>
                    <Panel Margin="0,5,0,0">
                        <Button
                            Name="Button_A"
                            Width="20"
                            Height="30"
                            Command="{Binding Add}"
                            Content="A" />
                        <Button
                            Name="Button_A1"
                            Width="100"
                            Height="30"
                            Command="{Binding Add}"
                            Content="{setting:Localize Button.Add}"
                            IsVisible="False" />
                    </Panel>
                    <Panel Margin="0,5,0,0">
                        <Button
                            Name="Button_R"
                            Width="20"
                            Height="30"
                            Command="{Binding Load}"
                            Content="R" />
                        <Button
                            Name="Button_R1"
                            Width="100"
                            Height="30"
                            Command="{Binding Load}"
                            Content="{setting:Localize Button.Refash}"
                            IsVisible="False" />
                    </Panel>
                    <Grid Margin="0,5,0,0">
                        <Button
                            Name="Button_C"
                            Width="20"
                            Height="30"
                            Command="{Binding Check}"
                            Content="C" />
                        <Button
                            Name="Button_C1"
                            Width="100"
                            Height="30"
                            Command="{Binding Check}"
                            Content="{setting:Localize GameEditWindow.Tab4.Text3}"
                            IsVisible="False" />
                    </Grid>
                    <Panel Margin="0,5,0,0">
                        <Button
                            Name="Button_B"
                            Width="20"
                            Height="30"
                            Command="{Binding StartSet}"
                            Content="B" />
                        <Button
                            Name="Button_B1"
                            Width="100"
                            Height="30"
                            Command="{Binding StartSet}"
                            Content="{setting:Localize GameEditWindow.Tab4.Text4}"
                            IsVisible="False" />
                    </Panel>
                    <Grid Margin="0,5,0,0">
                        <Button
                            Name="Button_D"
                            Width="20"
                            Height="30"
                            Command="{Binding DependTest}"
                            Content="D" />
                        <Button
                            Name="Button_D1"
                            Width="100"
                            Height="30"
                            Command="{Binding DependTest}"
                            Content="{setting:Localize GameEditWindow.Tab4.Text5}"
                            IsVisible="False" />
                    </Grid>
                </StackPanel>
            </Panel>
        </DockPanel>
        <Panel
            Name="Grid2"
            Background="{setting:Colors TopBottom}"
            IsVisible="False">
            <Label
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Content="{setting:Localize Gui.Info14}"
                FontSize="30" />
        </Panel>
    </Panel>
</UserControl>
