<UserControl
    x:Class="ColorMC.Gui.UI.Controls.GameEdit.Items.ScreenshotControl"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:setting="clr-namespace:ColorMC.Gui.Utils.LaunchSetting"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid Margin="1" Background="{setting:Colors TranBack}">
        <Rectangle
            Name="Rectangle2"
            Fill="{setting:Colors Back}"
            IsVisible="False" />
        <Rectangle
            Name="Rectangle1"
            Fill="{setting:Colors TranBack}"
            IsVisible="{Binding IsSelect}"
            Stroke="{setting:Colors Main}"
            StrokeThickness="3" />
        <StackPanel Margin="5">
            <Image
                Width="200"
                Height="120"
                Source="{Binding Pic}"
                Stretch="UniformToFill" />
            <Label HorizontalAlignment="Center" Content="{Binding Name}" />
        </StackPanel>
    </Grid>
</UserControl>
