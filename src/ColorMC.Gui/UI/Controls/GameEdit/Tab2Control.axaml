<UserControl
    x:Class="ColorMC.Gui.UI.Controls.GameEdit.Tab2Control"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cov="clr-namespace:ColorMC.Gui.UI.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="clr-namespace:ColorMC.Gui.UI.Model.GameEdit"
    xmlns:panel="clr-namespace:ColorMC.Gui.UI.Views"
    xmlns:setting="clr-namespace:ColorMC.Gui.UI"
    xmlns:svg="clr-namespace:ColorMC.Gui.UI.Views.Svg"
    d:DesignHeight="1900"
    d:DesignWidth="800"
    x:DataType="model:GameEditModel"
    mc:Ignorable="d">
    <UserControl.Resources>
        <cov:NumberConverter x:Key="NumberConverter" />
    </UserControl.Resources>
    <ScrollViewer>
        <StackPanel Margin="0,0,10,15">
            <TextBlock
                Margin="25,20,25,10"
                HorizontalAlignment="Center"
                FontSize="15"
                Foreground="{setting:Theme MainColor}"
                RenderOptions.TextRenderingMode="Antialias"
                Text="{Binding TitleText, FallbackValue=123}"
                TextTrimming="CharacterEllipsis" />
            <!--  分辨率  -->
            <Border Margin="10,5,10,3" Classes="t2">
                <StackPanel Margin="15,15,5,15">
                    <StackPanel Margin="0,0,0,10" Orientation="Horizontal">
                        <svg:SvgControl
                            Width="24"
                            Height="24"
                            Margin="0,0,5,0"
                            Fill="{setting:Theme FontColor}"
                            Path="/Resource/Icon/GroupIcon/AspectRatio.svg"
                            Stroke="{setting:Theme FontColor}" />
                        <TextBlock FontSize="{setting:Style FontTitle}" Text="{setting:Localize SettingWindow.Tab4.Text9}" />
                    </StackPanel>
                    <Grid Margin="0,0,0,10" ColumnDefinitions="auto,*,auto,*,*">
                        <TextBlock Margin="0,0,5,0" Text="{setting:Localize SettingWindow.Tab4.Text10}" />
                        <NumericUpDown
                            Grid.Column="1"
                            HorizontalAlignment="Stretch"
                            FormatString="N0"
                            IsEnabled="{Binding !MaxWindow}"
                            Minimum="1"
                            Value="{Binding Width}" />
                        <TextBlock
                            Grid.Column="2"
                            Margin="10,0,5,0"
                            Text="{setting:Localize SettingWindow.Tab4.Text11}" />
                        <NumericUpDown
                            Grid.Column="3"
                            HorizontalAlignment="Stretch"
                            FormatString="N0"
                            IsEnabled="{Binding !MaxWindow}"
                            Minimum="1"
                            Value="{Binding Height}" />
                        <ToggleSwitch
                            Grid.Column="4"
                            Margin="10,0,0,0"
                            IsChecked="{Binding MaxWindow}"
                            OffContent="{setting:Localize SettingWindow.Tab4.Text12}"
                            OnContent="{setting:Localize SettingWindow.Tab4.Text12}" />
                    </Grid>
                    <DockPanel Margin="0,0,10,10">
                        <ToggleSwitch
                            Margin="0,0,10,0"
                            IsChecked="{Binding EditTitle}"
                            OffContent="{setting:Localize GameEditWindow.Tab2.Text45}"
                            OnContent="{setting:Localize GameEditWindow.Tab2.Text45}" />
                        <ToggleSwitch
                            Margin="0,0,10,0"
                            IsChecked="{Binding RandomTitle}"
                            IsEnabled="{Binding EditTitle}"
                            OffContent="{setting:Localize GameEditWindow.Tab2.Text41}"
                            OnContent="{setting:Localize GameEditWindow.Tab2.Text41}" />
                        <ToggleSwitch
                            Margin="0,0,10,0"
                            IsChecked="{Binding CycTitle}"
                            IsEnabled="{Binding EditTitle}"
                            OffContent="{setting:Localize GameEditWindow.Tab2.Text39}"
                            OnContent="{setting:Localize GameEditWindow.Tab2.Text39}" />
                    </DockPanel>
                    <StackPanel Margin="0,0,10,10" Orientation="Horizontal">
                        <TextBlock Margin="0,0,5,0" Text="{setting:Localize GameEditWindow.Tab2.Text40}" />
                        <NumericUpDown
                            Width="160"
                            FormatString="N0"
                            IsEnabled="{Binding CycTitle}"
                            Maximum="5000"
                            Minimum="100"
                            Value="{Binding TitleDelay}" />
                        <TextBlock
                            Margin="5,0,0,0"
                            DockPanel.Dock="Right"
                            Text="{setting:Localize GameEditWindow.Tab2.Text46}" />
                    </StackPanel>
                    <TextBox
                        Height="100"
                        Margin="0,0,10,5"
                        AcceptsReturn="True"
                        Text="{Binding GameTitle}"
                        Watermark="{setting:Localize GameEditWindow.Tab2.Text42}" />
                    <TextBlock Text="{setting:Localize GameEditWindow.Tab2.Text38}" TextWrapping="Wrap" />
                </StackPanel>
            </Border>
            <!--  Java基础设置  -->
            <Border Margin="10,5,10,3" Classes="t2">
                <StackPanel Margin="15,15,5,15">
                    <StackPanel Margin="0,0,0,10" Orientation="Horizontal">
                        <svg:SvgControl
                            Width="24"
                            Height="24"
                            Margin="0,0,5,0"
                            Fill="{setting:Theme FontColor}"
                            Path="/Resource/Icon/GroupIcon/Memory.svg"
                            Stroke="{setting:Theme FontColor}" />
                        <TextBlock FontSize="{setting:Style FontTitle}" Text="{setting:Localize GameEditWindow.Tab2.Text24}" />
                    </StackPanel>
                    <TextBlock Margin="0,0,0,10" Text="{Binding Memory, FallbackValue=11123}" />
                    <!--  Jvm内存  -->
                    <Grid Margin="0,0,0,10" ColumnDefinitions="auto,*,auto,*,*">
                        <TextBlock Margin="0,0,5,0" Text="{setting:Localize SettingWindow.Tab4.Text4}" />
                        <NumericUpDown
                            Grid.Column="1"
                            HorizontalAlignment="Stretch"
                            FormatString="N0"
                            Minimum="1"
                            Value="{Binding MinMem}" />
                        <TextBlock
                            Grid.Column="2"
                            Margin="10,0,5,0"
                            Text="{setting:Localize SettingWindow.Tab4.Text5}" />
                        <NumericUpDown
                            Grid.Column="3"
                            HorizontalAlignment="Stretch"
                            FormatString="N0"
                            Minimum="1"
                            Value="{Binding MaxMem}" />
                    </Grid>
                    <StackPanel Margin="0,0,10,10" Orientation="Horizontal">
                        <TextBlock Margin="0,0,5,0" Text="{setting:Localize GameEditWindow.Tab2.Text22}" />
                        <ComboBox
                            Width="230"
                            HorizontalAlignment="Stretch"
                            IsEnabled="{Binding EnableJvmName}"
                            ItemsSource="{Binding JvmList}"
                            SelectedItem="{Binding JvmName}" />
                    </StackPanel>
                    <DockPanel Margin="0,0,10,0">
                        <Button
                            Width="100"
                            Height="35"
                            Margin="-3"
                            VerticalAlignment="Center"
                            Classes="top"
                            Command="{Binding OpenJava}"
                            Content="{setting:Localize Button.Select}"
                            DockPanel.Dock="Right"
                            ToolTip.Tip="{setting:Localize ToolTip.Text7}" />
                        <TextBox
                            Margin="0,0,10,0"
                            Text="{Binding JvmLocal}"
                            Watermark="{setting:Localize GameEditWindow.Tab2.Text23}" />
                    </DockPanel>
                </StackPanel>
            </Border>
            <!--  Jvm参数  -->
            <Border Margin="10,5,10,3" Classes="t2">
                <StackPanel Margin="15">
                    <StackPanel Margin="0,0,0,10" Orientation="Horizontal">
                        <svg:SvgControl
                            Width="24"
                            Height="24"
                            Margin="0,0,5,0"
                            Fill="{setting:Theme FontColor}"
                            Path="/Resource/Icon/GroupIcon/Console.svg"
                            Stroke="{setting:Theme FontColor}" />
                        <TextBlock FontSize="{setting:Style FontTitle}" Text="{setting:Localize SettingWindow.Tab4.Text1}" />
                    </StackPanel>
                    <!--  Jvm GC  -->
                    <StackPanel Orientation="Horizontal">
                        <TextBlock
                            Margin="0,0,5,0"
                            HorizontalAlignment="Center"
                            Text="{setting:Localize SettingWindow.Tab4.Text2}" />
                        <ComboBox
                            Width="230"
                            HorizontalAlignment="Stretch"
                            ItemsSource="{Binding GCTypeList}"
                            SelectedIndex="{Binding Gc}" />
                    </StackPanel>
                    <!--  Jvm附加参数  -->
                    <StackPanel Margin="0,0,0,5" Orientation="Horizontal">
                        <ToggleSwitch
                            Margin="0,0,10,0"
                            VerticalAlignment="Center"
                            IsChecked="{Binding RemoveJvmArg}"
                            OffContent="{setting:Localize GameEditWindow.Tab2.Text36}"
                            OnContent="{setting:Localize GameEditWindow.Tab2.Text36}" />
                        <ToggleSwitch
                            Margin="0,0,10,0"
                            VerticalAlignment="Center"
                            IsChecked="{Binding RemoveGameArg}"
                            OffContent="{setting:Localize GameEditWindow.Tab2.Text37}"
                            OnContent="{setting:Localize GameEditWindow.Tab2.Text37}" />
                        <ToggleSwitch
                            Margin="0,0,0,0"
                            IsChecked="{Binding ColorASM}"
                            OffContent="{setting:Localize SettingWindow.Tab4.Text30}"
                            OnContent="{setting:Localize SettingWindow.Tab4.Text30}" />
                    </StackPanel>
                    <TextBox
                        Margin="0,0,0,10"
                        Text="{Binding MainClass}"
                        Watermark="{setting:Localize GameEditWindow.Tab2.Text27}" />
                    <TextBox
                        Height="100"
                        Margin="0,0,0,10"
                        AcceptsReturn="True"
                        Text="{Binding JvmArg}"
                        TextWrapping="Wrap"
                        Watermark="{setting:Localize SettingWindow.Tab4.Text7}" />
                    <TextBox
                        Height="100"
                        Margin="0,0,0,10"
                        AcceptsReturn="True"
                        Text="{Binding GameArg}"
                        TextWrapping="Wrap"
                        Watermark="{setting:Localize SettingWindow.Tab4.Text8}" />
                    <TextBox
                        Height="100"
                        Margin="0,0,0,10"
                        AcceptsReturn="True"
                        Text="{Binding ClassPath}"
                        TextWrapping="Wrap"
                        Watermark="{setting:Localize GameEditWindow.Tab2.Text32}" />
                    <TextBox
                        Height="100"
                        Margin="0,0,0,5"
                        AcceptsReturn="True"
                        Text="{Binding JvmEnv}"
                        TextWrapping="Wrap"
                        Watermark="{setting:Localize GameEditWindow.Tab2.Text34}" />
                    <TextBlock Text="{setting:Localize GameEditWindow.Tab2.Text35}" TextWrapping="Wrap" />
                </StackPanel>
            </Border>
            <!--  执行程序  -->
            <Border Margin="10,5,10,3" Classes="t2">
                <StackPanel Margin="15">
                    <StackPanel Margin="0,0,0,10" Orientation="Horizontal">
                        <svg:SvgControl
                            Width="24"
                            Height="24"
                            Margin="0,0,5,0"
                            Fill="{setting:Theme FontColor}"
                            Path="/Resource/Icon/GroupIcon/RocketLaunch.svg"
                            Stroke="{setting:Theme FontColor}" />
                        <TextBlock FontSize="{setting:Style FontTitle}" Text="{setting:Localize GameEditWindow.Tab2.Text33}" />
                    </StackPanel>
                    <WrapPanel Margin="0,0,0,0">
                        <ToggleSwitch
                            Margin="0,0,10,0"
                            IsChecked="{Binding PerRun}"
                            OffContent="{setting:Localize GameEditWindow.Tab2.Text31}"
                            OnContent="{setting:Localize GameEditWindow.Tab2.Text31}" />
                        <ToggleSwitch
                            IsChecked="{Binding PreRunSame}"
                            IsEnabled="{Binding PerRun}"
                            OffContent="{setting:Localize SettingWindow.Tab4.Text25}"
                            OnContent="{setting:Localize SettingWindow.Tab4.Text25}" />
                    </WrapPanel>
                    <TextBox
                        Height="100"
                        Margin="0,0,0,10"
                        AcceptsReturn="True"
                        IsEnabled="{Binding PerRun}"
                        Text="{Binding PerRunCmd}"
                        Watermark="{setting:Localize SettingWindow.Tab4.Text21}" />
                    <ToggleSwitch
                        IsChecked="{Binding PostRun}"
                        OffContent="{setting:Localize GameEditWindow.Tab2.Text29}"
                        OnContent="{setting:Localize GameEditWindow.Tab2.Text29}" />
                    <TextBox
                        Height="100"
                        Margin="0,0,0,10"
                        AcceptsReturn="True"
                        IsEnabled="{Binding PostRun}"
                        Text="{Binding PostRunCmd}"
                        Watermark="{setting:Localize SettingWindow.Tab4.Text21}" />
                    <TextBlock Text="{setting:Localize GameEditWindow.Tab2.Text43}" TextWrapping="Wrap" />
                </StackPanel>
            </Border>
            <!--  自动加入  -->
            <Border Margin="10,5,10,3" Classes="t2">
                <StackPanel Margin="15">
                    <StackPanel Margin="0,0,0,10" Orientation="Horizontal">
                        <svg:SvgControl
                            Width="24"
                            Height="24"
                            Margin="0,0,5,0"
                            Path="/Resource/Icon/GroupIcon/ServerNetwork.svg" />
                        <TextBlock FontSize="{setting:Style FontTitle}" Text="{setting:Localize SettingWindow.Tab6.Text4}" />
                    </StackPanel>
                    <Grid ColumnDefinitions="*,0.5*">
                        <TextBox
                            Grid.Column="0"
                            Margin="0,0,10,0"
                            Text="{Binding IP}"
                            Watermark="{setting:Localize Text.ServerAddress}" />
                        <TextBox
                            Grid.Column="1"
                            MaxLength="5"
                            Text="{Binding Port, Converter={StaticResource NumberConverter}}"
                            Watermark="{setting:Localize Text.ServerPort}" />
                    </Grid>
                </StackPanel>
            </Border>
            <!--  代理  -->
            <Border Margin="10,5,10,3" Classes="t2">
                <StackPanel Margin="15">
                    <StackPanel Margin="0,0,0,10" Orientation="Horizontal">
                        <svg:SvgControl
                            Width="24"
                            Height="24"
                            Margin="0,0,5,0"
                            Fill="{setting:Theme FontColor}"
                            Path="/Resource/Icon/GroupIcon/Swap.svg"
                            Stroke="{setting:Theme FontColor}" />
                        <TextBlock FontSize="{setting:Style FontTitle}" Text="{setting:Localize SettingWindow.Tab3.Text3}" />
                    </StackPanel>
                    <Grid Margin="0,0,0,10" ColumnDefinitions="*,0.5*">
                        <TextBox
                            Grid.Column="0"
                            Margin="0,0,10,0"
                            Text="{Binding ProxyIP}"
                            Watermark="{setting:Localize SettingWindow.Tab3.Text4}" />
                        <TextBox
                            Grid.Column="1"
                            MaxLength="5"
                            Text="{Binding ProxyPort, Converter={StaticResource NumberConverter}}"
                            Watermark="{setting:Localize SettingWindow.Tab3.Text5}" />
                    </Grid>
                    <Grid ColumnDefinitions="*,*">
                        <TextBox
                            Grid.Column="0"
                            Margin="0,0,10,0"
                            Text="{Binding ProxyUser}"
                            Watermark="{setting:Localize SettingWindow.Tab3.Text6}" />
                        <TextBox
                            Grid.Column="1"
                            PasswordChar="*"
                            Text="{Binding ProxyPassword}"
                            Watermark="{setting:Localize SettingWindow.Tab3.Text7}" />
                    </Grid>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
