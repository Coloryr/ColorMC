<UserControl
    x:Class="ColorMC.Gui.UI.Controls.Info4Control"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:setting="clr-namespace:ColorMC.Gui.Utils.LaunchSetting"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Panel>
        <Border Name="Border1" Background="{setting:Colors TopBottom}" />
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock
                Name="TextBlock_Text"
                HorizontalAlignment="Center"
                FontSize="20"
                Foreground="{setting:Colors Font}"
                Text="测试"
                TextAlignment="Center"
                TextWrapping="Wrap" />
            <StackPanel
                Margin="0,50,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <Button
                    Name="Button_Confirm"
                    Width="100"
                    Height="30"
                    Content="{setting:Localize Button.Confirm}" />
                <Button
                    Name="Button_Cancel"
                    Width="100"
                    Height="30"
                    Margin="50,0,0,0"
                    Content="{setting:Localize Button.Cancel}" />
            </StackPanel>
        </StackPanel>
    </Panel>
</UserControl>
