<UserControl
    x:Class="ColorMC.Gui.UI.Controls.Dialog.ChoiceControl"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dialogmodel="clr-namespace:ColorMC.Gui.UI.Model.Dialog"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:setting="clr-namespace:ColorMC.Gui.UI"
    x:DataType="dialogmodel:ChoiceModel"
    mc:Ignorable="d">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock
            FontSize="20"
            Foreground="{setting:Theme FontColor}"
            Text="{Binding Text}"
            TextAlignment="Center"
            TextWrapping="Wrap" />
        <StackPanel
            Margin="0,10,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <Button
                Width="100"
                Height="35"
                Margin="10,0,10,0"
                Classes="top"
                Command="{Binding Choice}"
                Content="{Binding ChoiceText}"
                IsEnabled="{Binding ChoiceVisiable}"
                IsVisible="{Binding ChoiceVisiable}" />
            <Button
                Width="100"
                Height="35"
                Margin="10,0,10,0"
                Classes="top"
                Command="{Binding Confirm}"
                Content="{setting:Localize Button.Confirm}"
                IsEnabled="{Binding EnableButton}"
                IsVisible="{Binding ConfirmVisable}" />
            <Button
                Width="100"
                Height="35"
                Margin="10,0,10,0"
                Classes="top"
                Command="{Binding Cancel}"
                Content="{setting:Localize Button.Cancel}"
                IsEnabled="{Binding EnableButton}"
                IsVisible="{Binding CancelVisable}" />
        </StackPanel>
    </StackPanel>
</UserControl>
