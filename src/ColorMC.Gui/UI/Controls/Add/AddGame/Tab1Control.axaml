<UserControl
    x:Class="ColorMC.Gui.UI.Controls.Add.AddGame.Tab1Control"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="clr-namespace:ColorMC.Gui.UI.Model.Add.AddGame"
    xmlns:setting="clr-namespace:ColorMC.Gui.Utils.LaunchSetting"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:DataType="model:AddGameModel"
    mc:Ignorable="d">
    <ScrollViewer>
        <StackPanel Margin="5,3,5,5">
            <Border
                Padding="8"
                Background="{setting:Colors GroupBack}"
                BorderBrush="{setting:Colors GroupColor}"
                BorderThickness="2"
                CornerRadius="{setting:Style ButtonCornerRadius}">
                <TextBox
                    Classes="input1"
                    Text="{Binding Name}"
                    Watermark="{setting:Localize AddGameWindow.Tab1.Text2}" />
            </Border>
            <Border
                Margin="0,3,0,0"
                Padding="8"
                Background="{setting:Colors GroupBack}"
                BorderBrush="{setting:Colors GroupColor}"
                BorderThickness="2"
                CornerRadius="{setting:Style ButtonCornerRadius}">
                <StackPanel>
                    <Label VerticalAlignment="Center" Content="{setting:Localize Text.GameVersion}" />
                    <WrapPanel>
                        <StackPanel Orientation="Horizontal">
                            <Label
                                Margin="5,0,0,0"
                                VerticalAlignment="Center"
                                Content="{setting:Localize AddGameWindow.Tab1.Text6}" />
                            <ComboBox
                                Width="200"
                                Margin="5,5,0,0"
                                ItemsSource="{Binding VersionTypeList}"
                                SelectedIndex="{Binding VersionType}" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Label
                                Margin="5,0,0,0"
                                VerticalAlignment="Center"
                                Content="{setting:Localize AddGameWindow.Tab1.Text7}" />
                            <ComboBox
                                Width="200"
                                Margin="5,5,0,0"
                                VerticalContentAlignment="Center"
                                ItemsSource="{Binding GameVersionList}"
                                SelectedItem="{Binding Version}" />
                        </StackPanel>

                        <Button
                            Width="100"
                            Height="25"
                            Margin="5,5,0,0"
                            Command="{Binding LoadVersion}"
                            Content="{setting:Localize GameEditWindow.Tab1.Text2}" />
                    </WrapPanel>
                </StackPanel>

            </Border>
            <Border
                Margin="0,3,0,0"
                Padding="8"
                Background="{setting:Colors GroupBack}"
                BorderBrush="{setting:Colors GroupColor}"
                BorderThickness="2"
                CornerRadius="{setting:Style ButtonCornerRadius}">
                <StackPanel>
                    <Label VerticalAlignment="Center" Content="{setting:Localize AddGameWindow.Tab1.Text4}" />
                    <WrapPanel>
                        <StackPanel Orientation="Horizontal">
                            <Label
                                Margin="5,0,0,0"
                                VerticalAlignment="Center"
                                Content="{setting:Localize AddGameWindow.Tab1.Text6}" />
                            <ComboBox
                                Width="200"
                                Margin="5,5,0,0"
                                VerticalContentAlignment="Center"
                                ItemsSource="{Binding LoaderTypeList}"
                                SelectedIndex="{Binding LoaderType}" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Label
                                Margin="5,0,0,0"
                                VerticalAlignment="Center"
                                Content="{setting:Localize AddGameWindow.Tab1.Text7}" />
                            <ComboBox
                                Width="200"
                                Margin="5,5,0,0"
                                VerticalContentAlignment="Center"
                                IsEnabled="{Binding EnableLoader}"
                                ItemsSource="{Binding LoaderVersionList}"
                                SelectedItem="{Binding LoaderVersion}" />
                        </StackPanel>

                        <Button
                            Width="100"
                            Height="25"
                            Margin="5,5,0,0"
                            Command="{Binding VersionSelect}"
                            Content="{setting:Localize AddGameWindow.Tab1.Text11}" />
                        <Button
                            Width="100"
                            Height="25"
                            Margin="5,5,0,0"
                            Command="{Binding GetLoader}"
                            Content="{setting:Localize AddGameWindow.Tab1.Text12}" />
                    </WrapPanel>
                </StackPanel>
            </Border>
            <Border
                Margin="0,3,0,0"
                Padding="8"
                Background="{setting:Colors GroupBack}"
                BorderBrush="{setting:Colors GroupColor}"
                BorderThickness="2"
                CornerRadius="{setting:Style ButtonCornerRadius}">
                <StackPanel>
                    <Label VerticalAlignment="Center" Content="{setting:Localize AddGameWindow.Tab1.Text5}" />
                    <WrapPanel Orientation="Horizontal">
                        <ComboBox
                            Width="200"
                            Margin="8,0,5,0"
                            VerticalContentAlignment="Center"
                            ItemsSource="{Binding GroupList}"
                            SelectedItem="{Binding Group}" />
                        <Button
                            Width="100"
                            Height="25"
                            Margin="0,5,0,0"
                            VerticalAlignment="Center"
                            Command="{Binding AddGroup}"
                            Content="{setting:Localize AddGameWindow.Tab1.Text9}" />
                    </WrapPanel>
                </StackPanel>
            </Border>
            <Border
                Margin="0,3,0,0"
                Padding="8"
                Background="{setting:Colors GroupBack}"
                BorderBrush="{setting:Colors GroupColor}"
                BorderThickness="2"
                CornerRadius="{setting:Style ButtonCornerRadius}">
                <DockPanel>
                    <Button
                        Width="100"
                        Height="25"
                        Command="{Binding AddOnlinePack}"
                        Content="{setting:Localize AddGameWindow.Tab1.Text10}" />
                    <Button
                        Width="100"
                        Height="25"
                        HorizontalAlignment="Right"
                        Command="{Binding AddGame}"
                        Content="{setting:Localize Button.Add}" />
                </DockPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
