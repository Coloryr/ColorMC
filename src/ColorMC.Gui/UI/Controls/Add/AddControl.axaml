<UserControl
    x:Class="ColorMC.Gui.UI.Controls.Add.AddControl"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:item="clr-namespace:ColorMC.Gui.UI.Controls.Items"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="clr-namespace:ColorMC.Gui.UI.Model.Add"
    xmlns:setting="clr-namespace:ColorMC.Gui.Utils.LaunchSetting"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:DataType="model:AddControlModel"
    mc:Ignorable="d">
    <Panel>
        <DockPanel Margin="5,2,5,5">
            <Border
                Margin="0,3,0,0"
                Padding="{setting:Style BorderPadding}"
                Background="{setting:Colors GroupBack}"
                BorderBrush="{setting:Colors GroupColor}"
                BorderThickness="2"
                CornerRadius="{setting:Style ButtonCornerRadius}"
                DockPanel.Dock="Top"
                IsEnabled="{Binding !IsDownload}"
                IsVisible="{Binding DisplayFilter}">
                <StackPanel>
                    <WrapPanel VerticalAlignment="Top">
                        <StackPanel Orientation="Horizontal">
                            <Label
                                Width="65"
                                Margin="5,5,0,5"
                                VerticalAlignment="Center"
                                Content="{setting:Localize AddWindow.Text1}" />
                            <ComboBox
                                Width="110"
                                Height="30"
                                Margin="2,2,0,0"
                                IsEnabled="{ReflectionBinding !Set}"
                                ItemsSource="{Binding TypeList}"
                                SelectedIndex="{Binding Type}" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Label
                                Width="65"
                                Margin="5,5,0,5"
                                VerticalAlignment="Center"
                                Content="{setting:Localize AddWindow.Text2}" />
                            <ComboBox
                                Width="110"
                                Height="30"
                                Margin="2,2,0,0"
                                ItemsSource="{Binding DownloadSourceList}"
                                SelectedIndex="{Binding DownloadSource}" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Label
                                Width="65"
                                Margin="5,5,0,5"
                                VerticalAlignment="Center"
                                Content="{setting:Localize Text.GameVersion}" />
                            <ComboBox
                                Width="110"
                                Height="30"
                                Margin="2,2,0,0"
                                ItemsSource="{Binding GameVersionList}"
                                SelectedItem="{Binding GameVersion}" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Label
                                Width="65"
                                Margin="5,5,0,5"
                                VerticalAlignment="Center"
                                Content="{setting:Localize AddModPackWindow.Text5}" />
                            <NumericUpDown
                                Width="110"
                                Height="30"
                                Margin="2,2,0,0"
                                FormatString="N0"
                                Minimum="0"
                                Value="{Binding Page}" />
                        </StackPanel>
                    </WrapPanel>
                    <WrapPanel>
                        <StackPanel Orientation="Horizontal">
                            <Label
                                Width="65"
                                Margin="5,5,0,5"
                                VerticalAlignment="Center"
                                Content="{setting:Localize AddWindow.Text4}" />
                            <ComboBox
                                Width="110"
                                Height="30"
                                Margin="2,2,0,0"
                                ItemsSource="{Binding SortTypeList}"
                                SelectedIndex="{Binding SortType}" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Label
                                Width="65"
                                Margin="5,5,0,5"
                                VerticalAlignment="Center"
                                Content="{setting:Localize AddWindow.Text5}" />
                            <ComboBox
                                Width="110"
                                Height="30"
                                Margin="2,2,0,0"
                                ItemsSource="{Binding CategorieList}"
                                SelectedIndex="{Binding Categorie}" />
                        </StackPanel>
                        <TextBox
                            Width="150"
                            Height="30"
                            Margin="5,0,5,5"
                            Classes="input1"
                            Text="{Binding Name}"
                            Watermark="{setting:Localize Text.Name}">
                            <TextBox.KeyBindings>
                                <KeyBinding Command="{Binding GetNameList}" Gesture="Enter" />
                            </TextBox.KeyBindings>
                        </TextBox>
                        <StackPanel Orientation="Horizontal">
                            <Button
                                Width="100"
                                Height="25"
                                Margin="0,0,5,0"
                                Command="{Binding GetList}"
                                Content="{setting:Localize AddModPackWindow.Text8}"
                                ToolTip.Tip="{setting:Localize ToolTip.Text75}"
                                ToolTip.VerticalOffset="-30" />
                            <Button
                                Width="100"
                                Height="25"
                                Command="{Binding GoInstall}"
                                Content="{setting:Localize AddModPackWindow.Text9}"
                                IsEnabled="{Binding IsSelect}"
                                ToolTip.Tip="{setting:Localize ToolTip.Text76}"
                                ToolTip.VerticalOffset="-30" />
                        </StackPanel>
                    </WrapPanel>
                </StackPanel>
            </Border>
            <Border
                Margin="0,3,0,0"
                Padding="{setting:Style BorderPadding}"
                Background="{setting:Colors GroupBack}"
                BorderBrush="{setting:Colors GroupColor}"
                BorderThickness="2"
                CornerRadius="{setting:Style ButtonCornerRadius}">
                <Panel>
                    <ScrollViewer Name="ScrollViewer1" VerticalScrollBarVisibility="Visible">
                        <ItemsControl
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            ItemsSource="{Binding DisplayList}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <item:FileItemControl DataContext="{Binding}" />
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                    <Panel IsVisible="{Binding EmptyDisplay}">
                        <Label
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Content="{setting:Localize AddModPackWindow.Text13}"
                            FontSize="30" />
                    </Panel>
                </Panel>
            </Border>
        </DockPanel>

        <DockPanel
            Name="VersionDisplay"
            Background="{setting:Colors TopBottom}"
            IsVisible="False">
            <Border
                Margin="5,5,5,3"
                Padding="{setting:Style BorderPadding}"
                Background="{setting:Colors BG1}"
                BorderBrush="{setting:Colors GroupColor}"
                BorderThickness="2"
                CornerRadius="{setting:Style ButtonCornerRadius}"
                DockPanel.Dock="Top">
                <WrapPanel>
                    <Label
                        Margin="5,0,0,0"
                        VerticalAlignment="Center"
                        Content="{setting:Localize AddModPackWindow.Text6}" />
                    <Label
                        Margin="5,0,0,0"
                        VerticalAlignment="Center"
                        Content="{setting:Localize AddModPackWindow.Text5}" />
                    <NumericUpDown
                        Width="120"
                        Height="30"
                        VerticalAlignment="Center"
                        FormatString="N0"
                        IsEnabled="{Binding EnablePage}"
                        Minimum="0"
                        Value="{Binding PageDownload}" />
                    <Label
                        Margin="5,0,0,0"
                        VerticalAlignment="Center"
                        Content="{setting:Localize Text.GameVersion}" />
                    <ComboBox
                        Width="140"
                        VerticalAlignment="Center"
                        ItemsSource="{Binding GameVersionList}"
                        SelectedItem="{Binding GameVersionDownload}" />
                    <Button
                        Width="100"
                        Height="25"
                        Margin="5,0,0,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Command="{Binding Refresh1}"
                        Content="{setting:Localize AddModPackWindow.Text10}"
                        ToolTip.Tip="{setting:Localize ToolTip.Text77}"
                        ToolTip.VerticalOffset="-30" />
                    <Button
                        Width="100"
                        Height="25"
                        Margin="5,0,0,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Command="{Binding GoFile}"
                        Content="{setting:Localize AddModPackWindow.Text12}"
                        ToolTip.Tip="{setting:Localize ToolTip.Text78}"
                        ToolTip.VerticalOffset="-30" />
                </WrapPanel>
            </Border>
            <Border
                Margin="5,0,5,5"
                Padding="{setting:Style BorderPadding}"
                Background="{setting:Colors BG1}"
                BorderBrush="{setting:Colors GroupColor}"
                BorderThickness="2"
                CornerRadius="{setting:Style ButtonCornerRadius}">
                <DataGrid
                    Name="VersionFiles"
                    Background="{setting:Colors TranBack}"
                    CanUserResizeColumns="True"
                    ItemsSource="{Binding FileList}"
                    SelectedItem="{Binding File}">
                    <DataGrid.Columns>
                        <DataGridTextColumn
                            Binding="{Binding Name}"
                            Header="{setting:Localize Text.Name}"
                            IsReadOnly="True" />
                        <DataGridCheckBoxColumn
                            Binding="{Binding IsDownload}"
                            Header="{setting:Localize Text.Downloaded}"
                            IsReadOnly="True" />
                        <DataGridTextColumn
                            Binding="{Binding Size}"
                            Header="{setting:Localize Text.Size}"
                            IsReadOnly="True" />
                        <DataGridTextColumn
                            Binding="{Binding Download}"
                            Header="{setting:Localize AddModPackWindow.DataGrid.Text3}"
                            IsReadOnly="True" />
                        <DataGridTextColumn
                            Binding="{Binding Time}"
                            Header="{setting:Localize AddModPackWindow.DataGrid.Text4}"
                            IsReadOnly="True" />
                    </DataGrid.Columns>
                </DataGrid>
            </Border>
        </DockPanel>

        <DockPanel
            Name="OptifineDisplay"
            Background="{setting:Colors BG1}"
            IsVisible="False">
            <Border
                Margin="5,5,5,3"
                Padding="{setting:Style BorderPadding}"
                Background="{setting:Colors BG1}"
                BorderBrush="{setting:Colors GroupColor}"
                BorderThickness="2"
                CornerRadius="{setting:Style ButtonCornerRadius}"
                DockPanel.Dock="Top">
                <WrapPanel>
                    <Label
                        Margin="5"
                        VerticalAlignment="Center"
                        Content="{setting:Localize AddWindow.Text10}" />

                    <Label
                        Margin="5,0,0,0"
                        VerticalAlignment="Center"
                        Content="{setting:Localize Text.GameVersion}" />
                    <ComboBox
                        Width="140"
                        Margin="0,0,5,0"
                        VerticalAlignment="Center"
                        ItemsSource="{Binding GameVersionList}"
                        SelectedItem="{Binding GameVersionOptifine}" />

                    <Button
                        Width="100"
                        Height="25"
                        Margin="0,0,5,0"
                        Command="{Binding LoadOptifineList}"
                        Content="{setting:Localize AddModPackWindow.Text10}"
                        ToolTip.Tip="{setting:Localize ToolTip.Text77}"
                        ToolTip.VerticalOffset="-30" />

                    <Button
                        Width="100"
                        Height="25"
                        Command="{Binding DownloadOptifine}"
                        Content="{setting:Localize AddModPackWindow.Text12}"
                        ToolTip.Tip="{setting:Localize ToolTip.Text78}"
                        ToolTip.VerticalOffset="-30" />
                </WrapPanel>
            </Border>
            <Border
                Margin="5,0,5,5"
                Padding="{setting:Style BorderPadding}"
                Background="{setting:Colors BG1}"
                BorderBrush="{setting:Colors GroupColor}"
                BorderThickness="2"
                CornerRadius="{setting:Style ButtonCornerRadius}">
                <DataGrid
                    Name="OptifineFiles"
                    Background="{setting:Colors TranBack}"
                    CanUserResizeColumns="True"
                    ItemsSource="{Binding DownloadOptifineList}"
                    SelectedItem="{Binding OptifineItem}">
                    <DataGrid.Columns>
                        <DataGridTextColumn
                            Binding="{Binding Version}"
                            Header="{setting:Localize Text.GameVersion}"
                            IsReadOnly="True" />
                        <DataGridTextColumn
                            Binding="{Binding MCVersion}"
                            Header="{setting:Localize Text.Version}"
                            IsReadOnly="True" />
                        <DataGridTextColumn
                            Binding="{Binding Forge}"
                            Header="{setting:Localize Text.ForgeVersion}"
                            IsReadOnly="True" />
                        <DataGridTextColumn
                            Binding="{Binding Date}"
                            Header="{setting:Localize AddModPackWindow.DataGrid.Text4}"
                            IsReadOnly="True" />
                    </DataGrid.Columns>
                </DataGrid>
            </Border>
        </DockPanel>

        <DockPanel
            Name="ModDownloadDisplay"
            Background="{setting:Colors BG1}"
            IsVisible="False">
            <Border
                Margin="5,5,5,3"
                Padding="{setting:Style BorderPadding}"
                Background="{setting:Colors BG1}"
                BorderBrush="{setting:Colors GroupColor}"
                BorderThickness="2"
                CornerRadius="{setting:Style ButtonCornerRadius}"
                DockPanel.Dock="Top">
                <WrapPanel>
                    <Label
                        Margin="5"
                        VerticalAlignment="Center"
                        Content="{setting:Localize AddWindow.Text7}" />
                    <CheckBox
                        Margin="0,0,5,0"
                        Command="{Binding ModsLoad}"
                        Content="{setting:Localize AddWindow.Text9}"
                        IsChecked="{Binding LoadMoreMod}" />
                    <Button
                        Width="100"
                        Height="25"
                        Margin="0,0,5,0"
                        Command="{Binding DownloadAllMod}"
                        Content="{setting:Localize AddWindow.Text6}"
                        ToolTip.Tip="{setting:Localize ToolTip.Text79}"
                        ToolTip.VerticalOffset="-30" />
                    <Button
                        Width="100"
                        Height="25"
                        Command="{Binding DownloadMod}"
                        Content="{setting:Localize AddModPackWindow.Text12}"
                        ToolTip.Tip="{setting:Localize ToolTip.Text80}"
                        ToolTip.VerticalOffset="-30" />
                </WrapPanel>
            </Border>
            <Border
                Margin="5,0,5,5"
                Padding="{setting:Style BorderPadding}"
                Background="{setting:Colors BG1}"
                BorderBrush="{setting:Colors GroupColor}"
                BorderThickness="2"
                CornerRadius="{setting:Style ButtonCornerRadius}">
                <DataGrid
                    Name="ModDownloadFiles"
                    Background="{setting:Colors TranBack}"
                    CanUserResizeColumns="True"
                    ItemsSource="{Binding DownloadModList}"
                    SelectedItem="{Binding Mod}">
                    <DataGrid.Columns>
                        <DataGridCheckBoxColumn Binding="{Binding Download}" Header="{setting:Localize AddWindow.DataGrid.Text1}" />
                        <DataGridTextColumn
                            Binding="{Binding Name}"
                            Header="{setting:Localize AddWindow.DataGrid.Text2}"
                            IsReadOnly="True" />
                        <DataGridTemplateColumn Header="{setting:Localize Text.Version}">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <ComboBox
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Stretch"
                                        ItemsSource="{Binding Version}"
                                        SelectedIndex="{Binding SelectVersion}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>
        </DockPanel>
    </Panel>
</UserControl>
