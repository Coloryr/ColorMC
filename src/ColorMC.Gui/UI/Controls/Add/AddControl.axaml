<UserControl
    x:Class="ColorMC.Gui.UI.Controls.Add.AddControl"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:setting="clr-namespace:ColorMC.Gui.Utils.LaunchSetting"
    xmlns:views1="clr-namespace:ColorMC.Gui.UI.Controls.Add"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <DockPanel>
            <StackPanel
                Margin="3,3,3,0"
                Background="{setting:Colors TranBack}"
                DockPanel.Dock="Top">
                <StackPanel VerticalAlignment="Top" Orientation="Horizontal">
                    <Label
                        Width="65"
                        Margin="5"
                        VerticalAlignment="Center"
                        Content="{setting:Localize AddWindow.Text1}" />
                    <ComboBox
                        Name="ComboBox1"
                        Width="120"
                        Height="30"
                        Margin="2,2,0,0" />
                    <Label
                        Width="65"
                        Margin="5"
                        VerticalAlignment="Center"
                        Content="{setting:Localize AddWindow.Text2}" />
                    <ComboBox
                        Name="ComboBox2"
                        Width="120"
                        Height="30"
                        Margin="2,2,0,0" />

                    <Label
                        Margin="5"
                        VerticalAlignment="Center"
                        Content="{setting:Localize AddWindow.Text3}" />
                    <ComboBox
                        Name="ComboBox3"
                        Width="120"
                        Height="30"
                        Margin="2,2,0,0" />
                    <Label
                        Margin="5"
                        VerticalAlignment="Center"
                        Content="{setting:Localize AddModPackWindow.Text5}" />

                    <NumericUpDown
                        Name="Input2"
                        Width="120"
                        Height="30"
                        Margin="2,2,0,0"
                        FormatString="N0"
                        Minimum="0"
                        Value="0" />

                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label
                        Width="65"
                        Margin="5"
                        VerticalAlignment="Center"
                        Content="{setting:Localize AddWindow.Text4}" />
                    <ComboBox
                        Name="ComboBox4"
                        Width="120"
                        Height="30"
                        Margin="2,2,0,0" />

                    <Label
                        Width="65"
                        Margin="5"
                        VerticalAlignment="Center"
                        Content="{setting:Localize AddWindow.Text5}" />
                    <ComboBox
                        Name="ComboBox5"
                        Width="120"
                        Height="30"
                        Margin="2,2,0,0" />

                    <TextBox
                        Name="Input1"
                        Width="200"
                        Height="30"
                        Margin="5,0,5,0"
                        Classes="input1"
                        Foreground="Black"
                        Watermark="{setting:Localize AddModPackWindow.Text3}" />
                    <Button
                        Name="Button1"
                        Width="80"
                        Height="30"
                        Margin="5,0,5,0"
                        Content="{setting:Localize AddModPackWindow.Text8}" />

                    <Button
                        Name="Button2"
                        Width="100"
                        Height="30"
                        Content="{setting:Localize AddModPackWindow.Text9}"
                        IsEnabled="False" />
                </StackPanel>
            </StackPanel>

            <Grid Margin="3">
                <DockPanel
                    Name="Grid3"
                    Background="{setting:Colors TranBack}"
                    IsVisible="True">
                    <Label
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Content="{setting:Localize AddModPackWindow.Text13}"
                        FontSize="30" />
                </DockPanel>
                <ScrollViewer Name="ScrollViewer1" VerticalScrollBarVisibility="Visible">
                    <StackPanel
                        Name="ListBox_Items"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch" />
                </ScrollViewer>
            </Grid>
        </DockPanel>

        <DockPanel
            Name="Grid1"
            Background="{setting:Colors TopBottom}"
            IsVisible="False">
            <StackPanel
                Margin="0,3,0,3"
                DockPanel.Dock="Top"
                Orientation="Horizontal">
                <Label
                    Margin="5,0,0,0"
                    VerticalAlignment="Center"
                    Content="{setting:Localize AddModPackWindow.Text6}" />
                <Label
                    Margin="5,0,0,0"
                    VerticalAlignment="Center"
                    Content="{setting:Localize AddModPackWindow.Text7}" />
                <NumericUpDown
                    Name="Input3"
                    Width="120"
                    Height="30"
                    VerticalAlignment="Center"
                    FormatString="N0"
                    Minimum="0"
                    Value="0" />
                <Label
                    Margin="5,0,0,0"
                    VerticalAlignment="Center"
                    Content="{setting:Localize AddModPackWindow.Text2}" />
                <ComboBox
                    Name="ComboBox6"
                    Width="140"
                    VerticalAlignment="Center" />
                <Button
                    Name="ButtonSearch"
                    Width="100"
                    Height="30"
                    Margin="5,0,0,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Content="{setting:Localize AddModPackWindow.Text10}" />
                <Button
                    Name="ButtonDownload"
                    Width="100"
                    Height="30"
                    Margin="5,0,0,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Content="{setting:Localize AddModPackWindow.Text12}" />
                <Button
                    Name="ButtonCancel"
                    Width="100"
                    Height="30"
                    Margin="5,0,0,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Content="{setting:Localize Button.Cancel}" />
            </StackPanel>

            <DataGrid Name="DataGridFiles" Background="{setting:Colors TranBack}">
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Binding="{Binding Name}"
                        Header="{setting:Localize AddModPackWindow.DataGrid.Text1}"
                        IsReadOnly="True" />
                    <DataGridCheckBoxColumn
                        Binding="{Binding IsDownload}"
                        Header="{setting:Localize AddModPackWindow.DataGrid.Text5}"
                        IsReadOnly="True" />
                    <DataGridTextColumn
                        Binding="{Binding Size}"
                        Header="{setting:Localize AddModPackWindow.DataGrid.Text2}"
                        IsReadOnly="True" />
                    <DataGridTextColumn
                        Binding="{Binding Download}"
                        Header="{setting:Localize AddModPackWindow.DataGrid.Text3}"
                        IsReadOnly="True" />
                    <DataGridTextColumn
                        Binding="{Binding Time}"
                        Header="{setting:Localize AddModPackWindow.DataGrid.Text4}"
                        IsReadOnly="True" />
                </DataGrid.Columns>
            </DataGrid>
        </DockPanel>

        <DockPanel
            Name="Grid2"
            Background="{setting:Colors TopBottom}"
            IsVisible="False">
            <StackPanel
                Margin="0,3,0,3"
                DockPanel.Dock="Top"
                Orientation="Horizontal">
                <Label
                    Margin="5"
                    VerticalAlignment="Center"
                    Content="{setting:Localize AddGameWindow.Control1.Text1}" />

                <Label
                    Margin="5,0,0,0"
                    VerticalAlignment="Center"
                    Content="{setting:Localize AddGameWindow.Control1.Text2}" />
                <ComboBox
                    Name="ComboBox7"
                    Width="140"
                    VerticalAlignment="Center" />

                <Button
                    Name="Button4"
                    Width="100"
                    Height="30"
                    Margin="5,0,0,0"
                    Content="{setting:Localize AddModPackWindow.Text10}" />

                <Button
                    Name="Button5"
                    Width="100"
                    Height="30"
                    Margin="5,0,0,0"
                    Content="{setting:Localize AddModPackWindow.Text12}" />
                <Button
                    Name="Button3"
                    Width="100"
                    Height="30"
                    Margin="5,0,0,0"
                    Content="{setting:Localize Button.Cancel}" />
            </StackPanel>

            <DataGrid Name="DataGrid1" Background="{setting:Colors TranBack}">
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Binding="{Binding MC}"
                        Header="{setting:Localize AddGameWindow.Control1.DataGrid.Text1}"
                        IsReadOnly="True" />
                    <DataGridTextColumn
                        Binding="{Binding Version}"
                        Header="{setting:Localize AddGameWindow.Control1.DataGrid.Text2}"
                        IsReadOnly="True" />
                    <DataGridTextColumn
                        Binding="{Binding Forge}"
                        Header="{setting:Localize AddGameWindow.Control1.DataGrid.Text3}"
                        IsReadOnly="True" />
                    <DataGridTextColumn
                        Binding="{Binding Date}"
                        Header="{setting:Localize AddModPackWindow.DataGrid.Text4}"
                        IsReadOnly="True" />
                </DataGrid.Columns>
            </DataGrid>
        </DockPanel>
    </Grid>
</UserControl>
