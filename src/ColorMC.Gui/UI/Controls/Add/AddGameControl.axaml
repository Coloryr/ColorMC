<UserControl
    x:Class="ColorMC.Gui.UI.Controls.Add.AddGameControl"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:setting="clr-namespace:ColorMC.Gui.Utils.LaunchSetting"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="{setting:Colors TranBack}"
    DragDrop.AllowDrop="True"
    mc:Ignorable="d">
    <Grid>
        <DockPanel>
            <ScrollViewer
                VerticalAlignment="Top"
                AllowAutoHide="True"
                DockPanel.Dock="Top"
                HorizontalScrollBarVisibility="Auto"
                VerticalScrollBarVisibility="Disabled">
                <TabControl Name="Tabs" Margin="0,0,0,5">
                    <TabItem Header="{setting:Localize AddGameWindow.Tabs.Text1}" />
                    <TabItem Header="{setting:Localize AddGameWindow.Tabs.Text2}" />
                    <TabItem Header="{setting:Localize AddGameWindow.Tabs.Text3}" />
                </TabControl>
            </ScrollViewer>

            <Grid Name="Tab1" ClipToBounds="True" />
        </DockPanel>

        <Grid
            Name="Grid2"
            Background="{setting:Colors TopBottom}"
            IsVisible="False">
            <Label
                Name="Label1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Content="test"
                FontSize="30" />
        </Grid>
    </Grid>
</UserControl>
