<UserControl
    x:Class="ColorMC.Gui.UI.Controls.Add.AddGameControl"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="clr-namespace:ColorMC.Gui.UI.Model.Add"
    xmlns:setting="clr-namespace:ColorMC.Gui.UI"
    xmlns:svg="clr-namespace:ColorMC.Gui.UI.Views.Svg"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:DataType="model:AddGameModel"
    DragDrop.AllowDrop="True"
    mc:Ignorable="d">
    <Panel>
        <Panel
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            IsVisible="{Binding Main}"
            RenderOptions.TextRenderingMode="Antialias">
            <Panel.Styles>
                <Style Selector="Button">
                    <Setter Property="Background" Value="Transparent" />
                </Style>
            </Panel.Styles>
            <StackPanel IsVisible="{Binding MinMode, FallbackValue=true}">
                <Button
                    Width="200"
                    Margin="10"
                    BorderThickness="0"
                    Command="{Binding GoTab}"
                    CommandParameter=":1"
                    CornerRadius="5">
                    <StackPanel Orientation="Horizontal">
                        <svg:SvgControl
                            Width="50"
                            Height="50"
                            Path="/Resource/Icon/AddMenu/item1.svg" />
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontSize="20"
                            Text="{setting:Localize AddGameWindow.Tabs.Text1}" />
                    </StackPanel>
                </Button>
                <Button
                    Width="200"
                    Margin="10"
                    BorderThickness="0"
                    Command="{Binding GoTab}"
                    CommandParameter=":2"
                    CornerRadius="5">
                    <StackPanel Orientation="Horizontal">
                        <svg:SvgControl
                            Width="50"
                            Height="50"
                            Path="/Resource/Icon/AddMenu/item2.svg" />
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontSize="20"
                            Text="{setting:Localize AddGameWindow.Tabs.Text2}" />
                    </StackPanel>
                </Button>
                <Button
                    Width="200"
                    Margin="10"
                    BorderThickness="0"
                    Command="{Binding GoTab}"
                    CommandParameter=":3"
                    CornerRadius="5"
                    IsVisible="{Binding !IsPhone}">
                    <StackPanel Orientation="Horizontal">
                        <svg:SvgControl
                            Width="50"
                            Height="50"
                            Fill="{setting:Theme FontColor}"
                            Path="/Resource/Icon/AddMenu/item3.svg" />
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontSize="20"
                            Text="{setting:Localize AddGameWindow.Tabs.Text3}" />
                    </StackPanel>
                </Button>
                <Button
                    Width="200"
                    Margin="10"
                    BorderThickness="0"
                    Command="{Binding GoModPack}"
                    CornerRadius="5">
                    <StackPanel Orientation="Horizontal">
                        <svg:SvgControl
                            Width="50"
                            Height="50"
                            Path="/Resource/Icon/AddMenu/item4.svg" />
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontSize="20"
                            Text="{setting:Localize AddGameWindow.Tab1.Text19}" />
                    </StackPanel>
                </Button>
                <Button
                    Width="200"
                    Margin="10"
                    BorderThickness="0"
                    Command="{Binding GoCloud}"
                    CornerRadius="5"
                    IsEnabled="{Binding CloudEnable}">
                    <StackPanel Orientation="Horizontal">
                        <svg:SvgControl
                            Width="50"
                            Height="50"
                            Path="/Resource/Icon/AddMenu/item6.svg" />
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontSize="20"
                            Text="{setting:Localize AddGameWindow.Tab1.Text13}" />
                    </StackPanel>
                </Button>
                <Button
                    Width="200"
                    Margin="10"
                    BorderThickness="0"
                    Command="{Binding GoServer}"
                    CornerRadius="5">
                    <StackPanel Orientation="Horizontal">
                        <svg:SvgControl
                            Width="50"
                            Height="50"
                            Path="/Resource/Icon/AddMenu/item7.svg" />
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontSize="20"
                            Text="{setting:Localize AddGameWindow.Tab1.Text14}" />
                    </StackPanel>
                </Button>
            </StackPanel>
            <StackPanel>
                <StackPanel IsVisible="{Binding !MinMode, FallbackValue=true}" Orientation="Horizontal">
                    <Button
                        Width="100"
                        Height="130"
                        Margin="20"
                        BorderThickness="0"
                        Command="{Binding GoTab}"
                        CommandParameter=":1"
                        CornerRadius="5">
                        <StackPanel>
                            <svg:SvgControl Path="/Resource/Icon/AddMenu/item1.svg" />
                            <TextBlock HorizontalAlignment="Center" Text="{setting:Localize AddGameWindow.Tabs.Text1}" />
                        </StackPanel>
                    </Button>
                    <Button
                        Width="100"
                        Height="130"
                        Margin="20"
                        BorderThickness="0"
                        Command="{Binding GoTab}"
                        CommandParameter=":2"
                        CornerRadius="5">
                        <StackPanel>
                            <svg:SvgControl Path="/Resource/Icon/AddMenu/item2.svg" />
                            <TextBlock HorizontalAlignment="Center" Text="{setting:Localize AddGameWindow.Tabs.Text2}" />
                        </StackPanel>
                    </Button>
                    <Button
                        Width="100"
                        Height="130"
                        Margin="20"
                        BorderThickness="0"
                        Command="{Binding GoTab}"
                        CommandParameter=":3"
                        CornerRadius="5"
                        IsVisible="{Binding !IsPhone}">
                        <StackPanel>
                            <svg:SvgControl Fill="{setting:Theme FontColor}" Path="/Resource/Icon/AddMenu/item3.svg" />
                            <TextBlock HorizontalAlignment="Center" Text="{setting:Localize AddGameWindow.Tabs.Text3}" />
                        </StackPanel>
                    </Button>
                </StackPanel>
                <StackPanel IsVisible="{Binding !MinMode, FallbackValue=true}" Orientation="Horizontal">
                    <Button
                        Width="100"
                        Height="130"
                        Margin="20"
                        BorderThickness="0"
                        Command="{Binding GoModPack}"
                        CornerRadius="5">
                        <StackPanel>
                            <svg:SvgControl Path="/Resource/Icon/AddMenu/item4.svg" />
                            <TextBlock HorizontalAlignment="Center" Text="{setting:Localize AddGameWindow.Tab1.Text19}" />
                        </StackPanel>
                    </Button>
                    <Button
                        Width="100"
                        Height="130"
                        Margin="20"
                        BorderThickness="0"
                        Command="{Binding GoCloud}"
                        CornerRadius="5"
                        IsEnabled="{Binding CloudEnable}">
                        <StackPanel>
                            <svg:SvgControl Path="/Resource/Icon/AddMenu/item6.svg" />
                            <TextBlock HorizontalAlignment="Center" Text="{setting:Localize AddGameWindow.Tab1.Text13}" />
                        </StackPanel>
                    </Button>
                    <Button
                        Width="100"
                        Height="130"
                        Margin="20"
                        BorderThickness="0"
                        Command="{Binding GoServer}"
                        CornerRadius="5">
                        <StackPanel>
                            <svg:SvgControl Fill="{setting:Theme FontColor}" Path="/Resource/Icon/AddMenu/item7.svg" />
                            <TextBlock HorizontalAlignment="Center" Text="{setting:Localize AddGameWindow.Tab1.Text14}" />
                        </StackPanel>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Panel>

        <Decorator Name="Content1" />

        <Panel
            Name="Grid2"
            Background="{setting:Theme TopGridColor}"
            IsVisible="False">
            <TextBlock
                Name="Label1"
                HorizontalAlignment="Center"
                FontSize="30" />
        </Panel>
    </Panel>
</UserControl>
