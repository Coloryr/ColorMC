<UserControl
    x:Class="ColorMC.Gui.UI.Controls.Add.AddModPackControl"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:app="clr-namespace:ColorMC.Gui.Manager"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:item="clr-namespace:ColorMC.Gui.UI.Controls.Items"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="clr-namespace:ColorMC.Gui.UI.Model.Add"
    xmlns:panel="clr-namespace:ColorMC.Gui.UI.Views"
    xmlns:panel1="clr-namespace:ColorMC.Gui.UI.Controls.Add"
    xmlns:setting="clr-namespace:ColorMC.Gui.UI"
    d:DesignHeight="600"
    d:DesignWidth="800"
    x:DataType="model:AddModPackControlModel"
    mc:Ignorable="d">
    <Panel>
        <ScrollViewer Name="ScrollViewer1" VerticalScrollBarVisibility="Visible">
            <DockPanel Margin="10">
                <Border
                    Margin="10,0,10,5"
                    Classes="t2"
                    DockPanel.Dock="Top">
                    <StackPanel Margin="15,15,5,15">
                        <WrapPanel>
                            <DockPanel MinWidth="190" Margin="0,0,10,10">
                                <TextBlock Margin="0,0,5,0" Text="{setting:Localize AddResourceWindow.Text2}" />
                                <ComboBox
                                    Height="30"
                                    HorizontalAlignment="Stretch"
                                    ItemsSource="{Binding SourceList}"
                                    SelectedIndex="{Binding Source}" />
                            </DockPanel>
                            <DockPanel
                                MinWidth="190"
                                Margin="0,0,10,10"
                                IsEnabled="{Binding SourceLoad}">
                                <TextBlock Margin="0,0,5,0" Text="{setting:Localize Text.GameVersion}" />
                                <ComboBox
                                    Height="30"
                                    HorizontalAlignment="Stretch"
                                    ItemsSource="{Binding GameVersionList}"
                                    SelectedItem="{Binding GameVersion}" />
                            </DockPanel>
                            <DockPanel
                                MinWidth="190"
                                Margin="0,0,10,10"
                                IsEnabled="{Binding SourceLoad}">
                                <TextBlock Margin="0,0,5,0" Text="{setting:Localize Text.Sort}" />
                                <ComboBox
                                    Height="30"
                                    HorizontalAlignment="Stretch"
                                    ItemsSource="{Binding SortTypeList}"
                                    SelectedIndex="{Binding SortType}" />
                            </DockPanel>
                            <DockPanel
                                MinWidth="190"
                                Margin="0,0,10,10"
                                IsEnabled="{Binding SourceLoad}">
                                <TextBlock Margin="0,0,5,0" Text="{setting:Localize Text.Classification}" />
                                <ComboBox
                                    Height="30"
                                    HorizontalAlignment="Stretch"
                                    ItemsSource="{Binding CategorieList}"
                                    SelectedIndex="{Binding Categorie}" />
                            </DockPanel>
                        </WrapPanel>
                        <panel:WrapPanelWithStretch
                            Margin="0,0,0,-10"
                            IsEnabled="{Binding SourceLoad}"
                            LeftMax="True">
                            <TextBox
                                Height="30"
                                MinWidth="190"
                                Margin="0,0,10,10"
                                HorizontalAlignment="Stretch"
                                Text="{Binding Text}"
                                Watermark="{setting:Localize Text.Name}">
                                <TextBox.KeyBindings>
                                    <KeyBinding Command="{Binding Reload}" Gesture="Enter" />
                                </TextBox.KeyBindings>
                            </TextBox>
                            <StackPanel
                                Margin="0,0,10,10"
                                HorizontalAlignment="Right"
                                Orientation="Horizontal">
                                <NumericUpDown
                                    Width="110"
                                    Height="30"
                                    Margin="0,0,10,0"
                                    FormatString="N0"
                                    Maximum="{Binding MaxPage}"
                                    Minimum="0"
                                    Value="{Binding Page}" />
                                <Button
                                    Width="100"
                                    Height="35"
                                    Margin="-2,-3,-3,-2"
                                    Classes="top"
                                    Command="{Binding Reload}"
                                    Content="{setting:Localize Text.Search}"
                                    ToolTip.Tip="{setting:Localize ToolTip.Text75}" />
                            </StackPanel>
                        </panel:WrapPanelWithStretch>
                    </StackPanel>
                </Border>
                <Panel>
                    <StackPanel IsVisible="{Binding !EmptyDisplay}">
                        <ItemsControl
                            Margin="0,0,0,5"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            ItemsSource="{Binding DisplayList}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <item:FileItemControl DataContext="{Binding}" />
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                        <Button
                            Height="35"
                            Margin="6,0,6,5"
                            HorizontalAlignment="Stretch"
                            Classes="top"
                            Command="{Binding NextListPage}"
                            Content="{setting:Localize AddModPackWindow.Text14}"
                            IsVisible="{Binding EnableNextPage}" />
                    </StackPanel>
                    <Border
                        Margin="10,5,10,10"
                        Classes="t1"
                        IsVisible="{Binding EmptyDisplay}">
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontSize="30"
                            Text="{setting:Localize AddModPackWindow.Text13}" />
                    </Border>
                </Panel>
            </DockPanel>
        </ScrollViewer>
        <Panel
            Name="ItemInfo"
            Background="{setting:Theme TopViewBG}"
            IsVisible="False">
            <panel1:AddFileInfoControl DataContext="{Binding DisplayFile}" />
        </Panel>
        <Panel
            Name="DownloadInfo"
            Margin="0,0,0,50"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            IsVisible="False">
            <panel1:DownloadListControl />
        </Panel>
        <Panel IsVisible="{Binding HaveDownload}">
            <Button
                Height="30"
                Margin="10"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Command="{Binding ShowDownload}"
                CornerRadius="20">
                <TextBlock Margin="10,0,10,0" Text="{Binding DownloadText}" />
            </Button>
        </Panel>
    </Panel>
</UserControl>
