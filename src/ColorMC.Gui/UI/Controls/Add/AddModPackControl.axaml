<UserControl
    x:Class="ColorMC.Gui.UI.Controls.Add.AddModPackControl"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:app="clr-namespace:ColorMC.Gui.Manager"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:item="clr-namespace:ColorMC.Gui.UI.Controls.Items"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="clr-namespace:ColorMC.Gui.UI.Model.Add"
    xmlns:panel="clr-namespace:ColorMC.Gui.UI.Views"
    xmlns:panel1="clr-namespace:ColorMC.Gui.UI.Controls.Add"
    xmlns:setting="clr-namespace:ColorMC.Gui.UI"
    d:DesignHeight="600"
    d:DesignWidth="800"
    x:DataType="model:AddModPackControlModel"
    mc:Ignorable="d">
    <Panel>
        <ScrollViewer Name="ScrollViewer1" VerticalScrollBarVisibility="Visible">
            <DockPanel Margin="10">
                <Border
                    Margin="10,0,10,5"
                    Classes="t2"
                    DockPanel.Dock="Top">
                    <StackPanel Margin="15,15,5,15">
                        <Grid ColumnDefinitions="auto,*,auto,*" RowDefinitions="auto,auto">
                            <TextBlock
                                Grid.Row="0"
                                Grid.Column="0"
                                Margin="0,0,5,0"
                                HorizontalAlignment="Center"
                                Text="{setting:Localize AddResourceWindow.Text2}" />
                            <ComboBox
                                Grid.Row="0"
                                Grid.Column="1"
                                Margin="0,0,10,0"
                                HorizontalAlignment="Stretch"
                                ItemsSource="{Binding SourceList}"
                                SelectedIndex="{Binding Source}" />
                            <TextBlock
                                Grid.Row="0"
                                Grid.Column="2"
                                Margin="0,0,5,0"
                                HorizontalAlignment="Center"
                                Text="{setting:Localize Text.GameVersion}" />
                            <ComboBox
                                Grid.Row="0"
                                Grid.Column="3"
                                Margin="0,0,10,0"
                                HorizontalAlignment="Stretch"
                                ItemsSource="{Binding GameVersionList}"
                                SelectedItem="{Binding GameVersion}" />
                            <TextBlock
                                Grid.Row="1"
                                Grid.Column="0"
                                Margin="0,10,5,0"
                                HorizontalAlignment="Center"
                                Text="{setting:Localize Text.Sort}" />
                            <ComboBox
                                Grid.Row="1"
                                Grid.Column="1"
                                Margin="0,10,10,0"
                                HorizontalAlignment="Stretch"
                                ItemsSource="{Binding SortTypeList}"
                                SelectedIndex="{Binding SortType}" />
                            <TextBlock
                                Grid.Row="1"
                                Grid.Column="2"
                                Margin="0,10,5,0"
                                HorizontalAlignment="Center"
                                Text="{setting:Localize Text.Classification}" />
                            <ComboBox
                                Grid.Row="1"
                                Grid.Column="3"
                                Margin="0,10,10,0"
                                HorizontalAlignment="Stretch"
                                ItemsSource="{Binding CategorieList}"
                                SelectedIndex="{Binding Categorie}" />
                        </Grid>
                        <Grid
                            Margin="0,10,0,0"
                            ColumnDefinitions="*,auto,auto"
                            IsEnabled="{Binding SourceLoad}">
                            <TextBox
                                Grid.Column="0"
                                Margin="0,0,7,0"
                                HorizontalAlignment="Stretch"
                                Text="{Binding Text}"
                                Watermark="{setting:Localize AddModPackWindow.Text44}">
                                <TextBox.KeyBindings>
                                    <KeyBinding Command="{Binding GetNameList}" Gesture="Enter" />
                                </TextBox.KeyBindings>
                            </TextBox>
                            <Button
                                Grid.Column="1"
                                Width="100"
                                Height="35"
                                Margin="-2,-3,-4,-2"
                                Classes="top"
                                Command="{Binding Reload}"
                                Content="{setting:Localize Text.Search}"
                                ToolTip.Tip="{setting:Localize ToolTip.Text75}" />
                            <StackPanel
                                Grid.Column="2"
                                Margin="10,0,10,0"
                                Orientation="Horizontal">
                                <Button
                                    Width="35"
                                    Height="35"
                                    Margin="-5,-3,-5,-3"
                                    Classes="top"
                                    Command="{Binding LastListPage}"
                                    Content="-"
                                    IsEnabled="{Binding LastPage}" />
                                <NumericUpDown
                                    Width="60"
                                    Margin="5,0,5,0"
                                    Maximum="{Binding MaxPage}"
                                    Minimum="1"
                                    ShowButtonSpinner="False"
                                    Value="{Binding Page}" />
                                <Button
                                    Width="35"
                                    Height="35"
                                    Margin="-5,-3,-5,-3"
                                    Classes="top"
                                    Command="{Binding NextListPage}"
                                    Content="+"
                                    IsEnabled="{Binding NextPage}" />
                                <TextBlock Margin="5,0,0,0" Text="/" />
                                <TextBlock Text="{Binding MaxPage}" />
                                <TextBlock Text="{setting:Localize AddModPackWindow.Text42}" />
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>
                <Panel>
                    <StackPanel IsVisible="{Binding !EmptyDisplay}">
                        <ItemsControl
                            Margin="0,0,0,5"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            ItemsSource="{Binding DisplayList}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <item:FileItemControl DataContext="{Binding}" />
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                        <Panel>
                            <Button
                                Width="100"
                                Height="35"
                                Margin="6,0,6,5"
                                HorizontalAlignment="Right"
                                Classes="top"
                                Command="{Binding NextListPage}"
                                Content="{setting:Localize AddModPackWindow.Text14}"
                                IsVisible="{Binding NextPage}" />
                            <Button
                                Width="100"
                                Height="35"
                                Margin="6,0,6,5"
                                HorizontalAlignment="Left"
                                Classes="top"
                                Command="{Binding LastListPage}"
                                Content="{setting:Localize AddModPackWindow.Text47}"
                                IsVisible="{Binding LastPage}" />
                        </Panel>
                    </StackPanel>
                    <Border
                        Margin="10,5,10,10"
                        Classes="t1"
                        IsVisible="{Binding EmptyDisplay}">
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontSize="30"
                            Text="{setting:Localize AddModPackWindow.Text13}" />
                    </Border>
                </Panel>
            </DockPanel>
        </ScrollViewer>
        <panel1:AddFileInfoControl Name="ItemInfo" IsVisible="False" />
        <panel1:AddDownloadListControl
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            IsVisible="{Binding HaveDownload}" />
    </Panel>
</UserControl>
