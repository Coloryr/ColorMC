<UserControl
    x:Class="ColorMC.Gui.UI.Controls.Add.AddJavaControl"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="clr-namespace:ColorMC.Gui.UI.Model.Add"
    xmlns:panel="clr-namespace:ColorMC.Gui.UI.Views"
    xmlns:setting="clr-namespace:ColorMC.Gui.UI"
    d:DesignHeight="600"
    d:DesignWidth="800"
    x:DataType="model:AddJavaControlModel"
    mc:Ignorable="d">
    <Decorator Margin="10,0,10,10">
        <Border
            Margin="10,10,10,10"
            Classes="t2"
            DockPanel.Dock="Top">
            <DockPanel>
                <Grid
                    Margin="15,15,15,5"
                    ColumnDefinitions="auto,*,auto,*,auto,*,auto,*"
                    DockPanel.Dock="Top">
                    <TextBlock Margin="0,0,5,0" Text="{setting:Localize Text.Type}" />
                    <ComboBox
                        Grid.Column="1"
                        Margin="0,0,10,0"
                        HorizontalAlignment="Stretch"
                        ItemsSource="{Binding JavaTypeList}"
                        SelectedIndex="{Binding TypeIndex}"
                        SelectedItem="{Binding JavaType}" />
                    <TextBlock
                        Grid.Column="2"
                        Margin="0,0,5,0"
                        Text="{setting:Localize AddJavaWindow.Text2}" />
                    <ComboBox
                        Grid.Column="3"
                        Margin="0,0,10,0"
                        HorizontalAlignment="Stretch"
                        ItemsSource="{Binding SystemList}"
                        SelectedItem="{Binding System}" />
                    <TextBlock
                        Grid.Column="4"
                        Margin="0,0,5,0"
                        Text="{setting:Localize SettingWindow.Tab5.Text9}" />
                    <ComboBox
                        Grid.Column="5"
                        Margin="0,0,10,0"
                        HorizontalAlignment="Stretch"
                        ItemsSource="{Binding VersionList}"
                        SelectedItem="{Binding Version}" />
                    <TextBlock
                        Grid.Column="6"
                        Margin="0,0,5,0"
                        Text="{setting:Localize AddJavaWindow.Text4}" />
                    <ComboBox
                        Grid.Column="7"
                        HorizontalAlignment="Stretch"
                        ItemsSource="{Binding ArchList}"
                        SelectedIndex="{Binding ArchIndex}"
                        SelectedItem="{Binding Arch}" />
                </Grid>
                <TextBlock
                    Margin="15,0,15,15"
                    DockPanel.Dock="Bottom"
                    Text="{setting:Localize AddJavaWindow.Text5}"
                    TextWrapping="Wrap" />
                <Panel Margin="5">
                    <DataGrid
                        Name="JavaFiles"
                        AutoGenerateColumns="False"
                        CanUserResizeColumns="True"
                        CanUserSortColumns="False"
                        IsVisible="{Binding !Display}"
                        ItemsSource="{Binding JavaList}">
                        <DataGrid.Columns>
                            <DataGridTextColumn
                                Binding="{Binding Name}"
                                Header="{setting:Localize Text.Name}"
                                IsReadOnly="True" />
                            <DataGridTextColumn
                                Binding="{Binding Arch}"
                                Header="{setting:Localize AddJavaWindow.Text4}"
                                IsReadOnly="True" />
                            <DataGridTextColumn
                                Binding="{Binding Os}"
                                Header="{setting:Localize AddJavaWindow.Text2}"
                                IsReadOnly="True" />
                            <DataGridTextColumn
                                Binding="{Binding MainVersion}"
                                Header="{setting:Localize SettingWindow.Tab5.Text9}"
                                IsReadOnly="True" />
                            <DataGridTextColumn
                                Binding="{Binding Version}"
                                Header="{setting:Localize Text.Version}"
                                IsReadOnly="True" />
                            <DataGridTextColumn
                                Binding="{Binding Size}"
                                Header="{setting:Localize Text.Size}"
                                IsReadOnly="True" />
                        </DataGrid.Columns>
                    </DataGrid>
                    <Border Classes="t1" IsVisible="{Binding Display}">
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontSize="30"
                            Text="{setting:Localize AddJavaWindow.Text6}" />
                    </Border>
                </Panel>
            </DockPanel>
        </Border>
    </Decorator>
</UserControl>
