<UserControl
    x:Class="ColorMC.Gui.UI.Controls.Download.DownloadControl"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:items="clr-namespace:ColorMC.Gui.UI.Controls.Items"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="clr-namespace:ColorMC.Gui.UI.Model.Download"
    xmlns:setting="clr-namespace:ColorMC.Gui.Utils.LaunchSetting"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:DataType="model:DownloadModel"
    Background="{setting:Colors TranBack}"
    mc:Ignorable="d">
    <DockPanel Margin="5">
        <Border Classes="t1" DockPanel.Dock="Top">
            <StackPanel Margin="5">
                <StackPanel Orientation="Horizontal">
                    <TextBlock
                        Margin="0,0,5,0"
                        DockPanel.Dock="Right"
                        Text="{setting:Localize DownloadWindow.Text6}" />
                    <TextBlock
                        MinWidth="100"
                        DockPanel.Dock="Right"
                        Text="{Binding Size}" />
                </StackPanel>
                <WrapPanel>
                    <TextBlock
                        Margin="0,0,5,0"
                        DockPanel.Dock="Right"
                        Text="{setting:Localize DownloadWindow.Text7}" />
                    <ProgressBar
                        Height="20"
                        Margin="0,0,5,0"
                        VerticalAlignment="Center"
                        BorderBrush="White"
                        BorderThickness="1"
                        Foreground="#FF5EBDD3"
                        Maximum="100"
                        ShowProgressText="True"
                        Value="{Binding Value}" />
                    <StackPanel Orientation="Horizontal">
                        <TextBlock
                            MinWidth="100"
                            Margin="0,0,5,0"
                            DockPanel.Dock="Right"
                            Text="{Binding Speed}" />
                        <TextBlock
                            MinWidth="100"
                            Margin="0,0,5,0"
                            DockPanel.Dock="Right"
                            Text="{Binding Now}" />
                    </StackPanel>

                </WrapPanel>
            </StackPanel>
        </Border>

        <ScrollViewer Margin="0,5,0,0" HorizontalScrollBarVisibility="Disabled">
            <ItemsControl
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                ItemsSource="{Binding DisplayList}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <items:DownloadItemControl Margin="0,0,0,5" DataContext="{Binding}" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </DockPanel>
</UserControl>
