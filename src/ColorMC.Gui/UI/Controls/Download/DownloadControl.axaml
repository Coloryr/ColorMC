<UserControl
    x:Class="ColorMC.Gui.UI.Controls.Download.DownloadControl"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="clr-namespace:ColorMC.Gui.UI.Model.Download"
    xmlns:setting="clr-namespace:ColorMC.Gui.Utils.LaunchSetting"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:DataType="model:DownloadModel"
    Background="{setting:Colors TranBack}"
    mc:Ignorable="d">
    <DockPanel Margin="5">
        <Border
            Padding="8"
            Background="{setting:Colors GroupBack}"
            BorderBrush="{setting:Colors GroupColor}"
            BorderThickness="2"
            CornerRadius="{setting:Style ButtonCornerRadius}"
            DockPanel.Dock="Top">
            <WrapPanel>
                <Label Content="{setting:Localize DownloadWindow.Text3}" />
                <ProgressBar
                    Height="20"
                    Margin="5,0,0,0"
                    VerticalAlignment="Center"
                    BorderBrush="White"
                    BorderThickness="1"
                    Foreground="#FF5EBDD3"
                    Maximum="100"
                    ShowProgressText="True"
                    Value="{Binding Value}" />
                <StackPanel Orientation="Horizontal">
                    <Label
                        MinWidth="100"
                        Margin="5,0,0,0"
                        VerticalAlignment="Center"
                        HorizontalContentAlignment="Right"
                        VerticalContentAlignment="Center"
                        Content="{Binding Speed}"
                        DockPanel.Dock="Right" />
                    <Label
                        MinWidth="100"
                        Margin="5,0,0,0"
                        VerticalAlignment="Center"
                        HorizontalContentAlignment="Right"
                        VerticalContentAlignment="Center"
                        Content="{Binding Now}"
                        DockPanel.Dock="Right" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Button
                        Width="100"
                        Height="25"
                        Margin="5,2,0,2"
                        Command="{Binding Pause}"
                        Content="{Binding Button1}"
                        DockPanel.Dock="Right" />
                    <Button
                        Width="100"
                        Height="25"
                        Margin="5,2,0,2"
                        Command="{Binding Stop}"
                        Content="{setting:Localize DownloadWindow.Text2}"
                        DockPanel.Dock="Right" />
                </StackPanel>
            </WrapPanel>
        </Border>
        <Border
            Margin="0,3,0,0"
            Background="{setting:Colors GroupBack}"
            BorderBrush="{setting:Colors GroupColor}"
            BorderThickness="2"
            CornerRadius="{setting:Style ButtonCornerRadius}"
            DockPanel.Dock="Top">
            <DataGrid
                Name="DataGrid1"
                AutoGenerateColumns="False"
                CanUserResizeColumns="True"
                ItemsSource="{Binding ItemList}">
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Binding="{Binding NowSize}"
                        Header="{setting:Localize DownloadWindow.DataGrid.Text3}"
                        IsReadOnly="True" />
                    <DataGridTextColumn
                        Binding="{Binding Name}"
                        Header="{setting:Localize Text.Name}"
                        IsReadOnly="True" />
                    <DataGridTextColumn
                        Binding="{Binding State}"
                        Header="{setting:Localize DownloadWindow.DataGrid.Text2}"
                        IsReadOnly="True" />
                    <DataGridTextColumn
                        Binding="{Binding AllSize}"
                        Header="{setting:Localize DownloadWindow.DataGrid.Text4}"
                        IsReadOnly="True" />
                    <DataGridTextColumn
                        Binding="{Binding ErrorTime}"
                        Header="{setting:Localize DownloadWindow.DataGrid.Text5}"
                        IsReadOnly="True" />
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </DockPanel>
</UserControl>
