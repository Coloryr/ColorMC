<UserControl
    x:Class="ColorMC.Gui.UI.Controls.NetFrp.NetFrpTab1Control"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="clr-namespace:ColorMC.Gui.UI.Model.NetFrp"
    xmlns:panel="clr-namespace:ColorMC.Gui.UI.Views"
    xmlns:setting="clr-namespace:ColorMC.Gui.UI"
    xmlns:view="clr-namespace:ColorMC.Gui.UI.Controls.Items"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:DataType="model:NetFrpModel"
    mc:Ignorable="d">
    <ScrollViewer>
        <DockPanel Margin="0,0,10,15">
            <Border
                Margin="10,5,10,3"
                Classes="t2"
                DockPanel.Dock="Top">
                <panel:WrapPanelWithStretch Margin="15,15,5,5" LeftMax="True">
                    <TextBox
                        MinWidth="230"
                        Margin="0,0,10,10"
                        PasswordChar="*"
                        Text="{Binding KeySakura}"
                        Watermark="{setting:Localize NetFrpWindow.Tab1.Text1}" />
                    <StackPanel
                        Margin="0,0,10,10"
                        DockPanel.Dock="Right"
                        Orientation="Horizontal">
                        <Button
                            Width="120"
                            Height="35"
                            Margin="-2,-2,3,-2"
                            Classes="top"
                            Command="{Binding GetChannelSakura}"
                            Content="{setting:Localize NetFrpWindow.Tab1.Text6}"
                            DockPanel.Dock="Right" />
                        <Button
                            Width="100"
                            Height="35"
                            Margin="-2,-2,-3,-2"
                            Classes="top"
                            Command="{Binding OpenUrlSakura}"
                            Content="{setting:Localize NetFrpWindow.Tab1.Text14}" />
                    </StackPanel>
                </panel:WrapPanelWithStretch>
            </Border>
            <Panel>
                <ItemsControl ItemsSource="{Binding RemotesSakura}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <view:NetFrpRemoteControl DataContext="{Binding}" />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <Border
                    Margin="10,5,10,3"
                    Classes="t1"
                    IsVisible="{Binding IsSakuraEmpty}">
                    <TextBlock
                        HorizontalAlignment="Center"
                        FontSize="30"
                        Text="{setting:Localize NetFrpWindow.Tab1.Text5}" />
                </Border>
            </Panel>
        </DockPanel>
    </ScrollViewer>
</UserControl>
