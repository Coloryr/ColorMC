<Styles
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:setting="clr-namespace:ColorMC.Gui.Utils.LaunchSetting">
    <Design.PreviewWith>
        <Border Padding="20">
            <StackPanel Background="Black">
                <RepeatButton
                    Width="80"
                    Height="40"
                    Content="123" />
                <RepeatButton
                    Width="80"
                    Height="40"
                    Content="123"
                    IsEnabled="False" />
            </StackPanel>
        </Border>
    </Design.PreviewWith>

    <Style Selector="RepeatButton">
        <Setter Property="Foreground" Value="{setting:Colors ButtonFont}" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="{setting:Style ButtonCornerRadius}" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="BorderBrush" Value="{setting:Colors Bottom}" />
    </Style>

    <Style Selector="RepeatButton /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Foreground" Value="White" />
    </Style>

