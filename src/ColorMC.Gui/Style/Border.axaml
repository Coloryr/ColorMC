<Styles
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:setting="clr-namespace:ColorMC.Gui.Utils">
    <Design.PreviewWith>
        <StackPanel>
            <Border
                Width="200"
                Height="200"
                Margin="5"
                Classes="t2" />
        </StackPanel>
    </Design.PreviewWith>

    <Style Selector="Border.t1">
        <Setter Property="Background" Value="{setting:Theme OverBGColor}" />
        <Setter Property="CornerRadius" Value="5" />
    </Style>

    <Style Selector="Border.t2">
        <Setter Property="Background" Value="{setting:Theme ItemBG}" />
        <Setter Property="BorderBrush" Value="{setting:Theme OverBrushColor}" />
        <Setter Property="CornerRadius" Value="5" />
        <Setter Property="BorderThickness" Value="1" />
    </Style>

    <Style Selector="Border.t3">
        <Setter Property="Background" Value="{setting:Theme ItemBG}" />
        <Setter Property="CornerRadius" Value="5" />
        <Setter Property="BoxShadow" Value="0 0 3 1 #1A000000, 0 0 5 -1 #1A000000" />
    </Style>
</Styles>
