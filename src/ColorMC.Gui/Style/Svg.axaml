<Styles
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:setting="clr-namespace:ColorMC.Gui.UI"
    xmlns:svg="clr-namespace:ColorMC.Gui.UI.Views.Svg">
    <Design.PreviewWith>
        <Border Padding="20">
            <svg:SvgControl Classes="t1" />
        </Border>
    </Design.PreviewWith>

    <Style Selector="svg|SvgControl">
        <Setter Property="Fill" Value="{setting:Theme FontColor}" />
        <Setter Property="Stroke" Value="{setting:Theme FontColor}" />
    </Style>

    <Style Selector="svg|SvgControl.t1">
        <Setter Property="Fill" Value="#9ca3af" />
        <Setter Property="Stroke" Value="#9ca3af" />

        <Style Selector="^:pointerover">
            <Setter Property="Fill" Value="{setting:Theme MainColor}" />
            <Setter Property="Stroke" Value="{setting:Theme MainColor}" />
        </Style>
    </Style>
</Styles>