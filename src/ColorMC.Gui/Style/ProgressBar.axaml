<Styles
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:setting="clr-namespace:ColorMC.Gui.UI">
    <Design.PreviewWith>
        <Border Padding="20">
            <ProgressBar
                MinWidth="100"
                Maximum="32767"
                Value="800" />
        </Border>
    </Design.PreviewWith>

    <Style Selector="ProgressBar">
        <Setter Property="Foreground" Value="{setting:Theme RandomColor}" />
    </Style>

    <Style Selector="ProgressBar:horizontal">
        <Style Selector="^ Border#ProgressBarRoot">
            <Setter Property="Background" Value="{setting:Theme ProgressBarBG}" />
        </Style>
    </Style>
</Styles>
