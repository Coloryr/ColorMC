<Window
    x:Class="ColorMC.Launcher.Window1"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:svg="clr-namespace:ColorMC.Gui.UI.Views.Svg"
    Title="{Binding Title}"
    Width="760"
    Height="450"
    MinWidth="500"
    MinHeight="300"
    d:DesignHeight="300"
    d:DesignWidth="500"
    Background="White"
    mc:Ignorable="d">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock
            HorizontalAlignment="Center"
            FontSize="20"
            Text="启动器所在没有根目录没有读写权限" />
        <TextBlock HorizontalAlignment="Center" Text="The launcher is located without a root directory or read/write permissions" />
        <TextBlock
            HorizontalAlignment="Center"
            FontSize="20"
            Text="你可以将启动器安装在其他位置来解决这个问题" />
        <TextBlock HorizontalAlignment="Center" Text="You can install the launcher in another location to solve this problem" />
        <TextBlock
            HorizontalAlignment="Center"
            FontSize="20"
            Text="是否使用管理员方式重启" />
        <TextBlock HorizontalAlignment="Center" Text="Do you want to restart using administrator mode" />
        <Button
            Name="Button3"
            Width="250"
            Margin="0,20,0,0"
            HorizontalAlignment="Center"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            Content="调整运行目录(Change Run Dir)" />

        <StackPanel
            Margin="0,20,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <Button
                Name="Button1"
                Width="120"
                Margin="0,0,20,0"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Content="确定(Yes)" />
            <Button
                Name="Button2"
                Width="120"
                Margin="20,0,0,0"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Content="取消(No)" />
        </StackPanel>
    </StackPanel>

</Window>
