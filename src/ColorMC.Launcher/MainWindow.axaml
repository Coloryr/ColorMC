<Window
    x:Class="ColorMC.Launcher.MainWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="AvaloniaApplication1"
    Width="400"
    Height="250"
    MinWidth="400"
    MinHeight="250"
    MaxWidth="400"
    MaxHeight="250"
    d:DesignHeight="250"
    d:DesignWidth="400"
    mc:Ignorable="d">
    <Grid>
        <Border
            Name="Border1"
            BorderBrush="#FF5ABED6"
            BorderThickness="3" />

        <Label
            Margin="0,10,0,0"
            HorizontalAlignment="Center"
            Content="ColorMC正在更新" />

        <ProgressBar
            Name="ProgressBar1"
            Width="180"
            Height="20" />

        <Label
            Name="Label1"
            Margin="0,50,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Content="更新完毕，请重启"
            IsVisible="False" />
    </Grid>
</Window>
