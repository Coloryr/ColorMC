<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<TargetFramework>$(DotnetVersion)</TargetFramework>
		<Nullable>enable</Nullable>
		<TrimMode>link</TrimMode>
		<BuiltInComInteropSupport>true</BuiltInComInteropSupport>
		<PlatformTarget>AnyCPU</PlatformTarget>
		<Platforms>AnyCPU</Platforms>
		<ApplicationIcon>icon.ico</ApplicationIcon>
		<IncludeNativeLibrariesForSelfExtract>false</IncludeNativeLibrariesForSelfExtract>
	</PropertyGroup>
	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
		<DebugType>portable</DebugType>
		<OutputType>Exe</OutputType>
	</PropertyGroup>
	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
		<DebugType>embedded</DebugType>
		<OutputType>WinExe</OutputType>
	</PropertyGroup>

	<PropertyGroup>
		<ApplicationManifest>app.manifest</ApplicationManifest>
	</PropertyGroup>

	<ItemGroup>
		<None Remove=".gitignore" />
		<None Remove="Resources\SourceHanSansSC-Regular.otf" />
	</ItemGroup>

	<ItemGroup>
	  <EmbeddedResource Include="Resources\SourceHanSansSC-Regular.otf" />
	</ItemGroup>
	
	<ItemGroup>
		<ProjectReference Condition="'$(Configuration)' == 'Debug'" Include="..\ColorMC.CustomGui\ColorMC.CustomGui.csproj" />
		<ProjectReference Include="..\ColorMC.Gui\ColorMC.Gui.csproj" />
		<ProjectReference Include="..\ColorMC.Core\ColorMC.Core.csproj" />
	</ItemGroup>

</Project>
