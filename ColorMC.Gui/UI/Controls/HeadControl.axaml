<UserControl
    x:Class="ColorMC.Gui.UI.Controls.HeadControl"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i18n="clr-namespace:ColorMC.Gui"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Height="35"
    d:DesignHeight="35"
    d:DesignWidth="800"
    Background="#5ebdd3"
    mc:Ignorable="d">
    <Grid Margin="5,5,5,0">
        <Label
            Name="TitleShow"
            Margin="10,0,0,0"
            Content="{Binding Title}"
            Foreground="White" />
        <StackPanel
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Orientation="Horizontal">
            <Button
                Name="Button_Min"
                Width="24"
                Height="24"
                Margin="0,0,5,0"
                BorderBrush="White"
                Content="-" />
            <Button
                Name="Button_Max"
                Width="24"
                Height="24"
                Margin="0,0,5,0"
                BorderBrush="White"
                Content="â–¢" />
            <Button
                Name="Button_Close"
                Width="24"
                Height="24"
                Margin="0,0,2,0"
                BorderBrush="White"
                Content="X" />
        </StackPanel>
    </Grid>
</UserControl>
