<UserControl
    x:Class="ColorMC.Gui.UI.Controls.Hello.TabHelloControl"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Rectangle
            Fill="#FFF4F4F5"
            Stroke="#FF5ABED6"
            StrokeThickness="3" />
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock
                FontSize="30"
                Text="看起来你是第一次启动ColorMC"
                TextAlignment="Center" />
            <TextBlock
                Margin="0,10,0,0"
                FontSize="30"
                Text="进行一些初始设定"
                TextAlignment="Center" />
            <TextBlock
                Margin="0,10,0,0"
                FontSize="30"
                Text="开始使用吧！"
                TextAlignment="Center" />
        </StackPanel>

        <Button
            Name="Button_Next"
            Width="80"
            Height="25"
            Margin="0,0,10,10"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Content="下一步" />
    </Grid>
</UserControl>
