<UserControl
    x:Class="ColorMC.Gui.UI.Controls.Hello.Tab4Control"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i18n="clr-namespace:ColorMC.Gui.Language"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Rectangle Stroke="#FF5ABED6" StrokeThickness="3" />

        <StackPanel Margin="5">
            <Label Margin="5" Content="{i18n:Localize AddGameWindow.Text1}" />
            <TextBox
                Name="TextBox_Input1"
                Margin="5"
                Classes="input1"
                Watermark="{i18n:Localize AddGameWindow.Text2}" />
            <StackPanel Margin="5" Orientation="Horizontal">
                <Label VerticalAlignment="Center" Content="{i18n:Localize AddGameWindow.Text3}" />
                <ComboBox
                    Name="ComboBox_GameVersion"
                    Width="200"
                    Margin="5,0,0,0" />
                <CheckBox
                    Name="CheckBox_Release"
                    Margin="20,0,0,0"
                    Content="{i18n:Localize AddGameWindow.CheckBox1}"
                    IsChecked="True" />
                <CheckBox
                    Name="CheckBox_Snapshot"
                    Margin="20,0,0,0"
                    Content="{i18n:Localize AddGameWindow.CheckBox2}" />
                <CheckBox
                    Name="CheckBox_Other"
                    Margin="20,0,0,0"
                    Content="{i18n:Localize AddGameWindow.CheckBox3}" />
            </StackPanel>

            <StackPanel Margin="5" Orientation="Horizontal">
                <Label VerticalAlignment="Center" Content="{i18n:Localize AddGameWindow.Text4}" />
                <ComboBox
                    Name="ComboBox_LoaderVersion"
                    Width="200"
                    Margin="5,0,0,0"
                    IsEnabled="False" />
                <CheckBox
                    Name="CheckBox_Forge"
                    Margin="20,0,0,0"
                    Content="Forge"
                    IsEnabled="False" />
                <CheckBox
                    Name="CheckBox_Fabric"
                    Margin="20,0,0,0"
                    Content="Fabric"
                    IsEnabled="False" />
                <CheckBox
                    Name="CheckBox_Quilt"
                    Margin="20,0,0,0"
                    Content="Quilt"
                    IsEnabled="False" />
            </StackPanel>
        </StackPanel>

        <Button
            Name="Button_Add"
            Width="80"
            Height="25"
            Margin="0,130,10,10"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Content="{i18n:Localize Button.Add}" />

        <Button
            Name="Button_Add1"
            Width="180"
            Height="25"
            Margin="10,170,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="{i18n:Localize AddGameWindow.Button1}" />

        <Button
            Name="Button_Add2"
            Width="180"
            Height="25"
            Margin="195,170,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="{i18n:Localize AddGameWindow.Button2}" />

        <Button
            Name="Button_Add3"
            Width="180"
            Height="25"
            Margin="380,170,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="{i18n:Localize AddGameWindow.Button3}" />

        <Button
            Name="Button_Add4"
            Width="180"
            Height="25"
            Margin="565,170,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="{i18n:Localize AddGameWindow.Button4}" />

        <Button
            Name="Button_Next"
            Width="80"
            Height="25"
            Margin="0,0,10,10"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Content="{i18n:Localize Button.Next}" />

    </Grid>
</UserControl>
