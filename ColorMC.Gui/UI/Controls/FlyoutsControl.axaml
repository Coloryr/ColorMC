<UserControl
    x:Class="ColorMC.Gui.UI.Controls.FlyoutsControl"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i18n="clr-namespace:ColorMC.Gui.Language"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Rectangle
            Fill="#FFF4F4F5"
            Stroke="#FF5ABED6"
            StrokeThickness="3" />
        <StackPanel Margin="5">
            <Button
                Width="80"
                Height="25"
                Content="{i18n:Localize FlyoutsControl.Button1}" />
            <Button
                Width="80"
                Height="25"
                Content="{i18n:Localize FlyoutsControl.Button2}" />
            <Button
                Width="80"
                Height="25"
                Content="{i18n:Localize FlyoutsControl.Button3}" />
            <Button
                Width="80"
                Height="25"
                Content="{i18n:Localize FlyoutsControl.Button4}" />
            <Button
                Width="80"
                Height="25"
                Content="{i18n:Localize FlyoutsControl.Button5}" />
        </StackPanel>
    </Grid>
</UserControl>
