chmod a+x /usr/share/applications/ColorMC.desktop
chmod a+x /usr/share/ColorMC/ColorMC.Launcher
sudo rm /usr/bin/ColorMC.Launcher
sudo ln -s /usr/share/ColorMC/ColorMC.Launcher /usr/bin/
sudo update-mime-database /usr/share/mime
sudo xdg-settings set default-url-scheme-handler colormc ColorMC.desktop