pkgname="colormc"
pkgver="%version%"
pkgrel="1"
pkgdesc="A Minecraft Launcher"
url="https://www.github.com/Coloryr/ColorMC"
packager="colormc"
arch=("%arch%")
license=("Apache 2.0")
sha512sums=("SKIP" "SKIP" "SKIP" "SKIP" "SKIP" "SKIP")
OPTIONS=(!strip)
source=("libHarfBuzzSharp.so" "libSDL2-2.0.so" "libSkiaSharp.so" 
        "ColorMC.Launcher" "ColorMC.desktop" "colormc.png")
install=colormc.install

package() {
    mkdir -p ${pkgdir}/usr/share/ColorMC
    mkdir -p ${pkgdir}/usr/share/applications
    mkdir -p ${pkgdir}/usr/share/icons

    dir="${pkgdir}/usr/share/ColorMC"

    files=("libHarfBuzzSharp.so" "libSDL2-2.0.so" "libSkiaSharp.so" "ColorMC.Launcher")

    for line in ${files[@]}
    do
        cp ${srcdir}/$line \
            $dir/$line
    done

    cp ${srcdir}/ColorMC.desktop ${pkgdir}/usr/share/applications/ColorMC.desktop
    cp ${srcdir}/colormc.png ${pkgdir}/usr/share/icons/colormc.png
}
